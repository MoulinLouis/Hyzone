$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 620, Height: 300);

    #Title {
      Group {
        TextButton #CloseButton {
          Anchor: (Right: 12, Top: 4, Width: 64, Height: 24);
          Padding: (Left: 8, Top: 2);
          Text: "Close";
          Style: TextButtonStyle(
            Default: (LabelStyle: (FontSize: 14, TextColor: #f2a247, RenderBold: true)),
            Sounds: $C.@ButtonSounds,
          );
          Background: #000000(0.13);
        }
        Label {
          Anchor: (Left: 0, Right: 0, Top: 2);
          Style: (
            FontSize: 22,
            TextColor: #f2a247,
            RenderBold: true,
            HorizontalAlignment: Center
          );
          Text: "Welcome to Hyvexa";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 16, Right: 16, Top: 8, Bottom: 6);

      Label {
        Anchor: (Top: 4, Left: 0, Right: 0);
        Style: (
          FontSize: 14,
          TextColor: #cfd7dc,
          HorizontalAlignment: Center
        );
        Text: "Choose your mode";
      }

      Group #ModeButtons {
        Anchor: (Top: 12, Left: 0, Right: 0, Height: 130);
        LayoutMode: Left;
        Padding: (Left: 36, Top: 6);

        Group #ParkourCard {
          Anchor: (Width: 258, Height: 120);
          Background: (TexturePath: "../Textures/parkour.png");

          Button #ParkourButton {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Background: #000000(0);
            Style: ButtonStyle(
              Sounds: $C.@ButtonSounds,
            );
          }
        }

        Group {
          Anchor: (Width: 12);
        }

        Group #AscendCard {
          Anchor: (Width: 216, Height: 120);
          Background: (TexturePath: "../Textures/ascend.png");

          Button #AscendButton {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Background: #000000(0);
            Style: ButtonStyle(
              Sounds: $C.@ButtonSounds,
            );
          }
        }
      }


      Group #BannerRow {
        Anchor: (Top: 8, Left: 0, Right: 0, Height: 44);
        LayoutMode: Left;
        Padding: (Left: 64);

        Group #DiscordBanner {
          Anchor: (Width: 220, Height: 44);
          LayoutMode: Left;
          Padding: (Left: 12, Right: 12, Top: 8, Bottom: 8);
          Background: #1f2f57(0.9);

          Group {
            Anchor: (Width: 42, Height: 32);
            Background: (TexturePath: "../Textures/discord.png");
          }

          Group {
            Anchor: (Width: 10);
          }

          Group {
            Anchor: (Width: 140, Height: 28);
            Padding: (Left: 12, Right: 12, Top: 4, Bottom: 4);
            Background: #5865f2(0.95);

            Label {
              Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
              Style: (
                FontSize: 15,
                TextColor: #f3f6ff,
                RenderBold: true,
                HorizontalAlignment: Center,
                VerticalAlignment: Center
              );
              Text: "DISCORD";
            }
          }
        }

        Group {
          Anchor: (Width: 12);
        }

        Group #StoreBanner {
          Anchor: (Width: 220, Height: 44);
          LayoutMode: Left;
          Padding: (Left: 12, Right: 12, Top: 8, Bottom: 8);
          Background: #a35a1a(0.92);

          Group {
            Anchor: (Width: 32, Height: 32);
            Background: (TexturePath: "../Textures/golem.png");
          }

          Group {
            Anchor: (Width: 10);
          }

          Group {
            Anchor: (Width: 140, Height: 28);
            Padding: (Left: 12, Right: 12, Top: 4, Bottom: 4);
            Background: #e28a22(0.96);

            Label {
              Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
              Style: (
                FontSize: 15,
                TextColor: #fff3e4,
                RenderBold: true,
                HorizontalAlignment: Center,
                VerticalAlignment: Center
              );
              Text: "STORE";
            }
          }
        }
      }



    }
  }
}
