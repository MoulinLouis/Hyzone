$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #HubMenuWindow {
    Anchor: (Width: 860, Height: 486);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      // Top accent line
      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #f59e0b;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 300, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "Welcome to Hyvexa";
      }

      Group {
        Anchor: (Right: 16, Top: 10, Width: 72, Height: 32);

        TextButton #CloseButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "Close";
          Style: TextButtonStyle(
            Default: (
              Background: #ffffff(0.06),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ffffff(0.1),
              LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ffffff(0.04),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 16, Right: 16, Top: 8, Bottom: 6);

      Label {
        Anchor: (Top: 4, Left: 0, Right: 0);
        Style: (
          FontSize: 14,
          TextColor: #cfd7dc,
          HorizontalAlignment: Center
        );
        Text: "Choose your mode";
      }

      Group #ModeButtons {
        Anchor: (Top: 12, Left: 0, Right: 0, Height: 318);
        LayoutMode: Top;

        Group #TopModeRow {
          Anchor: (Left: 0, Right: 0, Height: 150);
          LayoutMode: Left;
          Padding: (Left: 126, Top: 6);

          Group #ParkourCard {
            Anchor: (Width: 280, Height: 144);
            OutlineColor: #ffffff(0.06);
            OutlineSize: 1;

            Group {
              Anchor: (Left: 0, Right: 0, Top: 0, Height: 116);
              Background: (TexturePath: "../Textures/parkour.png");
            }

            Group {
              Anchor: (Left: 0, Right: 0, Bottom: 0, Height: 28);
              Background: #ffffff(0.03);
              Label {
                Anchor: (Left: 10, Right: 10, Top: 0, Bottom: 0);
                Style: (FontSize: 11, TextColor: #8a9bae, HorizontalAlignment: Center, VerticalAlignment: Center);
                Text: "Jump, run and climb through challenging obstacle courses";
              }
            }

            TextButton #ParkourButton {
              Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
              Text: "";
              Style: TextButtonStyle(
                Default: (Background: #ffffff(0.0)),
                Hovered: (Background: #ffffff(0.06)),
                Pressed: (Background: #ffffff(0.03)),
                Sounds: $C.@ButtonSounds,
              );
            }
          }

          Group {
            Anchor: (Width: 16);
          }

          Group #AscendCard {
            Anchor: (Width: 280, Height: 144);
            OutlineColor: #ffffff(0.06);
            OutlineSize: 1;

            Group {
              Anchor: (Left: 0, Right: 0, Top: 0, Height: 116);
              Background: (TexturePath: "../Textures/ascend.png");
            }

            Group {
              Anchor: (Left: 0, Right: 0, Bottom: 0, Height: 28);
              Background: #ffffff(0.03);
              Label {
                Anchor: (Left: 10, Right: 10, Top: 0, Bottom: 0);
                Style: (FontSize: 11, TextColor: #8a9bae, HorizontalAlignment: Center, VerticalAlignment: Center);
                Text: "Build your robot army and rise through the ascensions";
              }
            }

            TextButton #AscendButton {
              Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
              Text: "";
              Style: TextButtonStyle(
                Default: (Background: #ffffff(0.0)),
                Hovered: (Background: #ffffff(0.06)),
                Pressed: (Background: #ffffff(0.03)),
                Sounds: $C.@ButtonSounds,
              );
            }
          }
        }

        Group #BottomModeRow {
          Anchor: (Left: 0, Right: 0, Top: 14, Height: 150);
          LayoutMode: Left;
          Padding: (Left: 126, Top: 6);

          Group #PurgeCard {
            Anchor: (Width: 280, Height: 144);
            OutlineColor: #ffffff(0.06);
            OutlineSize: 1;

            Group {
              Anchor: (Left: 0, Right: 0, Top: 0, Height: 116);
              Background: (TexturePath: "../Textures/purge.png");
            }

            Group {
              Anchor: (Left: 0, Right: 0, Bottom: 0, Height: 28);
              Background: #ffffff(0.03);
              Label {
                Anchor: (Left: 10, Right: 10, Top: 0, Bottom: 0);
                Style: (FontSize: 11, TextColor: #8a9bae, HorizontalAlignment: Center, VerticalAlignment: Center);
                Text: "Fight waves of zombies and loot powerful weapons";
              }
            }

            TextButton #PurgeButton {
              Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
              Text: "";
              Style: TextButtonStyle(
                Default: (Background: #ffffff(0.0)),
                Hovered: (Background: #ffffff(0.06)),
                Pressed: (Background: #ffffff(0.03)),
                Sounds: $C.@ButtonSounds,
              );
            }
          }

          Group {
            Anchor: (Width: 16);
          }

          Group #RunOrFallCard {
            Anchor: (Width: 280, Height: 144);
            OutlineColor: #ffffff(0.06);
            OutlineSize: 1;

            Group {
              Anchor: (Left: 0, Right: 0, Top: 0, Height: 116);
              Background: (TexturePath: "../Textures/runorfall.png");
            }

            Group {
              Anchor: (Left: 0, Right: 0, Bottom: 0, Height: 28);
              Background: #ffffff(0.03);
              Label {
                Anchor: (Left: 10, Right: 10, Top: 0, Bottom: 0);
                Style: (FontSize: 11, TextColor: #8a9bae, HorizontalAlignment: Center, VerticalAlignment: Center);
                Text: "Race against others on crumbling platforms";
              }
            }

            TextButton #RunOrFallButton {
              Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
              Text: "";
              Style: TextButtonStyle(
                Default: (Background: #ffffff(0.0)),
                Hovered: (Background: #ffffff(0.06)),
                Pressed: (Background: #ffffff(0.03)),
                Sounds: $C.@ButtonSounds,
              );
            }
          }
        }
      }


      Group #BannerRow {
        Anchor: (Top: 10, Left: 0, Right: 0, Height: 44);
        LayoutMode: Left;
        Padding: (Left: 188);

        Button #DiscordBannerButton {
          Anchor: (Width: 220, Height: 44);
          LayoutMode: Left;
          Padding: (Left: 12, Right: 12, Top: 8, Bottom: 8);
          Background: #1f2f57(0.9);
          Style: ButtonStyle(
            Default: (Background: #1f2f57(0.9)),
            Hovered: (Background: #2a3d6a(0.95)),
            Pressed: (Background: #344a7a(0.98)),
            Sounds: $C.@ButtonSounds,
          );

          Group {
            Anchor: (Width: 42, Height: 32);
            Background: (TexturePath: "../Textures/discord.png");
          }

          Group {
            Anchor: (Width: 10);
          }

          Group #DiscordLabel {
            Anchor: (Width: 140, Height: 28);
            Padding: (Left: 12, Right: 12, Top: 4, Bottom: 4);
            Background: #5865f2(0.95);

            Label {
              Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
              Style: (
                FontSize: 15,
                TextColor: #f3f6ff,
                RenderBold: true,
                HorizontalAlignment: Center,
                VerticalAlignment: Center
              );
              Text: "DISCORD";
            }
          }

        }

        Group {
          Anchor: (Width: 12);
        }

        Button #StoreBannerButton {
          Anchor: (Width: 220, Height: 44);
          LayoutMode: Left;
          Padding: (Left: 12, Right: 12, Top: 8, Bottom: 8);
          Background: #a35a1a(0.92);
          Style: ButtonStyle(
            Default: (Background: #a35a1a(0.92)),
            Hovered: (Background: #b4661f(0.95)),
            Pressed: (Background: #c17023(0.98)),
            Sounds: $C.@ButtonSounds,
          );

          Group {
            Anchor: (Width: 32, Height: 32);
            Background: (TexturePath: "../Textures/golem.png");
          }

          Group {
            Anchor: (Width: 10);
          }

          Group #StoreLabel {
            Anchor: (Width: 140, Height: 28);
            Padding: (Left: 12, Right: 12, Top: 4, Bottom: 4);
            Background: #e28a22(0.96);

            Label {
              Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
              Style: (
                FontSize: 15,
                TextColor: #fff3e4,
                RenderBold: true,
                HorizontalAlignment: Center,
                VerticalAlignment: Center
              );
              Text: "STORE";
            }
          }

        }
      }



    }
  }
}
