$C = "../Common.ui";

$C.@PageOverlay {
  Background: #000000(0.0);
  Group #HudLayer {
    Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);

    Group #RunHudRoot {
      Anchor: (Right: 20, Top: 400, Width: 320, Height: 280);
      Background: #000000(0.0);
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 10, Bottom: 10);

      Group #InfoBox {
        Anchor: (Left: 0, Right: 0, Height: 260);
        Background: #000000(0.4);
        Padding: (Left: 10, Right: 10, Top: 8, Bottom: 24);
        LayoutMode: Top;

        Label #PlayerNameText {
          Anchor: (Left: 0, Right: 0);
          Style: (
            FontSize: 18,
            TextColor: #ff7fb0,
            RenderBold: true,
            HorizontalAlignment: Center
          );
          Text: "HYVEXA HUB";
        }

        Label #ServerSelectorHintLine1 {
          Anchor: (Left: 0, Right: 0, Top: 6);
          Style: (
            FontSize: 17,
            TextColor: #ffffff,
            RenderBold: true,
            HorizontalAlignment: Center
          );
          Text: "Right click on the Game Selector";
        }

        Label #ServerSelectorHintLine2 {
          Anchor: (Left: 0, Right: 0, Top: 2);
          Style: (
            FontSize: 17,
            TextColor: #ffffff,
            RenderBold: true,
            HorizontalAlignment: Center
          );
          Text: "item to choose your mode.";
        }

        Group {
          Anchor: (Height: 8, Top: 6);
        }

        Label #ServerIpText {
          Anchor: (Left: 0, Right: 0, Top: 0);
          Style: (
            FontSize: 17,
            TextColor: #ff7fb0,
            HorizontalAlignment: Center
          );
          Text: "IP: play.hyvexa.com";
        }

        Group {
          Anchor: (Height: 8, Top: 14);
        }

        Label #SupportUsTitle {
          Anchor: (Left: 0, Right: 0, Top: 0);
          Style: (
            FontSize: 18,
            TextColor: #ffd166,
            RenderBold: true
          );
          Text: "Support Hyvexa ( /store )";
        }

        Group #SupportUsLine1Row {
          Anchor: (Left: 0, Right: 0, Top: 2, Height: 20);
          LayoutMode: Left;

          Group {
            Anchor: (Width: 18, Height: 18);
            Background: (TexturePath: "../Textures/star.png");
          }

          Group {
            Anchor: (Width: 6);
          }

          Label #SupportUsLine1Text {
            Style: (
              FontSize: 17,
              TextColor: #e7f1f4
            );
            Text: "Exclusive Ranks";
          }
        }

        Group #SupportUsLine2Row {
          Anchor: (Left: 0, Right: 0, Top: 2, Height: 20);
          LayoutMode: Left;

          Group {
            Anchor: (Width: 18, Height: 18);
            Background: (TexturePath: "../Textures/storm.png");
          }

          Group {
            Anchor: (Width: 6);
          }

          Label #SupportUsLine2Text {
            Style: (
              FontSize: 17,
              TextColor: #e7f1f4
            );
            Text: "Speed Boost (not for maps)";
          }
        }

        Label #SupportUsStoreLink {
          Anchor: (Left: 0, Right: 0, Top: 10);
          Style: (
            FontSize: 18,
            TextColor: #ffd166,
            RenderBold: true,
            HorizontalAlignment: Center
          );
          Text: "store.hyvexa.com";
        }
      }
    }
  }
}
