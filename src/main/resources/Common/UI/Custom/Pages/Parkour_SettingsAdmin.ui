$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 420, Height: 430);

    #Title {
      Group {
        TextButton #BackButton {
          Anchor: (Left: 12, Top: 4, Width: 64, Height: 24);
          Padding: (Left: 8, Top: 2);
          Text: "< Back";
          Style: TextButtonStyle(
            Default: (LabelStyle: (FontSize: 14, TextColor: #93844c, RenderBold: true)),
            Sounds: $C.@ButtonSounds,
          );
          Background: #000000(0.13);
        }
        $C.@Title {
          @Text = "Parkour Settings";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 6, Bottom: 12);

      Label {
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Adjust global parkour settings.";
      }

      Label {
        Anchor: (Top: 8);
        Style: (FontSize: 13, TextColor: #cfd7dc);
        Text: "Fall respawn time (seconds)";
      }

      $C.@TextField #FallRespawnField {
        Anchor: (Height: 26, Top: 4);
        Style: (FontSize: 14, TextColor: #ffffff(0.85));
      }

      Label #CurrentValue {
        Anchor: (Top: 6);
        Style: (FontSize: 12, TextColor: #9fb0ba);
        Text: "";
      }

      Label {
        Anchor: (Top: 8);
        Style: (FontSize: 13, TextColor: #cfd7dc);
        Text: "Idle fall respawn for OPs";
      }

      Group {
        Anchor: (Top: 4, Height: 22);
        LayoutMode: Left;

        Label #IdleFallOpValue {
          Anchor: (Width: 120);
          Style: (FontSize: 12, TextColor: #9fb0ba);
          Text: "";
        }

        $C.@TextButton #IdleFallOpToggle {
          Anchor: (Width: 120, Height: 22);
          Text: "Toggle";
        }
      }

      $C.@TextButton #SaveSettingsButton {
        Anchor: (Height: 22, Width: 160, Top: 8);
        Text: "Save";
      }

      Label {
        Anchor: (Top: 10);
        Style: (FontSize: 13, TextColor: #cfd7dc);
        Text: "Rank thresholds";
      }

      Label #RankThresholds {
        Anchor: (Top: 4);
        Style: (FontSize: 12, TextColor: #9fb0ba);
        Text: "";
      }

      Label #RankBronze {
        Anchor: (Top: 4);
        Style: (FontSize: 12, TextColor: #cd7f32);
        Text: "";
      }

      Label #RankSilver {
        Anchor: (Top: 2);
        Style: (FontSize: 12, TextColor: #c0c0c0);
        Text: "";
      }

      Label #RankGold {
        Anchor: (Top: 2);
        Style: (FontSize: 12, TextColor: #ffd700);
        Text: "";
      }

      Label #RankPlatinum {
        Anchor: (Top: 2);
        Style: (FontSize: 12, TextColor: #9fd3c7);
        Text: "";
      }

      Label #RankDiamond {
        Anchor: (Top: 2);
        Style: (FontSize: 12, TextColor: #4dd7ff);
        Text: "";
      }

      Label #RankMaster {
        Anchor: (Top: 2);
        Style: (FontSize: 12, TextColor: #ff7fb0);
        Text: "";
      }
    }
  }
}

$C.@BackButton {}
