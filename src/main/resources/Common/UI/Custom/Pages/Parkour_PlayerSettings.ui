$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 460, Height: 270);

    #Title {
      Group {
        TextButton #BackButton {
          Anchor: (Left: 12, Top: 4, Width: 64, Height: 24);
          Padding: (Left: 8, Top: 2);
          Text: "Close";
          Style: TextButtonStyle(
            Default: (LabelStyle: (FontSize: 14, TextColor: #93844c, RenderBold: true)),
            Sounds: $C.@ButtonSounds,
          );
          Background: #000000(0.13);
        }
        $C.@Title {
          @Text = "Player Settings";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 6, Bottom: 12);

      Label {
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Control player visibility preferences.";
      }

      Group {
        Anchor: (Top: 12, Left: 0, Right: 0, Height: 24);
        LayoutMode: Left;

        $C.@TextButton #HideAllButton {
          Anchor: (Height: 24, Width: 200);
          Text: "Hide players";
        }

        Group {
          Anchor: (Width: 8);
        }

        $C.@TextButton #ShowAllButton {
          Anchor: (Height: 24, Width: 200);
          Text: "Show players";
        }
      }

      Label {
        Anchor: (Top: 12);
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Run HUD visibility.";
      }

      Group {
        Anchor: (Top: 8, Left: 0, Right: 0, Height: 24);
        LayoutMode: Left;

        $C.@TextButton #HideHudButton {
          Anchor: (Height: 24, Width: 200);
          Text: "Hide HUD";
        }

        Group {
          Anchor: (Width: 8);
        }

        $C.@TextButton #ShowHudButton {
          Anchor: (Height: 24, Width: 200);
          Text: "Show HUD";
        }
      }
    }
  }
}

$C.@BackButton {}
