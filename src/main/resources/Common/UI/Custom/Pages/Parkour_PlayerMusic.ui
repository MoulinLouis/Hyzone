$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 460, Height: 270);

    #Title {
      Group {
        TextButton #BackButton {
          Anchor: (Left: 12, Top: 4, Width: 64, Height: 24);
          Padding: (Left: 8, Top: 2);
          Text: "< Back";
          Style: TextButtonStyle(
            Default: (LabelStyle: (FontSize: 14, TextColor: #93844c, RenderBold: true)),
            Sounds: $C.@ButtonSounds,
          );
          Background: #000000(0.13);
        }
        $C.@Title {
          @Text = "Music Settings";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 6, Bottom: 12);

      Label {
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Music selection (developer items).";
      }

      Label #CurrentMusicLabel {
        Anchor: (Top: 8);
        Style: (
          FontSize: 14,
          TextColor: #c8d6df
        );
        Text: "Now Playing: Zelda OST";
      }

      Group {
        Anchor: (Top: 10, Left: 0, Right: 0, Height: 24);
        LayoutMode: Left;

        $C.@TextButton #PlayZeldaMusicButton {
          Anchor: (Height: 24, Width: 200);
          Text: "Play Zelda OST";
        }

        Group {
          Anchor: (Width: 8);
        }

        $C.@TextButton #PlayCelesteMusicButton {
          Anchor: (Height: 24, Width: 200);
          Text: "Play Celeste OST";
        }
      }

      Group {
        Anchor: (Top: 8, Left: 0, Right: 0, Height: 24);
        LayoutMode: Left;

        $C.@TextButton #PlayDefaultMusicButton {
          Anchor: (Height: 24, Width: 200);
          Text: "Default Music";
        }

        Group {
          Anchor: (Width: 8);
        }

        $C.@TextButton #PlayNoMusicButton {
          Anchor: (Height: 24, Width: 200);
          Text: "No Music";
        }
      }
    }
  }
}

$C.@BackButton {}
