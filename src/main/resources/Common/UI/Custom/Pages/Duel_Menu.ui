$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 420, Height: 440);

    #Title {
      Group {
        $C.@Title {
          @Text = "Duel Menu";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 16, Right: 16, Top: 8, Bottom: 12);

      Label {
        Anchor: (Top: 4);
        Style: (FontSize: 13, TextColor: #cfd7dc);
        Text: "Queue for a duel race.";
      }

      Label #QueueStatus {
        Anchor: (Top: 6);
        Style: (FontSize: 12, TextColor: #9fb0ba);
        Text: "";
      }

      Group {
        Anchor: (Height: 24, Top: 12, Left: 0, Right: 0);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 60);
        }

        $C.@TextButton #QueueButton {
          Anchor: (Height: 24, Width: 288);
          Text: "";
        }
      }

      Label {
        Anchor: (Top: 8);
        Style: (FontSize: 12, TextColor: #9fb0ba);
        Text: "Opponent visibility";
      }

      Label #OpponentStatus {
        Anchor: (Top: 6);
        Style: (FontSize: 12, TextColor: #9fb0ba);
        Text: "";
      }

      Group {
        Anchor: (Height: 24, Top: 8, Left: 0, Right: 0);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 60);
        }

        $C.@TextButton #OpponentButton {
          Anchor: (Height: 24, Width: 288);
          Text: "";
        }
      }

      Label {
        Anchor: (Top: 10);
        Style: (FontSize: 12, TextColor: #9fb0ba);
        Text: "Map categories";
      }

      Group {
        Anchor: (Height: 24, Top: 6, Left: 0, Right: 0);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 60);
        }

        Group {
          Anchor: (Height: 24, Width: 288);
          LayoutMode: Left;

          Label {
            Anchor: (Width: 192);
            Style: (FontSize: 12, TextColor: #cfd7dc);
            Text: "Easy";
          }

          $C.@TextButton #EasyToggleButton {
            Anchor: (Height: 24, Width: 96);
            Text: "";
          }
        }
      }

      Group {
        Anchor: (Height: 24, Top: 4, Left: 0, Right: 0);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 60);
        }

        Group {
          Anchor: (Height: 24, Width: 288);
          LayoutMode: Left;

          Label {
            Anchor: (Width: 192);
            Style: (FontSize: 12, TextColor: #cfd7dc);
            Text: "Medium";
          }

          $C.@TextButton #MediumToggleButton {
            Anchor: (Height: 24, Width: 96);
            Text: "";
          }
        }
      }

      Group {
        Anchor: (Height: 24, Top: 4, Left: 0, Right: 0);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 60);
        }

        Group {
          Anchor: (Height: 24, Width: 288);
          LayoutMode: Left;

          Label {
            Anchor: (Width: 192);
            Style: (FontSize: 12, TextColor: #cfd7dc);
            Text: "Hard";
          }

          $C.@TextButton #HardToggleButton {
            Anchor: (Height: 24, Width: 96);
            Text: "";
          }
        }
      }

      Group {
        Anchor: (Height: 24, Top: 4, Left: 0, Right: 0);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 60);
        }

        Group {
          Anchor: (Height: 24, Width: 288);
          LayoutMode: Left;

          Label {
            Anchor: (Width: 192);
            Style: (FontSize: 12, TextColor: #cfd7dc);
            Text: "Insane";
          }

          $C.@TextButton #InsaneToggleButton {
            Anchor: (Height: 24, Width: 96);
            Text: "";
          }
        }
      }

      Group {
        Anchor: (Height: 24, Top: 8, Left: 0, Right: 0);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 60);
        }

        $C.@TextButton #ActiveMatchesButton {
          Anchor: (Height: 24, Width: 288);
          Text: "Active Matches";
        }
      }

      Group {
        Anchor: (Height: 24, Top: 8, Left: 0, Right: 0);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 60);
        }

        $C.@TextButton #LeaderboardButton {
          Anchor: (Height: 24, Width: 288);
          Text: "Leaderboard";
        }
      }
    }
  }
}
