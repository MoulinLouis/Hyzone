$C = "../Common.ui";

Group {
  LayoutMode: Left;
  Anchor: (Left: 2, Right: 2, Bottom: 6, Height: 40, Width: 500);
  Background: $C.@InputBoxBackground;
  Padding: (Left: 8, Right: 8, Top: 6);

  Label #MessageIndex {
    Anchor: (Width: 24);
    Style: (
      FontSize: 13,
      RenderBold: true,
      TextColor: #93844c
    );
    Text: "1";
  }

  Label #MessageText {
    FlexWeight: 1;
    Style: (
      FontSize: 13,
      TextColor: #cfd7dc
    );
    Text: "Message";
  }

  TextButton #RemoveButton {
    Anchor: (Width: 90, Height: 22);
    Text: "Remove";
    Style: TextButtonStyle(
      Default: (LabelStyle: (FontSize: 13, TextColor: #ff8a8a, RenderBold: true)),
      Sounds: $C.@ButtonSounds,
    );
    Background: #000000(0.18);
  }
}
