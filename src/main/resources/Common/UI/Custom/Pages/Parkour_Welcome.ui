$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 480, Height: 320);

    #Title {
      Group {
        $C.@Title {
          @Text = "- HYVEXA -";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 16, Right: 16, Top: 8, Bottom: 12);

      Label {
        Anchor: (Top: 4);
        Style: (FontSize: 14, TextColor: #cfd7dc);
        Text: "Welcome to the Hyvexa Parkour Server!";
      }

      Label {
        Anchor: (Top: 4);
        Style: (FontSize: 14, TextColor: #cfd7dc);
        Text: "Use the hotbar items to start maps and manage your progress:";
      }

      Group {
        LayoutMode: Top;
        Anchor: (Top: 8);

        Label {
          Style: (FontSize: 14, TextColor: #9fd3c7);
          Text: "- Select a map";
        }
        Label {
          Style: (FontSize: 14, TextColor: #9fd3c7);
          Text: "- Leaderboards";
        }
        Label {
          Style: (FontSize: 14, TextColor: #9fd3c7);
          Text: "- My stats";
        }
        Label {
          Style: (FontSize: 14, TextColor: #cfd7dc);
          Text: "During a map:";
        }
        Label {
          Style: (FontSize: 14, TextColor: #9fd3c7);
          Text: "- Reset current map";
        }
        Label {
          Style: (FontSize: 14, TextColor: #9fd3c7);
          Text: "- Restart to checkpoint";
        }
        Label {
          Style: (FontSize: 14, TextColor: #9fd3c7);
          Text: "- Leave map";
        }
      }

      Label {
        Anchor: (Top: 8);
        Style: (FontSize: 13, TextColor: #9fb0ba);
        Text: "Type /pkitem if your items are missing.";
      }

      $C.@TextButton #CloseButton {
        Anchor: (Height: 24, Width: 140, Top: 12);
        Text: "Got it";
      }
    }
  }
}
