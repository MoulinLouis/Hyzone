$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 520, Height: 560);

    #Title {
      Group {
        TextButton #BackButton {
          Anchor: (Left: 12, Top: 4, Width: 64, Height: 24);
          Padding: (Left: 8, Top: 2);
          Text: "< Back";
          Style: TextButtonStyle(
            Default: (LabelStyle: (FontSize: 14, TextColor: #93844c, RenderBold: true)),
            Sounds: $C.@ButtonSounds,
          );
          Background: #000000(0.13);
        }
        $C.@Title {
          @Text = "Players";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 6, Bottom: 12);

      Label {
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Browse player progress and stats.";
      }

      Label {
        Anchor: (Top: 6);
        Style: (FontSize: 12, TextColor: #9fb0ba);
        Text: "Search";
      }

      $C.@TextField #PlayerSearchField {
        Anchor: (Height: 24, Top: 4);
        Style: (FontSize: 13, TextColor: #ffffff(0.85));
      }

      Label #EmptyText {
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "";
      }

      Group #PlayerList {
        Anchor: (Width: 490, Top: 8);
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        Padding: (Left: 6, Right: 6);
        ScrollbarStyle: $C.@DefaultScrollbarStyle;

        Group #PlayerCards {
          LayoutMode: Top;
        }
      }

      Group #Pagination {
        Anchor: (Top: 6, Height: 22, Width: 490);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 65);
        }

        $C.@TextButton #PrevPageButton {
          Anchor: (Width: 110, Height: 22);
          Text: "< Prev";
        }

        Group #PageLabelWrap {
          Anchor: (Width: 140, Height: 22);
          LayoutMode: Left;

          Group {
            Anchor: (Width: 35);
          }

          Label #PageLabel {
            Anchor: (Width: 70);
            Style: (FontSize: 12, TextColor: #9fb0ba);
            Text: "";
          }

          Group {
            Anchor: (Width: 35);
          }
        }

        $C.@TextButton #NextPageButton {
          Anchor: (Width: 110, Height: 22);
          Text: "Next >";
        }

        Group {
          Anchor: (Width: 65);
        }
      }
    }
  }
}

$C.@BackButton {}
