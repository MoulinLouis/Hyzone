$C = "../Common.ui";

Group {
  Anchor: (Width: 120, Height: 40);
  LayoutMode: Full;

  // Tab label
  Label #TabLabel {
    Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 4);
    Style: (FontSize: 14, TextColor: #8b9bb0, HorizontalAlignment: Center, VerticalAlignment: Center);
    Text: "Tab";
  }

  // Active accent underline (hidden by default)
  Group #TabAccent {
    Anchor: (Left: 8, Right: 8, Bottom: 0, Height: 3);
    Background: #6366f1;
    Visible: false;
  }

  // Clickable overlay
  TextButton #TabButton {
    Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
    Text: "";
    Style: TextButtonStyle(
      Default: (
        Background: #000000(0.01),
        LabelStyle: (FontSize: 1, TextColor: #000000(0.01), HorizontalAlignment: Center, VerticalAlignment: Center)
      ),
      Hovered: (
        Background: #ffffff(0.06),
        LabelStyle: (FontSize: 1, TextColor: #000000(0.01), HorizontalAlignment: Center, VerticalAlignment: Center)
      ),
      Pressed: (
        Background: #ffffff(0.03),
        LabelStyle: (FontSize: 1, TextColor: #000000(0.01), HorizontalAlignment: Center, VerticalAlignment: Center)
      ),
      Sounds: $C.@ButtonSounds,
    );
  }
}
