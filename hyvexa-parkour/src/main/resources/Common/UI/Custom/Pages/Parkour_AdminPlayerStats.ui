$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #AdminPlayerStatsWindow {
    Anchor: (Width: 700, Height: 600);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      // Top accent line
      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #f59e0b;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 300, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "Player Stats";
      }

      Group {
        Anchor: (Right: 16, Top: 10, Width: 72, Height: 32);

        TextButton #BackButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "< Back";
          Style: TextButtonStyle(
            Default: (
              Background: #ffffff(0.06),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ffffff(0.1),
              LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ffffff(0.04),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 6, Bottom: 12);

      Label {
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Player overview";
      }

      Group {
        Anchor: (Top: 6, Height: 20);
        LayoutMode: Left;

        Label {
          Anchor: (Width: 70);
          Style: (FontSize: 13, TextColor: #9fb0ba);
          Text: "Name";
        }

        Label #PlayerName {
          FlexWeight: 1;
          Style: (FontSize: 13, TextColor: #cfd7dc);
          Text: "";
        }
      }

      Group {
        Anchor: (Top: 2, Height: 20);
        LayoutMode: Left;

        Label {
          Anchor: (Width: 70);
          Style: (FontSize: 13, TextColor: #9fb0ba);
          Text: "UUID";
        }

        Label #PlayerUuid {
          FlexWeight: 1;
          Style: (FontSize: 12, TextColor: #cfd7dc);
          Text: "";
        }
      }

      Group {
        Anchor: (Top: 2, Height: 20);
        LayoutMode: Left;

        Label {
          Anchor: (Width: 70);
          Style: (FontSize: 13, TextColor: #9fb0ba);
          Text: "Rank";
        }

        Label #PlayerRank {
          FlexWeight: 1;
          Style: (FontSize: 13, TextColor: #cfd7dc, RenderBold: true);
          Text: "";
        }
      }

      Group {
        Anchor: (Top: 2, Height: 20);
        LayoutMode: Left;

        Label {
          Anchor: (Width: 70);
          Style: (FontSize: 13, TextColor: #9fb0ba);
          Text: "XP";
        }

        Label #PlayerXp {
          FlexWeight: 1;
          Style: (FontSize: 13, TextColor: #cfd7dc);
          Text: "";
        }
      }

      Group {
        Anchor: (Top: 2, Height: 20);
        LayoutMode: Left;

        Label {
          Anchor: (Width: 70);
          Style: (FontSize: 13, TextColor: #9fb0ba);
          Text: "Maps";
        }

        Label #PlayerMaps {
          FlexWeight: 1;
          Style: (FontSize: 13, TextColor: #cfd7dc);
          Text: "";
        }
      }

      Group {
        Anchor: (Top: 2, Height: 20);
        LayoutMode: Left;

        Label {
          Anchor: (Width: 70);
          Style: (FontSize: 13, TextColor: #9fb0ba);
          Text: "Playtime";
        }

        Label #PlayerPlaytime {
          FlexWeight: 1;
          Style: (FontSize: 13, TextColor: #cfd7dc);
          Text: "";
        }
      }

      Group {
        Anchor: (Top: 2, Height: 20);
        LayoutMode: Left;

        Label {
          Anchor: (Width: 70);
          Style: (FontSize: 13, TextColor: #9fb0ba);
          Text: "VIP";
        }

        Label #PlayerVip {
          FlexWeight: 1;
          Style: (FontSize: 13, TextColor: #cfd7dc);
          Text: "";
        }
      }

      Group {
        Anchor: (Top: 2, Height: 20);
        LayoutMode: Left;

        Label {
          Anchor: (Width: 70);
          Style: (FontSize: 13, TextColor: #9fb0ba);
          Text: "Founder";
        }

        Label #PlayerFounder {
          FlexWeight: 1;
          Style: (FontSize: 13, TextColor: #cfd7dc);
          Text: "";
        }
      }

      Group #ActionButtons {
        Anchor: (Top: 10, Height: 80, Width: 670);
        LayoutMode: Top;

        Group {
          Anchor: (Height: 24, Width: 670);
          LayoutMode: Left;

          $C.@TextButton #TeleportToPlayerButton {
            Anchor: (Width: 230, Height: 24);
            Text: "Teleport To Player";
          }

          Group {
            Anchor: (Width: 8);
          }

          $C.@TextButton #TeleportPlayerHereButton {
            Anchor: (Width: 260, Height: 24);
            Text: "Teleport Player Here";
          }

          Group {
            Anchor: (Width: 8);
          }

          $C.@TextButton #KillPlayerButton {
            Anchor: (Width: 100, Height: 24);
            Text: "Kill";
          }
        }

        Group {
          Anchor: (Top: 4, Height: 24, Width: 670);
          LayoutMode: Left;

          $C.@TextButton #GiveFlyButton {
            Anchor: (Width: 160, Height: 24);
            Text: "Give Fly";
          }

          Group {
            Anchor: (Width: 8);
          }

          $C.@TextButton #RemoveFlyButton {
            Anchor: (Width: 170, Height: 24);
            Text: "Remove Fly";
          }

          Group {
            Anchor: (Width: 8);
          }

          $C.@TextButton #ResetInventoryButton {
            Anchor: (Width: 200, Height: 24);
            Text: "Reset Inventory";
          }
        }

        Group {
          Anchor: (Top: 4, Height: 24, Width: 670);
          LayoutMode: Left;

          $C.@TextButton #ClearAllProgressButton {
            Anchor: (Width: 220, Height: 24);
            Text: "Clear All Progress";
          }

          Group {
            Anchor: (Width: 8);
          }

          $C.@TextButton #ClearMapProgressButton {
            Anchor: (Width: 240, Height: 24);
            Text: "Clear Map Progress";
          }
        }
      }

      Label #ActionStatus {
        Anchor: (Top: 6, Height: 20);
        Style: (FontSize: 12, TextColor: #d9b072);
        Text: "";
      }

      Label {
        Anchor: (Top: 6);
        Style: (FontSize: 13, TextColor: #9fb0ba);
        Text: "Map stats";
      }

      Group #MapList {
        Anchor: (Width: 670, Top: 6);
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        Padding: (Left: 6, Right: 6);
        ScrollbarStyle: $C.@DefaultScrollbarStyle;

        Group #PlayerMapCards {
          LayoutMode: Top;
        }
      }

      Label #EmptyText {
        Anchor: (Top: 6);
        Style: (
          FontSize: 12,
          TextColor: #9fb0ba
        );
        Text: "";
      }
    }
  }
}

$C.@BackButton {}
