$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #GlobalMessageAdminWindow {
    Anchor: (Width: 560, Height: 420);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      // Top accent line
      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #f59e0b;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 300, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "Global Messages";
      }

      Group {
        Anchor: (Right: 16, Top: 10, Width: 72, Height: 32);

        TextButton #BackButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "< Back";
          Style: TextButtonStyle(
            Default: (
              Background: #ffffff(0.06),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ffffff(0.1),
              LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ffffff(0.04),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 6, Bottom: 12);

      Label {
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Rotate global chat messages for all players.";
      }

      Label {
        Anchor: (Top: 10);
        Style: (
          FontSize: 12,
          TextColor: #9fb0ba
        );
        Text: "Use {link} to insert a clickable Discord link.";
      }

      Label {
        Anchor: (Top: 10);
        Style: (
          FontSize: 13,
          TextColor: #cfd7dc
        );
        Text: "Interval (minutes)";
      }

      $C.@TextField #IntervalField {
        Anchor: (Height: 26, Top: 4);
        Style: (FontSize: 14, TextColor: #ffffff(0.85));
      }

      $C.@TextButton #IntervalSaveButton {
        Anchor: (Height: 22, Width: 160, Top: 6);
        Text: "Save Interval";
      }

      Label {
        Anchor: (Top: 12);
        Style: (
          FontSize: 13,
          TextColor: #cfd7dc
        );
        Text: "New message";
      }

      $C.@TextField #MessageField {
        Anchor: (Height: 26, Top: 4);
        Style: (FontSize: 14, TextColor: #ffffff(0.85));
      }

      $C.@TextButton #MessageAddButton {
        Anchor: (Height: 22, Width: 140, Top: 6);
        Text: "Add Message";
      }

      Group #MessageList {
        Anchor: (Width: 520, Top: 10, Height: 140);
        LayoutMode: TopScrolling;
        Padding: (Left: 6, Right: 6);
        ScrollbarStyle: $C.@DefaultScrollbarStyle;

        Group #MessageCards {
          LayoutMode: Top;
        }
      }

      Label #EmptyText {
        Anchor: (Top: 6);
        Style: (
          FontSize: 12,
          TextColor: #9fb0ba
        );
        Text: "";
      }
    }
  }
}

$C.@BackButton {}
