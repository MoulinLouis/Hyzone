$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #RecommendationWindow {
    Anchor: (Width: 440, Height: 240);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      // Top accent line
      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #10b981;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 300, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "Having Trouble?";
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 20, Right: 20, Top: 12, Bottom: 12);

      Label {
        Anchor: (Top: 8);
        Style: (FontSize: 15, TextColor: #cfd7dc);
        Text: "Struggling with this map?";
      }

      Label {
        Anchor: (Top: 12);
        Style: (FontSize: 14, TextColor: #9fb0ba);
        Text: "You've failed several times without progress.";
      }

      Label {
        Anchor: (Top: 12);
        Style: (FontSize: 14, TextColor: #9fb0ba);
        Text: "Try a different map or enable Practice Mode?";
      }

      Group {
        Anchor: (Height: 28, Top: 16, Left: 0, Right: 0);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 8);
        }

        $C.@TextButton #TryDifferentButton {
          Anchor: (Height: 28, Width: 130);
          Text: "Different Map";
        }

        Group {
          Anchor: (Width: 8);
        }

        $C.@TextButton #PracticeModeButton {
          Anchor: (Height: 28, Width: 100);
          Text: "Practice";
        }

        Group {
          Anchor: (Width: 8);
        }

        $C.@TextButton #ContinueButton {
          Anchor: (Height: 28, Width: 100);
          Text: "Continue";
        }
      }
    }
  }
}
