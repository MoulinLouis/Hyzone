$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #AdminIndexWindow {
    Anchor: (Width: 420, Height: 520);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      // Top accent line
      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #f59e0b;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 300, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "Parkour Admin";
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 14, Right: 14, Top: 10, Bottom: 10);

      Label {
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Manage maps, progress, and settings.";
      }

      Group {
        Anchor: (Left: 2, Right: 2, Top: 10, Height: 46, Width: 390);
        Background: $C.@InputBoxBackground;

        Button #MapsButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          LayoutMode: Left;
          Padding: (Left: 10, Right: 10, Top: 8, Bottom: 8);
          Background: #00000000;
          Style: ButtonStyle(
            Default: (Background: #00000000),
            Hovered: (Background: #ffffff(0.08)),
            Pressed: (Background: #ffffff(0.03)),
            Sounds: $C.@ButtonSounds,
          );

          Label #MapsLabel {
            Style: (
              FontSize: 16,
              RenderBold: true,
              TextColor: #93844c
            );
            Text: "Maps";
          }
        }
      }

      Group {
        Anchor: (Left: 2, Right: 2, Top: 8, Height: 46, Width: 390);
        Background: $C.@InputBoxBackground;

        Button #ProgressButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          LayoutMode: Left;
          Padding: (Left: 10, Right: 10, Top: 8, Bottom: 8);
          Background: #00000000;
          Style: ButtonStyle(
            Default: (Background: #00000000),
            Hovered: (Background: #ffffff(0.08)),
            Pressed: (Background: #ffffff(0.03)),
            Sounds: $C.@ButtonSounds,
          );

          Label #ProgressLabel {
            Style: (
              FontSize: 16,
              RenderBold: true,
              TextColor: #93844c
            );
            Text: "Player Progress";
          }
        }
      }

      Group {
        Anchor: (Left: 2, Right: 2, Top: 8, Height: 46, Width: 390);
        Background: $C.@InputBoxBackground;

        Button #PlayersButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          LayoutMode: Left;
          Padding: (Left: 10, Right: 10, Top: 8, Bottom: 8);
          Background: #00000000;
          Style: ButtonStyle(
            Default: (Background: #00000000),
            Hovered: (Background: #ffffff(0.08)),
            Pressed: (Background: #ffffff(0.03)),
            Sounds: $C.@ButtonSounds,
          );

          Label #PlayersLabel {
            Style: (
              FontSize: 16,
              RenderBold: true,
              TextColor: #93844c
            );
            Text: "Players";
          }
        }
      }

      Group {
        Anchor: (Left: 2, Right: 2, Top: 8, Height: 46, Width: 390);
        Background: $C.@InputBoxBackground;

        Button #SettingsButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          LayoutMode: Left;
          Padding: (Left: 10, Right: 10, Top: 8, Bottom: 8);
          Background: #00000000;
          Style: ButtonStyle(
            Default: (Background: #00000000),
            Hovered: (Background: #ffffff(0.08)),
            Pressed: (Background: #ffffff(0.03)),
            Sounds: $C.@ButtonSounds,
          );

          Label #SettingsLabel {
            Style: (
              FontSize: 16,
              RenderBold: true,
              TextColor: #93844c
            );
            Text: "Settings";
          }
        }
      }

      Group {
        Anchor: (Left: 2, Right: 2, Top: 8, Height: 46, Width: 390);
        Background: $C.@InputBoxBackground;

        Button #PlaytimeButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          LayoutMode: Left;
          Padding: (Left: 10, Right: 10, Top: 8, Bottom: 8);
          Background: #00000000;
          Style: ButtonStyle(
            Default: (Background: #00000000),
            Hovered: (Background: #ffffff(0.08)),
            Pressed: (Background: #ffffff(0.03)),
            Sounds: $C.@ButtonSounds,
          );

          Label #PlaytimeLabel {
            Style: (
              FontSize: 16,
              RenderBold: true,
              TextColor: #93844c
            );
            Text: "Playtime";
          }
        }
      }

      Group {
        Anchor: (Left: 2, Right: 2, Top: 8, Height: 46, Width: 390);
        Background: $C.@InputBoxBackground;

        Button #PopulationButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          LayoutMode: Left;
          Padding: (Left: 10, Right: 10, Top: 8, Bottom: 8);
          Background: #00000000;
          Style: ButtonStyle(
            Default: (Background: #00000000),
            Hovered: (Background: #ffffff(0.08)),
            Pressed: (Background: #ffffff(0.03)),
            Sounds: $C.@ButtonSounds,
          );

          Label #PopulationLabel {
            Style: (
              FontSize: 16,
              RenderBold: true,
              TextColor: #93844c
            );
            Text: "Population History";
          }
        }
      }

      Group {
        Anchor: (Left: 2, Right: 2, Top: 8, Height: 46, Width: 390);
        Background: $C.@InputBoxBackground;

        Button #GlobalMessageButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          LayoutMode: Left;
          Padding: (Left: 10, Right: 10, Top: 8, Bottom: 8);
          Background: #00000000;
          Style: ButtonStyle(
            Default: (Background: #00000000),
            Hovered: (Background: #ffffff(0.08)),
            Pressed: (Background: #ffffff(0.03)),
            Sounds: $C.@ButtonSounds,
          );

          Label #GlobalMessageLabel {
            Style: (
              FontSize: 16,
              RenderBold: true,
              TextColor: #93844c
            );
            Text: "Global Messages";
          }
        }
      }

      Label {
        Anchor: (Top: 12);
        Style: (
          FontSize: 13,
          TextColor: #cfd7dc
        );
        Text: "Global announcement";
      }

      $C.@TextField #AnnouncementField {
        Anchor: (Height: 26, Top: 4);
        Style: (FontSize: 14, TextColor: #ffffff(0.85));
      }

      TextButton #AnnouncementSendButton {
        Anchor: (Height: 22, Width: 140, Top: 6);
        Padding: (Left: 8, Top: 2);
        Text: "Broadcast";
        Style: TextButtonStyle(
          Default: (
            Background: #000000(0.13),
            LabelStyle: (FontSize: 14, TextColor: #93844c, RenderBold: true)
          ),
          Hovered: (
            Background: #000000(0.22),
            LabelStyle: (FontSize: 14, TextColor: #93844c, RenderBold: true)
          ),
          Sounds: $C.@ButtonSounds,
        );
      }

    }
  }
}

$C.@BackButton {}
