$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #DuelMenuWindow {
    Anchor: (Width: 440, Height: 440);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #ef4444;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 300, Height: 24);
        Style: (FontSize: 20, TextColor: #f0f4f8, RenderBold: true);
        Text: "Duel Menu";
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 10, Bottom: 12);

      // --- Queue ---
      Group {
        Anchor: (Left: 0, Right: 0, Height: 62);
        LayoutMode: Full;
        Background: #ffffff(0.03);
        OutlineColor: #ffffff(0.04);
        OutlineSize: 1;

        Group {
          Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 4);
          Background: #ef4444;
        }

        Label {
          Anchor: (Left: 16, Top: 10, Width: 220, Height: 18);
          Style: (FontSize: 14, TextColor: #cfd7dc);
          Text: "Queue for a duel race";
        }

        Label #QueueStatus {
          Anchor: (Left: 16, Top: 32, Width: 220, Height: 18);
          Style: (FontSize: 13, TextColor: #9fb0ba);
          Text: "";
        }

        Group {
          Anchor: (Right: 12, Top: 12, Width: 140, Height: 38);

          TextButton #QueueButton {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "";
            Style: TextButtonStyle(
              Default: (
                Background: #ffffff(0.08),
                LabelStyle: (FontSize: 14, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Hovered: (
                Background: #ffffff(0.14),
                LabelStyle: (FontSize: 14, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Pressed: (
                Background: #ffffff(0.05),
                LabelStyle: (FontSize: 14, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Sounds: $C.@ButtonSounds,
            );
          }
        }
      }

      // --- Opponent ---
      Group {
        Anchor: (Left: 0, Right: 0, Height: 46, Top: 6);
        LayoutMode: Full;
        Background: #ffffff(0.03);
        OutlineColor: #ffffff(0.04);
        OutlineSize: 1;

        Group {
          Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 4);
          Background: #f97316;
        }

        Label #OpponentStatus {
          Anchor: (Left: 16, Top: 0, Bottom: 0, Width: 200);
          Style: (FontSize: 14, TextColor: #9fb0ba, VerticalAlignment: Center);
          Text: "";
        }

        Group {
          Anchor: (Right: 12, Top: 9, Width: 140, Height: 28);

          TextButton #OpponentButton {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "";
            Style: TextButtonStyle(
              Default: (
                Background: #ffffff(0.08),
                LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Hovered: (
                Background: #ffffff(0.14),
                LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Pressed: (
                Background: #ffffff(0.05),
                LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Sounds: $C.@ButtonSounds,
            );
          }
        }
      }

      // --- Map Categories ---
      Group {
        Anchor: (Left: 0, Right: 0, Height: 140, Top: 8);
        LayoutMode: Full;
        Background: #ffffff(0.03);
        OutlineColor: #ffffff(0.04);
        OutlineSize: 1;

        Group {
          Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 4);
          Background: #3b82f6;
        }

        Label {
          Anchor: (Left: 16, Top: 10, Width: 200, Height: 18);
          Style: (FontSize: 14, TextColor: #9fb0ba);
          Text: "Map categories";
        }

        // Category rows
        Group {
          Anchor: (Left: 16, Right: 12, Top: 34, Bottom: 10);
          LayoutMode: Top;

          // Easy
          Group {
            Anchor: (Left: 0, Right: 0, Height: 24);
            LayoutMode: Full;

            Label {
              Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 200);
              Style: (FontSize: 13, TextColor: #cfd7dc, VerticalAlignment: Center);
              Text: "Easy";
            }

            Group {
              Anchor: (Right: 0, Top: 0, Width: 80, Height: 24);

              TextButton #EasyToggleButton {
                Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
                Text: "";
                Style: TextButtonStyle(
                  Default: (
                    Background: #ffffff(0.08),
                    LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
                  ),
                  Hovered: (
                    Background: #ffffff(0.14),
                    LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
                  ),
                  Pressed: (
                    Background: #ffffff(0.05),
                    LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
                  ),
                  Sounds: $C.@ButtonSounds,
                );
              }
            }
          }

          // Medium
          Group {
            Anchor: (Left: 0, Right: 0, Height: 24, Top: 2);
            LayoutMode: Full;

            Label {
              Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 200);
              Style: (FontSize: 13, TextColor: #cfd7dc, VerticalAlignment: Center);
              Text: "Medium";
            }

            Group {
              Anchor: (Right: 0, Top: 0, Width: 80, Height: 24);

              TextButton #MediumToggleButton {
                Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
                Text: "";
                Style: TextButtonStyle(
                  Default: (
                    Background: #ffffff(0.08),
                    LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
                  ),
                  Hovered: (
                    Background: #ffffff(0.14),
                    LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
                  ),
                  Pressed: (
                    Background: #ffffff(0.05),
                    LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
                  ),
                  Sounds: $C.@ButtonSounds,
                );
              }
            }
          }

          // Hard
          Group {
            Anchor: (Left: 0, Right: 0, Height: 24, Top: 2);
            LayoutMode: Full;

            Label {
              Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 200);
              Style: (FontSize: 13, TextColor: #cfd7dc, VerticalAlignment: Center);
              Text: "Hard";
            }

            Group {
              Anchor: (Right: 0, Top: 0, Width: 80, Height: 24);

              TextButton #HardToggleButton {
                Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
                Text: "";
                Style: TextButtonStyle(
                  Default: (
                    Background: #ffffff(0.08),
                    LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
                  ),
                  Hovered: (
                    Background: #ffffff(0.14),
                    LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
                  ),
                  Pressed: (
                    Background: #ffffff(0.05),
                    LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
                  ),
                  Sounds: $C.@ButtonSounds,
                );
              }
            }
          }

          // Insane
          Group {
            Anchor: (Left: 0, Right: 0, Height: 24, Top: 2);
            LayoutMode: Full;

            Label {
              Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 200);
              Style: (FontSize: 13, TextColor: #cfd7dc, VerticalAlignment: Center);
              Text: "Insane";
            }

            Group {
              Anchor: (Right: 0, Top: 0, Width: 80, Height: 24);

              TextButton #InsaneToggleButton {
                Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
                Text: "";
                Style: TextButtonStyle(
                  Default: (
                    Background: #ffffff(0.08),
                    LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
                  ),
                  Hovered: (
                    Background: #ffffff(0.14),
                    LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
                  ),
                  Pressed: (
                    Background: #ffffff(0.05),
                    LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
                  ),
                  Sounds: $C.@ButtonSounds,
                );
              }
            }
          }
        }
      }

      // --- Actions ---
      Group {
        Anchor: (Left: 0, Right: 0, Height: 32, Top: 10);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 200, Height: 32);

          TextButton #LeaderboardButton {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "Leaderboard";
            Style: TextButtonStyle(
              Default: (
                Background: #ffffff(0.06),
                LabelStyle: (FontSize: 14, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Hovered: (
                Background: #ffffff(0.1),
                LabelStyle: (FontSize: 14, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Pressed: (
                Background: #ffffff(0.04),
                LabelStyle: (FontSize: 14, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Sounds: $C.@ButtonSounds,
            );
          }
        }

        Group {
          Anchor: (Width: 8);
        }

        Group {
          Anchor: (Width: 200, Height: 32);

          TextButton #ActiveMatchesButton {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "Active Matches";
            Style: TextButtonStyle(
              Default: (
                Background: #ffffff(0.06),
                LabelStyle: (FontSize: 14, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Hovered: (
                Background: #ffffff(0.1),
                LabelStyle: (FontSize: 14, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Pressed: (
                Background: #ffffff(0.04),
                LabelStyle: (FontSize: 14, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Sounds: $C.@ButtonSounds,
            );
          }
        }
      }
    }
  }
}
