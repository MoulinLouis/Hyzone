$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #DuelMenuWindow {
    Anchor: (Width: 420, Height: 440);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      // Top accent line
      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #ef4444;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 300, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "Duel Menu";
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 16, Right: 16, Top: 8, Bottom: 12);

      Label {
        Anchor: (Top: 4);
        Style: (FontSize: 13, TextColor: #cfd7dc);
        Text: "Queue for a duel race.";
      }

      Label #QueueStatus {
        Anchor: (Top: 6);
        Style: (FontSize: 12, TextColor: #9fb0ba);
        Text: "";
      }

      Group {
        Anchor: (Height: 24, Top: 12, Left: 0, Right: 0);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 60);
        }

        $C.@TextButton #QueueButton {
          Anchor: (Height: 24, Width: 288);
          Text: "";
        }
      }

      Label {
        Anchor: (Top: 8);
        Style: (FontSize: 12, TextColor: #9fb0ba);
        Text: "Opponent visibility";
      }

      Label #OpponentStatus {
        Anchor: (Top: 6);
        Style: (FontSize: 12, TextColor: #9fb0ba);
        Text: "";
      }

      Group {
        Anchor: (Height: 24, Top: 8, Left: 0, Right: 0);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 60);
        }

        $C.@TextButton #OpponentButton {
          Anchor: (Height: 24, Width: 288);
          Text: "";
        }
      }

      Label {
        Anchor: (Top: 10);
        Style: (FontSize: 12, TextColor: #9fb0ba);
        Text: "Map categories";
      }

      Group {
        Anchor: (Height: 24, Top: 6, Left: 0, Right: 0);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 60);
        }

        Group {
          Anchor: (Height: 24, Width: 288);
          LayoutMode: Left;

          Label {
            Anchor: (Width: 192);
            Style: (FontSize: 12, TextColor: #cfd7dc);
            Text: "Easy";
          }

          $C.@TextButton #EasyToggleButton {
            Anchor: (Height: 24, Width: 96);
            Text: "";
          }
        }
      }

      Group {
        Anchor: (Height: 24, Top: 4, Left: 0, Right: 0);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 60);
        }

        Group {
          Anchor: (Height: 24, Width: 288);
          LayoutMode: Left;

          Label {
            Anchor: (Width: 192);
            Style: (FontSize: 12, TextColor: #cfd7dc);
            Text: "Medium";
          }

          $C.@TextButton #MediumToggleButton {
            Anchor: (Height: 24, Width: 96);
            Text: "";
          }
        }
      }

      Group {
        Anchor: (Height: 24, Top: 4, Left: 0, Right: 0);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 60);
        }

        Group {
          Anchor: (Height: 24, Width: 288);
          LayoutMode: Left;

          Label {
            Anchor: (Width: 192);
            Style: (FontSize: 12, TextColor: #cfd7dc);
            Text: "Hard";
          }

          $C.@TextButton #HardToggleButton {
            Anchor: (Height: 24, Width: 96);
            Text: "";
          }
        }
      }

      Group {
        Anchor: (Height: 24, Top: 4, Left: 0, Right: 0);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 60);
        }

        Group {
          Anchor: (Height: 24, Width: 288);
          LayoutMode: Left;

          Label {
            Anchor: (Width: 192);
            Style: (FontSize: 12, TextColor: #cfd7dc);
            Text: "Insane";
          }

          $C.@TextButton #InsaneToggleButton {
            Anchor: (Height: 24, Width: 96);
            Text: "";
          }
        }
      }

      Group {
        Anchor: (Height: 24, Top: 8, Left: 0, Right: 0);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 60);
        }

        $C.@TextButton #ActiveMatchesButton {
          Anchor: (Height: 24, Width: 288);
          Text: "Active Matches";
        }
      }

      Group {
        Anchor: (Height: 24, Top: 8, Left: 0, Right: 0);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 60);
        }

        $C.@TextButton #LeaderboardButton {
          Anchor: (Height: 24, Width: 288);
          Text: "Leaderboard";
        }
      }
    }
  }
}
