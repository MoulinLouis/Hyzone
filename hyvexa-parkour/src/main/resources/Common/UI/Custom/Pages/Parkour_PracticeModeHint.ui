$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 420, Height: 240);

    #Title {
      Group {
        $C.@Title {
          @Text = "Try Practice Mode";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 20, Right: 20, Top: 12, Bottom: 12);

      Label {
        Anchor: (Top: 8);
        Style: (FontSize: 15, TextColor: #cfd7dc);
        Text: "Having trouble with this section?";
      }

      Label {
        Anchor: (Top: 12);
        Style: (FontSize: 14, TextColor: #9fb0ba);
        Text: "Practice Mode lets you set custom checkpoints!";
      }

      Label {
        Anchor: (Top: 12);
        Style: (FontSize: 14, TextColor: #9fb0ba);
        Text: "Restart from your checkpoint instead of the start.";
      }

      Label {
        Anchor: (Top: 12);
        Style: (FontSize: 13, TextColor: #f2c04d);
        Text: "Note: Times won't count in Practice Mode.";
      }

      Group {
        Anchor: (Height: 28, Top: 16, Left: 0, Right: 0);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 60);
        }

        $C.@TextButton #EnablePracticeButton {
          Anchor: (Height: 28, Width: 130);
          Text: "Enable Practice";
        }

        Group {
          Anchor: (Width: 8);
        }

        $C.@TextButton #NotNowButton {
          Anchor: (Height: 28, Width: 100);
          Text: "Not Now";
        }
      }
    }
  }
}
