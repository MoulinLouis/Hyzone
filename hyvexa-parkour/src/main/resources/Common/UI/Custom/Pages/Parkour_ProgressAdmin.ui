$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #ProgressAdminWindow {
    Anchor: (Width: 520, Height: 480);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      // Top accent line
      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #f59e0b;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 300, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "Player Progress";
      }

      // Back button
      Group {
        Anchor: (Right: 16, Top: 10, Width: 72, Height: 32);

        TextButton #BackButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "< Back";
          Style: TextButtonStyle(
            Default: (
              Background: #ffffff(0.06),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ffffff(0.1),
              LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ffffff(0.04),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 6, Bottom: 12);

      Label {
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Delete player progress by UUID or purge a map id (XP recalculates).";
      }

      Label {
        Anchor: (Top: 8);
        Style: (FontSize: 13, TextColor: #cfd7dc);
        Text: "Player UUID";
      }

      $C.@TextField #PlayerUuidField {
        Anchor: (Height: 24, Top: 6);
        Style: (FontSize: 13, TextColor: #ffffff(0.85));
      }

      $C.@TextButton #DeleteProgressButton {
        Anchor: (Height: 22, Width: 160, Top: 6);
        Text: "Delete Progress";
      }

      Label #ProgressSummary {
        Anchor: (Top: 6, Height: 36);
        Style: (
          FontSize: 12,
          TextColor: #9fb0ba
        );
        Text: "";
      }

      Label {
        Anchor: (Top: 8);
        Style: (FontSize: 13, TextColor: #cfd7dc);
        Text: "Refresh player progress";
      }

      Label {
        Anchor: (Top: 6);
        Style: (FontSize: 12, TextColor: #9fb0ba);
        Text: "Player Name";
      }

      $C.@TextField #PlayerNameField {
        Anchor: (Height: 24);
        Style: (FontSize: 13, TextColor: #ffffff(0.85));
      }

      $C.@TextButton #RefreshProgressButton {
        Anchor: (Height: 22, Width: 200, Top: 6);
        Text: "Refresh Rank Cache";
      }

      Label #RefreshStatus {
        Anchor: (Top: 6, Height: 30);
        Style: (FontSize: 12, TextColor: #9fb0ba);
        Text: "";
      }

      Label {
        Anchor: (Top: 6);
        Style: (FontSize: 13, TextColor: #cfd7dc);
        Text: "Map progress cleanup";
      }

      Label {
        Anchor: (Top: 6);
        Style: (FontSize: 12, TextColor: #9fb0ba);
        Text: "Map Id";
      }

      $C.@TextField #MapPurgeIdField {
        Anchor: (Height: 24);
        Style: (FontSize: 13, TextColor: #ffffff(0.85));
      }

      $C.@TextButton #PurgeMapButton {
        Anchor: (Height: 22, Width: 200, Top: 6);
        Text: "Purge Map Progress";
      }

      Label #MapPurgeStatus {
        Anchor: (Top: 6, Height: 40);
        Style: (FontSize: 12, TextColor: #9fb0ba);
        Text: "";
      }
    }
  }
}

$C.@BackButton {}
