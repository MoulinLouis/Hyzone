$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 520, Height: 480);

    #Title {
      Group {
        TextButton #BackButton {
          Anchor: (Left: 12, Top: 4, Width: 64, Height: 24);
          Padding: (Left: 8, Top: 2);
          Text: "< Back";
          Style: TextButtonStyle(
            Default: (LabelStyle: (FontSize: 14, TextColor: #93844c, RenderBold: true)),
            Sounds: $C.@ButtonSounds,
          );
          Background: #000000(0.13);
        }
        $C.@Title {
          @Text = "Player Progress";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 6, Bottom: 12);

      Label {
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Delete player progress by UUID or purge a map id.";
      }

      Label {
        Anchor: (Top: 8);
        Style: (FontSize: 13, TextColor: #cfd7dc);
        Text: "Player UUID";
      }

      $C.@TextField #PlayerUuidField {
        Anchor: (Height: 24, Top: 6);
        Style: (FontSize: 13, TextColor: #ffffff(0.85));
      }

      $C.@TextButton #DeleteProgressButton {
        Anchor: (Height: 22, Width: 160, Top: 6);
        Text: "Delete Progress";
      }

      Label #ProgressSummary {
        Anchor: (Top: 6, Height: 36);
        Style: (
          FontSize: 12,
          TextColor: #9fb0ba
        );
        Text: "";
      }

      Label {
        Anchor: (Top: 8);
        Style: (FontSize: 13, TextColor: #cfd7dc);
        Text: "Refresh player progress";
      }

      Label {
        Anchor: (Top: 6);
        Style: (FontSize: 12, TextColor: #9fb0ba);
        Text: "Player Name";
      }

      $C.@TextField #PlayerNameField {
        Anchor: (Height: 24);
        Style: (FontSize: 13, TextColor: #ffffff(0.85));
      }

      $C.@TextButton #RefreshProgressButton {
        Anchor: (Height: 22, Width: 200, Top: 6);
        Text: "Refresh Rank Cache";
      }

      Label #RefreshStatus {
        Anchor: (Top: 6, Height: 30);
        Style: (FontSize: 12, TextColor: #9fb0ba);
        Text: "";
      }

      Label {
        Anchor: (Top: 6);
        Style: (FontSize: 13, TextColor: #cfd7dc);
        Text: "Map progress cleanup";
      }

      Label {
        Anchor: (Top: 6);
        Style: (FontSize: 12, TextColor: #9fb0ba);
        Text: "Map Id";
      }

      $C.@TextField #MapPurgeIdField {
        Anchor: (Height: 24);
        Style: (FontSize: 13, TextColor: #ffffff(0.85));
      }

      Label {
        Anchor: (Top: 6);
        Style: (FontSize: 12, TextColor: #9fb0ba);
        Text: "XP to remove (per player)";
      }

      $C.@TextField #MapPurgeXpField {
        Anchor: (Height: 24);
        Style: (FontSize: 13, TextColor: #ffffff(0.85));
      }

      $C.@TextButton #PurgeMapButton {
        Anchor: (Height: 22, Width: 200, Top: 6);
        Text: "Purge Map Progress";
      }

      Label #MapPurgeStatus {
        Anchor: (Top: 6, Height: 40);
        Style: (FontSize: 12, TextColor: #9fb0ba);
        Text: "";
      }
    }
  }
}

$C.@BackButton {}
