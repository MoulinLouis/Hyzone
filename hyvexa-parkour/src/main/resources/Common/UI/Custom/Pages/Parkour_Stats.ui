$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 520, Height: 360);

    #Title {
      Group {
        TextButton #BackButton {
          Anchor: (Left: 12, Top: 4, Width: 64, Height: 24);
          Padding: (Left: 8, Top: 2);
          Text: "Close";
          Style: TextButtonStyle(
            Default: (LabelStyle: (FontSize: 14, TextColor: #93844c, RenderBold: true)),
            Sounds: $C.@ButtonSounds,
          );
          Background: #000000(0.13);
        }
        $C.@Title {
          @Text = "Parkour Stats";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 6, Bottom: 12);

      Label {
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Your parkour progress overview.";
      }

      Label #StatsPlayerName {
        Anchor: (Top: 8);
        Style: (
          FontSize: 16,
          TextColor: #cfd7dc,
          RenderBold: true
        );
        Text: "Player";
      }

      Group #StatsRows {
        Anchor: (Top: 10, Left: 0, Right: 0, Height: 180);
        LayoutMode: Top;
        Padding: (Left: 2, Right: 2);

        Group {
          LayoutMode: Left;
          Anchor: (Left: 0, Right: 0, Height: 22);

          Label {
            Anchor: (Width: 120);
            Style: (FontSize: 14, TextColor: #f2f5f7);
            Text: "Rank:";
          }
          Label #StatsRankValue {
            FlexWeight: 1;
            Style: (FontSize: 14, TextColor: #62d96b);
            Text: "-";
          }
          Label #StatsRankSuffix {
            Anchor: (Width: 220);
            Style: (FontSize: 14, TextColor: #f2f5f7);
            Text: "";
          }
        }

        Group {
          LayoutMode: Left;
          Anchor: (Left: 0, Right: 0, Height: 22, Top: 2);

          Label {
            Anchor: (Width: 120);
            Style: (FontSize: 14, TextColor: #f2f5f7);
            Text: "XP:";
          }
          Label #StatsXpValue {
            FlexWeight: 1;
            Style: (FontSize: 14, TextColor: #62d96b);
            Text: "-";
          }
        }

        Group {
          LayoutMode: Left;
          Anchor: (Left: 0, Right: 0, Height: 22, Top: 2);

          Label {
            Anchor: (Width: 120);
            Style: (FontSize: 14, TextColor: #f2f5f7);
            Text: "Completed Maps:";
          }
          Label #StatsMapsValue {
            FlexWeight: 1;
            Style: (FontSize: 14, TextColor: #62d96b);
            Text: "0/0";
          }
        }

        Group {
          Anchor: (Height: 8, Top: 6);
        }

      }
    }
  }
}

$C.@BackButton {}
