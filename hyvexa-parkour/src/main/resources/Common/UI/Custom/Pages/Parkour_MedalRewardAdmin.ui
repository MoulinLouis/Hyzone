$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #MedalRewardWindow {
    Anchor: (Width: 740, Height: 520);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #f59e0b;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 300, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "Medal Rewards";
      }

      Group {
        Anchor: (Right: 16, Top: 10, Width: 72, Height: 32);

        TextButton #BackButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "< Back";
          Style: TextButtonStyle(
            Default: (
              Background: #ffffff(0.06),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ffffff(0.1),
              LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ffffff(0.04),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 20, Right: 20, Top: 10, Bottom: 10);

      Label {
        Style: (FontSize: 14, TextColor: #9fb0ba);
        Text: "Feather rewards per medal tier per category.";
      }

      // Column headers
      Group {
        Anchor: (Top: 12, Height: 20);
        LayoutMode: Left;

        Label {
          Anchor: (Width: 120);
          Style: (FontSize: 13, TextColor: #9fb0ba, RenderBold: true);
          Text: "Category";
        }
        Label {
          Anchor: (Width: 140);
          Style: (FontSize: 13, TextColor: #cd7f32, RenderBold: true);
          Text: "Bronze";
        }
        Label {
          Anchor: (Width: 140);
          Style: (FontSize: 13, TextColor: #c0c0c0, RenderBold: true);
          Text: "Silver";
        }
        Label {
          Anchor: (Width: 140);
          Style: (FontSize: 13, TextColor: #ffd700, RenderBold: true);
          Text: "Gold";
        }
        Label {
          Anchor: (Width: 140);
          Style: (FontSize: 13, TextColor: #50C878, RenderBold: true);
          Text: "Author";
        }
      }

      // Easy row
      Group {
        Anchor: (Top: 8, Height: 30);
        LayoutMode: Left;

        Label {
          Anchor: (Width: 120, Height: 30);
          Style: (FontSize: 14, TextColor: #54d28e, RenderBold: true, VerticalAlignment: Center);
          Text: "Easy";
        }
        $C.@TextField #EasyBronze {
          Anchor: (Height: 26, Width: 120);
          Style: (FontSize: 14, TextColor: #ffffff(0.85));
        }
        Group { Anchor: (Width: 20); }
        $C.@TextField #EasySilver {
          Anchor: (Height: 26, Width: 120);
          Style: (FontSize: 14, TextColor: #ffffff(0.85));
        }
        Group { Anchor: (Width: 20); }
        $C.@TextField #EasyGold {
          Anchor: (Height: 26, Width: 120);
          Style: (FontSize: 14, TextColor: #ffffff(0.85));
        }
        Group { Anchor: (Width: 20); }
        $C.@TextField #EasyAuthor {
          Anchor: (Height: 26, Width: 120);
          Style: (FontSize: 14, TextColor: #ffffff(0.85));
        }
      }

      // Medium row
      Group {
        Anchor: (Top: 8, Height: 30);
        LayoutMode: Left;

        Label {
          Anchor: (Width: 120, Height: 30);
          Style: (FontSize: 14, TextColor: #f2c04d, RenderBold: true, VerticalAlignment: Center);
          Text: "Medium";
        }
        $C.@TextField #MediumBronze {
          Anchor: (Height: 26, Width: 120);
          Style: (FontSize: 14, TextColor: #ffffff(0.85));
        }
        Group { Anchor: (Width: 20); }
        $C.@TextField #MediumSilver {
          Anchor: (Height: 26, Width: 120);
          Style: (FontSize: 14, TextColor: #ffffff(0.85));
        }
        Group { Anchor: (Width: 20); }
        $C.@TextField #MediumGold {
          Anchor: (Height: 26, Width: 120);
          Style: (FontSize: 14, TextColor: #ffffff(0.85));
        }
        Group { Anchor: (Width: 20); }
        $C.@TextField #MediumAuthor {
          Anchor: (Height: 26, Width: 120);
          Style: (FontSize: 14, TextColor: #ffffff(0.85));
        }
      }

      // Hard row
      Group {
        Anchor: (Top: 8, Height: 30);
        LayoutMode: Left;

        Label {
          Anchor: (Width: 120, Height: 30);
          Style: (FontSize: 14, TextColor: #ff7a45, RenderBold: true, VerticalAlignment: Center);
          Text: "Hard";
        }
        $C.@TextField #HardBronze {
          Anchor: (Height: 26, Width: 120);
          Style: (FontSize: 14, TextColor: #ffffff(0.85));
        }
        Group { Anchor: (Width: 20); }
        $C.@TextField #HardSilver {
          Anchor: (Height: 26, Width: 120);
          Style: (FontSize: 14, TextColor: #ffffff(0.85));
        }
        Group { Anchor: (Width: 20); }
        $C.@TextField #HardGold {
          Anchor: (Height: 26, Width: 120);
          Style: (FontSize: 14, TextColor: #ffffff(0.85));
        }
        Group { Anchor: (Width: 20); }
        $C.@TextField #HardAuthor {
          Anchor: (Height: 26, Width: 120);
          Style: (FontSize: 14, TextColor: #ffffff(0.85));
        }
      }

      // Insane row
      Group {
        Anchor: (Top: 8, Height: 30);
        LayoutMode: Left;

        Label {
          Anchor: (Width: 120, Height: 30);
          Style: (FontSize: 14, TextColor: #ff4d6d, RenderBold: true, VerticalAlignment: Center);
          Text: "Insane";
        }
        $C.@TextField #InsaneBronze {
          Anchor: (Height: 26, Width: 120);
          Style: (FontSize: 14, TextColor: #ffffff(0.85));
        }
        Group { Anchor: (Width: 20); }
        $C.@TextField #InsaneSilver {
          Anchor: (Height: 26, Width: 120);
          Style: (FontSize: 14, TextColor: #ffffff(0.85));
        }
        Group { Anchor: (Width: 20); }
        $C.@TextField #InsaneGold {
          Anchor: (Height: 26, Width: 120);
          Style: (FontSize: 14, TextColor: #ffffff(0.85));
        }
        Group { Anchor: (Width: 20); }
        $C.@TextField #InsaneAuthor {
          Anchor: (Height: 26, Width: 120);
          Style: (FontSize: 14, TextColor: #ffffff(0.85));
        }
      }

      // Save button
      Group {
        Anchor: (Top: 20, Height: 32);
        LayoutMode: Left;

        $C.@TextButton #SaveButton {
          Anchor: (Height: 28, Width: 200);
          Text: "Save Rewards";
        }

        Group { Anchor: (Width: 12); }

        Label #StatusLabel {
          Anchor: (Height: 28);
          Style: (FontSize: 13, TextColor: #54d28e, VerticalAlignment: Center);
          Text: "";
        }
      }
    }
  }
}

$C.@BackButton {}
