$C = "../Common.ui";

Button {
  LayoutMode: Left;
  Anchor: (Left: 2, Right: 2, Bottom: 6, Height: 36, Width: 580);
  Background: $C.@InputBoxBackground;
  Padding: (Left: 10, Right: 10, Top: 6);
  Style: ButtonStyle(
    Sounds: $C.@ButtonSounds,
  );

  Label #SampleTime {
    Anchor: (Width: 150, Left: 0);
    Style: (
      FontSize: 12,
      TextColor: #93844c,
      RenderBold: true
    );
    Text: "Sep 01 12:00";
  }

  Label #SampleBar {
    Anchor: (Left: 160, Right: 110);
    Style: (
      FontSize: 12,
      TextColor: #cfd7dc
    );
    Text: "";
  }

  Label #SampleCount {
    Anchor: (Width: 100, Right: 0);
    Style: (
      FontSize: 12,
      TextColor: #cfd7dc,
      RenderBold: true
    );
    Text: "0 (0-0)";
  }
}
