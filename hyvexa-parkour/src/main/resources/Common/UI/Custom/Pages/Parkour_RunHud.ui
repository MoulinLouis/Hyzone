$C = "../Common.ui";

$C.@PageOverlay {
  Background: #000000(0.0);
  Group #HudLayer {
    Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);

    Group #RunHudRoot {
      Anchor: (Right: 20, Top: 400, Width: 284, Height: 390);
      LayoutMode: Left;

      Group #InfoAccentBar {
        Anchor: (Width: 4, Top: 0, Bottom: 0);
        Background: #ec4899;
      }

      Group #InfoBox {
        FlexWeight: 1;
        Anchor: (Top: 0, Bottom: 0);
        Background: #0d1620(0.95);
        OutlineColor: #ffffff(0.06);
        OutlineSize: 1;
        LayoutMode: Top;

        Group #InfoImageBanner {
          Anchor: (Width: 200, Height: 93, Top: 18);
          Background: (TexturePath: "../Textures/parkour.png");
        }

        Group #InfoContent {
          Anchor: (Left: 0, Right: 0);
          LayoutMode: Top;
          Padding: (Left: 14, Right: 14, Top: 12, Bottom: 14);

          Label #PlayerNameText {
            Style: (
              FontSize: 13,
              TextColor: #ec4899(0.7),
              RenderUppercase: true,
              LetterSpacing: 2,
              RenderBold: true
            );
            Text: "Parkour";
          }

          Group #InfoSep {
            Anchor: (Left: 0, Width: 30, Height: 2, Top: 6);
            Background: #ec4899;
          }

          Group #PlayerXpRow {
            Anchor: (Left: 0, Right: 0, Top: 10, Height: 20);
            LayoutMode: Left;

            Label #PlayerXpLabel {
              Anchor: (Width: 60);
              Style: (FontSize: 16, TextColor: #9fb0ba);
              Text: "Rank:";
            }

            Label #PlayerXpValue {
              Style: (FontSize: 16, TextColor: #62d96b);
              Text: "0";
            }

            Group #PlayerRankRainbowRow {
              LayoutMode: Left;

              Label #PlayerRankV {
                Anchor: (Width: 10);
                Style: (FontSize: 16, TextColor: #ff4d4d);
                Text: "";
              }
              Label #PlayerRankE {
                Anchor: (Width: 10);
                Style: (FontSize: 16, TextColor: #ffa94d);
                Text: "";
              }
              Label #PlayerRankX {
                Anchor: (Width: 10);
                Style: (FontSize: 16, TextColor: #ffe66d);
                Text: "";
              }
              Label #PlayerRankA {
                Anchor: (Width: 10);
                Style: (FontSize: 16, TextColor: #4cd964);
                Text: "";
              }
              Label #PlayerRankG {
                Anchor: (Width: 10);
                Style: (FontSize: 16, TextColor: #5ac8fa);
                Text: "";
              }
              Label #PlayerRankO {
                Anchor: (Width: 10);
                Style: (FontSize: 16, TextColor: #5e5ce6);
                Text: "";
              }
              Label #PlayerRankD {
                Anchor: (Width: 10);
                Style: (FontSize: 16, TextColor: #b76cff);
                Text: "";
              }
            }
          }

          Group #PlayerMapsRow {
            Anchor: (Left: 0, Right: 0, Top: 4, Height: 20);
            LayoutMode: Left;

            Label #PlayerMapsLabel {
              Anchor: (Width: 60);
              Style: (FontSize: 16, TextColor: #9fb0ba);
              Text: "Maps:";
            }

            Label #PlayerMapsValue {
              FlexWeight: 1;
              Style: (FontSize: 16, TextColor: #62d96b);
              Text: "0/0";
            }
          }

          Label #ServerDateText {
            Anchor: (Left: 0, Right: 0, Top: 6);
            Style: (FontSize: 16, TextColor: #b2c0c7);
            Text: "Music: -";
          }

          Label #ServerIpText {
            Anchor: (Left: 0, Right: 0, Top: 4);
            Style: (
              FontSize: 16,
              TextColor: #ec4899(0.8),
              RenderBold: true
            );
            Text: "IP: play.hyvexa.com";
          }

          Group #InfoDivider {
            Anchor: (Left: 0, Right: 0, Height: 1, Top: 10);
            Background: #ffffff(0.06);
          }

          Label #InfoSupportTitle {
            Anchor: (Top: 10);
            Style: (
              FontSize: 15,
              TextColor: #ffd166,
              RenderBold: true
            );
            Text: "Support Hyvexa (/store)";
          }

          Group #InfoSupportRow1 {
            Anchor: (Left: 0, Right: 0, Top: 6, Height: 20);
            LayoutMode: Left;

            Group {
              Anchor: (Width: 18, Height: 18);
              Background: (TexturePath: "../Textures/star.png");
            }
            Group { Anchor: (Width: 6); }
            Label {
              Style: (FontSize: 16, TextColor: #e7f1f4);
              Text: "Exclusive Ranks";
            }
          }

          Group #InfoSupportRow2 {
            Anchor: (Left: 0, Right: 0, Top: 4, Height: 20);
            LayoutMode: Left;

            Group {
              Anchor: (Width: 18, Height: 18);
              Background: (TexturePath: "../Textures/storm.png");
            }
            Group { Anchor: (Width: 6); }
            Label {
              Style: (FontSize: 16, TextColor: #e7f1f4);
              Text: "Speed Boost";
            }
          }

          Label #InfoStoreLink {
            Anchor: (Top: 8, Left: 0, Right: 0);
            Style: (
              FontSize: 16,
              TextColor: #ffd166,
              RenderBold: true,
              HorizontalAlignment: Center
            );
            Text: "store.hyvexa.com";
          }
        }
      }
    }

    Group #AnnouncementBox {
      Anchor: (Left: 0, Right: 0, Top: 90, Height: 76);
      LayoutMode: Top;
      Padding: (Left: 14, Right: 14, Top: 6, Bottom: 6);

      Label #AnnouncementLine1 {
        Anchor: (Left: 0, Right: 0);
        Style: (
          FontSize: 22,
          TextColor: #e3eef4,
          HorizontalAlignment: Center
        );
        Text: "";
      }

      Label #AnnouncementLine2 {
        Anchor: (Left: 0, Right: 0, Top: 3);
        Style: (
          FontSize: 22,
          TextColor: #e3eef4,
          HorizontalAlignment: Center
        );
        Text: "";
      }

      Label #AnnouncementLine3 {
        Anchor: (Left: 0, Right: 0, Top: 3);
        Style: (
          FontSize: 22,
          TextColor: #e3eef4,
          HorizontalAlignment: Center
        );
        Text: "";
      }
    }

    Label #RunTimerText {
      Anchor: (Left: 0, Right: 0, Top: 45, Height: 38);
      Style: (
        FontSize: 34,
        TextColor: #e7f1f4,
        RenderBold: true,
        HorizontalAlignment: Center
      );
      Text: "";
    }

    Label #RunCheckpointText {
      Anchor: (Left: 0, Right: 0, Top: 83, Height: 22);
      Style: (
        FontSize: 20,
        TextColor: #e7f1f4,
        RenderBold: true,
        HorizontalAlignment: Center
      );
      Text: "";
    }

  }
}
