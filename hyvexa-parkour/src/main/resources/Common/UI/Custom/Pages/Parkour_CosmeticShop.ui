$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #ShopWindow {
    Anchor: (Width: 480, Height: 520);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #6366f1;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 200, Height: 24);
        Style: (FontSize: 20, TextColor: #f0f4f8, RenderBold: true);
        Text: "Cosmetic Shop";
      }

      // Vexa balance
      Group {
        Anchor: (Right: 96, Top: 14, Width: 120, Height: 24);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 18, Height: 18, Top: 2);
          Background: (TexturePath: "../Textures/vexa.png");
        }

        Label #VexaBalance {
          Anchor: (Left: 4, Width: 90, Height: 22);
          Style: (FontSize: 16, TextColor: #22c55e, RenderBold: true, VerticalAlignment: Center);
          Text: "0";
        }
      }

      // Close button
      Group {
        Anchor: (Right: 16, Top: 10, Width: 72, Height: 32);

        TextButton #CloseButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "Close";
          Style: TextButtonStyle(
            Default: (
              Background: #ffffff(0.06),
              LabelStyle: (FontSize: 14, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ffffff(0.1),
              LabelStyle: (FontSize: 14, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ffffff(0.04),
              LabelStyle: (FontSize: 14, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

    // === SCROLLABLE CONTENT ===
    Group #CosmeticList {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: TopScrolling;
      Padding: (Left: 12, Right: 12, Top: 10, Bottom: 12);
      ScrollbarStyle: $C.@DefaultScrollbarStyle;

      Group #CosmeticItems {
        LayoutMode: Top;
      }
    }
  }
}

$C.@BackButton {}
