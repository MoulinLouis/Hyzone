$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 520, Height: 420);

    #Title {
      Group {
        TextButton #BackButton {
          Anchor: (Left: 12, Top: 4, Width: 64, Height: 26);
          Padding: (Left: 8, Top: 3);
          Text: "Close";
          Style: TextButtonStyle(
            Default: (
              Background: #1a2530(0.95),
              LabelStyle: (FontSize: 14, TextColor: #f0f4f8, RenderBold: true)
            ),
            Hovered: (
              Background: #263545,
              LabelStyle: (FontSize: 14, TextColor: #f0f4f8, RenderBold: true)
            ),
            Pressed: (
              Background: #1e2d3a,
              LabelStyle: (FontSize: 14, TextColor: #f0f4f8, RenderBold: true)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
        $C.@Title {
          @Text = "Map Categories";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 6, Bottom: 12);

      Label {
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Choose a difficulty group.";
      }

      Group #CategoryList {
        Anchor: (Width: 490, Top: 6);
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        Padding: (Left: 6, Right: 6);
        ScrollbarStyle: $C.@DefaultScrollbarStyle;

        Group #CategoryCards {
          LayoutMode: Top;
        }
      }
    }
  }
}

$C.@BackButton {}
