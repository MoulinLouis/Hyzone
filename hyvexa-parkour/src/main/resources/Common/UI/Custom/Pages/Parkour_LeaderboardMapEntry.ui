$C = "../Common.ui";

Group {
  LayoutMode: Top;
  Anchor: (Left: 2, Right: 2, Bottom: 6, Height: 52, Width: 470);
  Background: $C.@InputBoxBackground;

  Button #SelectButton {
    Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
    Padding: (Left: 10, Right: 10, Top: 6, Bottom: 6);
    Background: #00000000;
    LayoutMode: Top;
    Style: ButtonStyle(
      Default: (Background: #00000000),
      Hovered: (Background: #ffffff(0.08)),
      Pressed: (Background: #ffffff(0.03)),
      Sounds: $C.@ButtonSounds,
    );

    Label #MapName {
      Style: (
        FontSize: 15,
        RenderBold: true,
        TextColor: #93844c
      );
      Text: "Map";
    }

    Label #MapStatus {
      Anchor: (Top: 2);
      Style: (
        FontSize: 12,
        TextColor: #9fb0ba
      );
      Text: "";
    }
  }
}
