$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 520, Height: 560);

    #Title {
      Group {
        TextButton #BackButton {
          Anchor: (Left: 12, Top: 4, Width: 64, Height: 24);
          Padding: (Left: 8, Top: 2);
          Text: "< Back";
          Style: TextButtonStyle(
            Default: (
              Background: #000000(0.13),
              LabelStyle: (FontSize: 14, TextColor: #93844c, RenderBold: true)
            ),
            Hovered: (
              Background: #000000(0.22),
              LabelStyle: (FontSize: 14, TextColor: #93844c, RenderBold: true)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
        $C.@Title {
          @Text = "Clear Map Progress";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 6, Bottom: 12);

      Label {
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Select a map to clear this player's progress.";
      }

      Label #EmptyText {
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "";
      }

      Group #MapList {
        Anchor: (Width: 490, Top: 8);
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        Padding: (Left: 6, Right: 6);
        ScrollbarStyle: $C.@DefaultScrollbarStyle;

        Group #MapCards {
          LayoutMode: Top;
        }
      }
    }
  }
}

$C.@BackButton {}
