$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #WelcomeWindow {
    Anchor: (Width: 480, Height: 320);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      // Top accent line
      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #10b981;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 300, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "- HYVEXA -";
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 16, Right: 16, Top: 8, Bottom: 12);

      Label {
        Anchor: (Top: 4);
        Style: (FontSize: 14, TextColor: #cfd7dc);
        Text: "Welcome to the Hyvexa Parkour Server!";
      }

      Label {
        Anchor: (Top: 4);
        Style: (FontSize: 14, TextColor: #cfd7dc);
        Text: "Use the hotbar items to start maps and manage your progress:";
      }

      Group {
        LayoutMode: Top;
        Anchor: (Top: 8);

        Label {
          Style: (FontSize: 14, TextColor: #9fd3c7);
          Text: "- Select a map";
        }
        Label {
          Style: (FontSize: 14, TextColor: #9fd3c7);
          Text: "- Leaderboards";
        }
        Label {
          Style: (FontSize: 14, TextColor: #9fd3c7);
          Text: "- My Stats";
        }
        Label {
          Style: (FontSize: 14, TextColor: #cfd7dc);
          Text: "During a map:";
        }
        Label {
          Style: (FontSize: 14, TextColor: #9fd3c7);
          Text: "- Reset current map";
        }
        Label {
          Style: (FontSize: 14, TextColor: #9fd3c7);
          Text: "- Restart to checkpoint";
        }
        Label {
          Style: (FontSize: 14, TextColor: #9fd3c7);
          Text: "- Leave map";
        }
      }

      Label {
        Anchor: (Top: 8);
        Style: (FontSize: 13, TextColor: #9fb0ba);
        Text: "Type /pk items if your items are missing.";
      }

      Group {
        Anchor: (Height: 24, Top: 12, Left: 0, Right: 0);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 96);
        }

        $C.@TextButton #DiscordButton {
          Anchor: (Height: 24, Width: 140);
          Text: "Discord";
        }

        Group {
          Anchor: (Width: 8);
        }

        $C.@TextButton #CloseButton {
          Anchor: (Height: 24, Width: 140);
          Text: "Got it";
        }
      }
    }
  }
}
