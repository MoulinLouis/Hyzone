$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 460, Height: 320);

    #Title {
      Group {
        $C.@Title {
          @Text = "Use Your Map Selector";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 20, Right: 20, Top: 12, Bottom: 12);

      Label {
        Anchor: (Top: 8);
        Style: (FontSize: 15, TextColor: #cfd7dc);
        Text: "Right-click the Map Selector in slot 1";
      }

      Group {
        Anchor: (Height: 80, Top: 12, Left: 0, Right: 0);
        LayoutMode: Left;

        Group {
          FlexWeight: 1;
        }

        Group {
          Anchor: (Width: 280, Height: 80);
          Background: (TexturePath: "../Textures/hotbar_highlight.png");
        }

        Group {
          FlexWeight: 1;
        }
      }

      Label {
        Anchor: (Top: 12);
        Style: (FontSize: 14, TextColor: #9fb0ba);
        Text: "Maps are sorted by difficulty - start with Easy-1!";
      }

      Label {
        Anchor: (Top: 10);
        Style: (FontSize: 13, TextColor: #9fb0ba);
        Text: "Other items let you duel, view stats, and more.";
      }

      Group {
        Anchor: (Height: 32, Top: 20, Left: 0, Right: 0);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 50);
        }

        $C.@TextButton #BackButton {
          Anchor: (Height: 32, Width: 110);
          Text: "Back";
        }

        Group {
          Anchor: (Width: 12);
        }

        $C.@TextButton #ShowMapsButton {
          Anchor: (Height: 32, Width: 180);
          Text: "Show Maps";
        }
      }
    }
  }
}
