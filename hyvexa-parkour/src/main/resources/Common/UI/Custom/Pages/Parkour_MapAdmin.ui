$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #MapAdminWindow {
    Anchor: (Width: 920, Height: 960);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      // Top accent line
      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #f59e0b;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 300, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "Map Admin";
      }

      // Back button
      Group {
        Anchor: (Right: 16, Top: 10, Width: 72, Height: 32);

        TextButton #BackButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "< Back";
          Style: TextButtonStyle(
            Default: (
              Background: #ffffff(0.06),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ffffff(0.1),
              LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ffffff(0.04),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Left;
      Padding: (Left: 12, Right: 12, Top: 6, Bottom: 12);

      Group #MapFormColumn {
        Anchor: (Width: 560);
        LayoutMode: Top;

        Label {
          Style: (
            FontSize: 16,
            TextColor: #93844c,
            RenderBold: true
          );
          Text: "Create or Update";
        }

        Label {
          Text: "Map Id";
          Style: (FontSize: 13, TextColor: #cfd7dc);
        }

        $C.@TextField #MapIdField {
          Anchor: (Height: 26);
          Style: (FontSize: 14, TextColor: #ffffff(0.85));
        }

        Label {
          Text: "Map Name";
          Style: (FontSize: 13, TextColor: #cfd7dc);
          Anchor: (Top: 6);
        }

        $C.@TextField #MapNameField {
          Anchor: (Height: 26);
          Style: (FontSize: 14, TextColor: #ffffff(0.85));
        }

        Label {
          Text: "Category";
          Style: (FontSize: 13, TextColor: #cfd7dc);
          Anchor: (Top: 6);
        }

        $C.@TextField #MapCategoryField {
          Anchor: (Height: 26);
          Style: (FontSize: 14, TextColor: #ffffff(0.85));
        }

        Label {
          Text: "First Completion XP";
          Style: (FontSize: 13, TextColor: #cfd7dc);
          Anchor: (Top: 6);
        }

        $C.@TextField #MapFirstCompletionXpField {
          Anchor: (Height: 26);
          Style: (FontSize: 14, TextColor: #ffffff(0.85));
        }

        Label {
          Text: "Difficulty (lower first)";
          Style: (FontSize: 13, TextColor: #cfd7dc);
          Anchor: (Top: 6);
        }

        $C.@TextField #MapDifficultyField {
          Anchor: (Height: 26);
          Style: (FontSize: 14, TextColor: #ffffff(0.85));
        }

        Label {
          Text: "Order (lower first)";
          Style: (FontSize: 13, TextColor: #cfd7dc);
          Anchor: (Top: 6);
        }

        $C.@TextField #MapOrderField {
          Anchor: (Height: 26);
          Style: (FontSize: 14, TextColor: #ffffff(0.85));
        }

        Label {
          Text: "Free Fall (disable fall respawn time)";
          Style: (FontSize: 13, TextColor: #cfd7dc);
          Anchor: (Top: 6);
        }

        Group {
          LayoutMode: Left;
          Anchor: (Top: 4, Height: 22);

          Label #FreeFallValue {
            Anchor: (Width: 120);
            Style: (FontSize: 12, TextColor: #9fb0ba);
            Text: "";
          }

          $C.@TextButton #FreeFallToggle {
            Anchor: (Width: 120, Height: 22);
            Text: "Toggle";
          }
        }

        Label {
          Text: "Enable duel matchmaking";
          Style: (FontSize: 13, TextColor: #cfd7dc);
          Anchor: (Top: 6);
        }

        Group {
          LayoutMode: Left;
          Anchor: (Top: 4, Height: 22);

          Label #DuelEnabledValue {
            Anchor: (Width: 120);
            Style: (FontSize: 12, TextColor: #9fb0ba);
            Text: "";
          }

          $C.@TextButton #DuelEnabledToggle {
            Anchor: (Width: 120, Height: 22);
            Text: "Toggle";
          }
        }

        Label {
          Text: "Map Active";
          Style: (FontSize: 13, TextColor: #cfd7dc);
          Anchor: (Top: 6);
        }

        Group {
          LayoutMode: Left;
          Anchor: (Top: 4, Height: 22);

          Label #ActiveValue {
            Anchor: (Width: 120);
            Style: (FontSize: 12, TextColor: #9fb0ba);
            Text: "";
          }

          $C.@TextButton #ActiveToggle {
            Anchor: (Width: 120, Height: 22);
            Text: "Toggle";
          }
        }

        Label {
          Text: "Mithril Sword (run item)";
          Style: (FontSize: 13, TextColor: #cfd7dc);
          Anchor: (Top: 6);
        }

        Group {
          LayoutMode: Left;
          Anchor: (Top: 4, Height: 22);

          Label #MithrilSwordValue {
            Anchor: (Width: 120);
            Style: (FontSize: 12, TextColor: #9fb0ba);
            Text: "";
          }

          $C.@TextButton #MithrilSwordToggle {
            Anchor: (Width: 120, Height: 22);
            Text: "Toggle";
          }
        }

        Label {
          Text: "Mithril Daggers (run item)";
          Style: (FontSize: 13, TextColor: #cfd7dc);
          Anchor: (Top: 6);
        }

        Group {
          LayoutMode: Left;
          Anchor: (Top: 4, Height: 22);

          Label #MithrilDaggersValue {
            Anchor: (Width: 120);
            Style: (FontSize: 12, TextColor: #9fb0ba);
            Text: "";
          }

          $C.@TextButton #MithrilDaggersToggle {
            Anchor: (Width: 120, Height: 22);
            Text: "Toggle";
          }
        }

        Label {
          Text: "Glider (run item)";
          Style: (FontSize: 13, TextColor: #cfd7dc);
          Anchor: (Top: 6);
        }

        Group {
          LayoutMode: Left;
          Anchor: (Top: 4, Height: 22);

          Label #GliderValue {
            Anchor: (Width: 120);
            Style: (FontSize: 12, TextColor: #9fb0ba);
            Text: "";
          }

          $C.@TextButton #GliderToggle {
            Anchor: (Width: 120, Height: 22);
            Text: "Toggle";
          }
        }

        Label #FlyZoneValue {
          Anchor: (Top: 6);
          Style: (FontSize: 13, TextColor: #9fb0ba);
          Text: "Fly Zone: (none)";
        }

        Label #SelectedMapText {
          Anchor: (Top: 6);
          Style: (FontSize: 13, TextColor: #9fb0ba);
          Text: "Selected: (none)";
        }

        Group {
          LayoutMode: Left;
          Padding: (Top: 8);

          Group {
            Anchor: (Width: 280);
            LayoutMode: Top;

            $C.@TextButton #CreateMapButton {
              Anchor: (Height: 22, Width: 260);
              Text: "Create";
            }

            $C.@TextButton #SetStartButton {
              Anchor: (Height: 22, Width: 260, Top: 6);
              Text: "Set Start";
            }

            $C.@TextButton #SetFinishButton {
              Anchor: (Height: 22, Width: 260, Top: 6);
              Text: "Set Finish";
            }

            $C.@TextButton #AddCheckpointButton {
              Anchor: (Height: 22, Width: 260, Top: 6);
              Text: "Add Checkpoint";
            }

            $C.@TextButton #SetStartTriggerButton {
              Anchor: (Height: 22, Width: 260, Top: 6);
              Text: "Start Trigger";
            }

            $C.@TextButton #SetFlyZone1Button {
              Anchor: (Height: 22, Width: 260, Top: 6);
              Text: "Set Fly Corner 1";
            }

            $C.@TextButton #SetFlyZone2Button {
              Anchor: (Height: 22, Width: 260, Top: 6);
              Text: "Set Fly Corner 2";
            }
          }

          Group {
            Anchor: (Width: 280);
            LayoutMode: Top;

            $C.@TextButton #SetLeaveTriggerButton {
              Anchor: (Height: 22, Width: 260);
              Text: "Leave Trigger";
            }

            $C.@TextButton #SetLeaveTeleportButton {
              Anchor: (Height: 22, Width: 260, Top: 6);
              Text: "Leave Teleport";
            }

            $C.@TextButton #UpdateMapButton {
              Anchor: (Height: 22, Width: 260, Top: 6);
              Text: "Update Selected";
            }

            $C.@TextButton #DeleteMapButton {
              Anchor: (Height: 22, Width: 260, Top: 6);
              Text: "Delete Map";
            }

            $C.@TextButton #RefreshButton {
              Anchor: (Height: 22, Width: 260, Top: 6);
              Text: "Refresh";
            }

            $C.@TextButton #CreateHoloButton {
              Anchor: (Height: 22, Width: 260, Top: 6);
              Text: "Create Holo";
            }

            $C.@TextButton #ClearFlyZoneButton {
              Anchor: (Height: 22, Width: 260, Top: 6);
              Text: "Clear Fly Zone";
            }
          }
        }
      }

      Group #MapSpacer {
        Anchor: (Width: 12);
      }

      Group #MapListColumn {
        Anchor: (Width: 320);
        LayoutMode: Top;

        Label {
          Anchor: (Top: 10);
          Style: (
            FontSize: 16,
            TextColor: #93844c,
            RenderBold: true
          );
          Text: "Maps";
        }

        Label {
          Anchor: (Top: 6);
          Style: (FontSize: 12, TextColor: #9fb0ba);
          Text: "Search";
        }

        $C.@TextField #MapSearchField {
          Anchor: (Height: 24, Top: 4);
          Style: (FontSize: 13, TextColor: #ffffff(0.85));
        }

        Group #MapList {
          Anchor: (Width: 320, Top: 6, Height: 750);
          FlexWeight: 1;
          LayoutMode: TopScrolling;
          Padding: (Left: 6, Right: 6);
          ScrollbarStyle: $C.@DefaultScrollbarStyle;

          Group #MapCards {
            LayoutMode: Top;
          }
        }
      }
    }
  }
}

$C.@BackButton {}
