$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #TutorialWindow {
    Anchor: (Width: 460, Height: 300);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      // Top accent line
      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #10b981;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 300, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "Practice Mode";
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 20, Right: 20, Top: 12, Bottom: 12);

      Label {
        Anchor: (Top: 8);
        Style: (FontSize: 14, TextColor: #cfd7dc);
        Text: "Struggling? Practice Mode lets you set custom checkpoints!";
      }

      Label {
        Anchor: (Top: 12);
        Style: (FontSize: 14, TextColor: #9fb0ba);
        Text: "When enabled, you can:";
      }

      Group {
        LayoutMode: Top;
        Anchor: (Top: 8);

        Label {
          Style: (FontSize: 14, TextColor: #54d28e);
          Text: "- Set checkpoints anywhere";
        }
        Label {
          Anchor: (Top: 4);
          Style: (FontSize: 14, TextColor: #54d28e);
          Text: "- Teleport back to your checkpoint anytime";
        }
        Label {
          Anchor: (Top: 4);
          Style: (FontSize: 14, TextColor: #54d28e);
          Text: "- Practice difficult sections";
        }
      }

      Label {
        Anchor: (Top: 12);
        Style: (FontSize: 13, TextColor: #9fb0ba);
        Text: "Note: Times don't count in Practice Mode.";
      }

      Group {
        Anchor: (Height: 28, Top: 16, Left: 0, Right: 0);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 20);
        }

        $C.@TextButton #BackButton {
          Anchor: (Height: 28, Width: 70);
          Text: "Back";
        }

        Group {
          Anchor: (Width: 12);
        }

        $C.@TextButton #GotItButton {
          Anchor: (Height: 28, Width: 120);
          Text: "Got It!";
        }
      }
    }
  }
}
