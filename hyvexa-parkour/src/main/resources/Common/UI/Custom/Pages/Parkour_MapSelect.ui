$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #MapSelectWindow {
    Anchor: (Width: 520, Height: 560);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      // Top accent line
      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #10b981;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 300, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "Parkour Maps";
      }

      Group {
        Anchor: (Right: 16, Top: 10, Width: 72, Height: 32);

        TextButton #BackButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "< Back";
          Style: TextButtonStyle(
            Default: (
              Background: #ffffff(0.06),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ffffff(0.1),
              LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ffffff(0.04),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 6, Bottom: 12);

      Label {
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Select a map to teleport to its start.";
      }

      Label {
        Anchor: (Top: 10);
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Filters.";
      }

      Group {
        Anchor: (Top: 6, Left: 0, Right: 0, Height: 30);
        LayoutMode: Left;

        Button #HideCompletedToggle {
          Anchor: (Height: 30, Width: 220);
          Padding: (Left: 8, Right: 8, Top: 4, Bottom: 4);
          LayoutMode: Left;
          Style: ButtonStyle(
            Default: (Background: #1a2530(0.95)),
            Hovered: (Background: #263545),
            Pressed: (Background: #1e2d3a),
            Sounds: $C.@ButtonSounds,
          );

          Group #HideCompletedCheckbox {
            Anchor: (Width: 18, Height: 18, Top: 2);
            Background: #3b4b57;

            Group {
              Anchor: (Left: 2, Top: 2, Right: 2, Bottom: 2);
              Background: #1a2530(0.95);
            }

            Group #HideCompletedCheckboxMark {
              Anchor: (Left: 4, Top: 4, Width: 10, Height: 10);
              Background: #10b981;
            }
          }

          Group { Anchor: (Width: 8); }

          Label #HideCompletedLabel {
            Style: (
              FontSize: 17,
              TextColor: #f0f4f8,
              RenderBold: true
            );
            Text: "Hide completed maps";
          }
        }
      }

      Group #MapList {
        Anchor: (Width: 490, Top: 6);
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        Padding: (Left: 6, Right: 6);
        ScrollbarStyle: $C.@DefaultScrollbarStyle;

        Group #MapCards {
          LayoutMode: Top;
        }
      }
    }
  }
}

$C.@BackButton {}
