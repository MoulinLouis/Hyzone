$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #TutorialWindow {
    Anchor: (Width: 420, Height: 330);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      // Top accent line
      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #10b981;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 300, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "Welcome to Parkour!";
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 20, Right: 20, Top: 12, Bottom: 12);

      Group {
        Anchor: (Height: 128, Top: 8, Left: 0, Right: 0);
        LayoutMode: Left;

        Group {
          FlexWeight: 1;
        }

        Group {
          Anchor: (Width: 192, Height: 128);
          Background: (TexturePath: "../Textures/logo_hyvexa.png");
        }

        Group {
          FlexWeight: 1;
        }
      }

      Label {
        Anchor: (Top: 12);
        Style: (FontSize: 16, TextColor: #cfd7dc);
        Text: "Thanks for joining Hyvexa!";
      }

      Label {
        Anchor: (Top: 12);
        Style: (FontSize: 14, TextColor: #9fb0ba);
        Text: "We'll show you the basics in just a few screens.";
      }

      Group {
        Anchor: (Height: 28, Top: 20, Left: 0, Right: 0);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 120);
        }

        $C.@TextButton #ContinueButton {
          Anchor: (Height: 28, Width: 140);
          Text: "Continue";
        }
      }
    }
  }
}
