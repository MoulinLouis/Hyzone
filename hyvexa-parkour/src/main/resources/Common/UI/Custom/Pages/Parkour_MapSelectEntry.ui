$C = "../Common.ui";

Group {
  LayoutMode: Left;
  Anchor: (Left: 0, Right: 0, Bottom: 6, Height: 76);
  Background: #1a2530(0.95);

  Group #AccentBar {
    Anchor: (Width: 8, Top: 0, Bottom: 0);
    Background: #10b981;
  }

  Button #SelectButton {
    FlexWeight: 1;
    Background: #00000000;
    LayoutMode: Left;
    Style: ButtonStyle(
      Default: (Background: #00000000),
      Hovered: (Background: #ffffff(0.05)),
      Pressed: (Background: #ffffff(0.02)),
      Sounds: $C.@ButtonSounds,
    );

    Group {
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 12, Top: 8, Bottom: 8);

      Label #MapName {
        Style: (
          FontSize: 15,
          RenderBold: true,
          TextColor: #f0f4f8
        );
        Text: "Map";
      }

      Label #MapStatus {
        Anchor: (Top: 2);
        Style: (
          FontSize: 12,
          TextColor: #9fb0ba
        );
        Text: "Status";
      }

      Group #MedalRow {
        Anchor: (Top: 3, Height: 24);
        LayoutMode: Left;
        Visible: false;

        Group #BronzeMedalIcon {
          Anchor: (Width: 20, Height: 20, Top: 2);
          Background: (TexturePath: "../Textures/bronze_medal.png");
        }
        Label #BronzeMedalText {
          Anchor: (Height: 24);
          Style: (FontSize: 13, TextColor: #cd7f32, VerticalAlignment: Center);
          Text: "";
        }

        Group { Anchor: (Width: 14); }

        Group #SilverMedalIcon {
          Anchor: (Width: 20, Height: 20, Top: 2);
          Background: (TexturePath: "../Textures/silver_medal.png");
        }
        Label #SilverMedalText {
          Anchor: (Height: 24);
          Style: (FontSize: 13, TextColor: #c0c0c0, VerticalAlignment: Center);
          Text: "";
        }

        Group { Anchor: (Width: 14); }

        Group #GoldMedalIcon {
          Anchor: (Width: 20, Height: 20, Top: 2);
          Background: (TexturePath: "../Textures/gold_medal.png");
        }
        Label #GoldMedalText {
          Anchor: (Height: 24);
          Style: (FontSize: 13, TextColor: #ffd700, VerticalAlignment: Center);
          Text: "";
        }

        Group { Anchor: (Width: 14); }

        Group #EmeraldMedalIcon {
          Anchor: (Width: 20, Height: 20, Top: 2);
          Background: (TexturePath: "../Textures/emerald_medal.png");
        }
        Label #EmeraldMedalText {
          Anchor: (Height: 24);
          Style: (FontSize: 13, TextColor: #50C878, VerticalAlignment: Center);
          Text: "";
        }
      }
    }

    Group #PlayerMedal {
      Anchor: (Width: 60, Top: 0, Bottom: 0);

      Group #MedalBronze {
        Anchor: (Left: 10, Top: 18, Width: 40, Height: 40);
        Background: (TexturePath: "../Textures/bronze_medal.png");
        Visible: false;
      }
      Group #MedalSilver {
        Anchor: (Left: 10, Top: 18, Width: 40, Height: 40);
        Background: (TexturePath: "../Textures/silver_medal.png");
        Visible: false;
      }
      Group #MedalGold {
        Anchor: (Left: 10, Top: 18, Width: 40, Height: 40);
        Background: (TexturePath: "../Textures/gold_medal.png");
        Visible: false;
      }
      Group #MedalEmerald {
        Anchor: (Left: 10, Top: 18, Width: 40, Height: 40);
        Background: (TexturePath: "../Textures/emerald_medal.png");
        Visible: false;
      }
      Group #MedalInsane {
        Anchor: (Left: 10, Top: 18, Width: 40, Height: 40);
        Background: (TexturePath: "../Textures/insane_medal.png");
        Visible: false;
      }
    }
  }
}
