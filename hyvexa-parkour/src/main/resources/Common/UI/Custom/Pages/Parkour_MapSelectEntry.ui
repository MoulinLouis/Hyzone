$C = "../Common.ui";

Group {
  LayoutMode: Left;
  Anchor: (Left: 0, Right: 0, Bottom: 8, Height: 60);
  Background: #1a2530(0.95);

  Group #AccentBar {
    Anchor: (Width: 8, Top: 0, Bottom: 0);
    Background: #10b981;
  }

  Button #SelectButton {
    FlexWeight: 1;
    Padding: (Left: 12, Top: 10, Bottom: 10);
    Background: #00000000;
    LayoutMode: Top;
    Style: ButtonStyle(
      Default: (Background: #00000000),
      Hovered: (Background: #ffffff(0.05)),
      Pressed: (Background: #ffffff(0.02)),
      Sounds: $C.@ButtonSounds,
    );

    Label #MapName {
      Style: (
        FontSize: 15,
        RenderBold: true,
        TextColor: #f0f4f8
      );
      Text: "Map";
    }

    Label #MapStatus {
      Anchor: (Top: 2);
      Style: (
        FontSize: 12,
        TextColor: #9fb0ba
      );
      Text: "Status";
    }
  }
}
