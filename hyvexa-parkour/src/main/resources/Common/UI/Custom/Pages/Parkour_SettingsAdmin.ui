$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #SettingsAdminWindow {
    Anchor: (Width: 420, Height: 540);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      // Top accent line
      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #f59e0b;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 300, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "Parkour Settings";
      }

      // Back button
      Group {
        Anchor: (Right: 16, Top: 10, Width: 72, Height: 32);

        TextButton #BackButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "< Back";
          Style: TextButtonStyle(
            Default: (
              Background: #ffffff(0.06),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ffffff(0.1),
              LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ffffff(0.04),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 6, Bottom: 12);

      Label {
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Adjust global parkour settings.";
      }

      Label {
        Anchor: (Top: 8);
        Style: (FontSize: 13, TextColor: #cfd7dc);
        Text: "Fall respawn time (seconds)";
      }

      Group {
        Anchor: (Top: 4, Height: 26);
        LayoutMode: Left;

        $C.@TextField #FallRespawnField {
          Anchor: (Width: 200, Height: 26);
          Style: (FontSize: 14, TextColor: #ffffff(0.85));
        }

        $C.@TextButton #SaveSettingsButton {
          Anchor: (Width: 80, Height: 22, Left: 8, Top: 2);
          Text: "Save";
        }
      }

      Label #CurrentValue {
        Anchor: (Top: 6);
        Style: (FontSize: 12, TextColor: #9fb0ba);
        Text: "";
      }

      Label {
        Anchor: (Top: 8);
        Style: (FontSize: 13, TextColor: #cfd7dc);
        Text: "Void cutoff Y";
      }

      Group {
        Anchor: (Top: 4, Height: 26);
        LayoutMode: Left;

        $C.@TextField #FallFailSafeField {
          Anchor: (Width: 200, Height: 26);
          Style: (FontSize: 14, TextColor: #ffffff(0.85));
        }

        $C.@TextButton #SaveFailSafeButton {
          Anchor: (Width: 80, Height: 22, Left: 8, Top: 2);
          Text: "Save";
        }
      }

      Label #FallFailSafeValue {
        Anchor: (Top: 6);
        Style: (FontSize: 12, TextColor: #9fb0ba);
        Text: "";
      }

      Label {
        Anchor: (Top: 8);
        Style: (FontSize: 13, TextColor: #cfd7dc);
        Text: "Idle fall respawn for OPs";
      }

      Group {
        Anchor: (Top: 4, Height: 22);
        LayoutMode: Left;

        Label #IdleFallOpValue {
          Anchor: (Width: 120);
          Style: (FontSize: 12, TextColor: #9fb0ba);
          Text: "";
        }

        $C.@TextButton #IdleFallOpToggle {
          Anchor: (Width: 120, Height: 22);
          Text: "Toggle";
        }
      }

      Label {
        Anchor: (Top: 8);
        Style: (FontSize: 13, TextColor: #cfd7dc);
        Text: "Disable weapon damage/knockback";
      }

      Group {
        Anchor: (Top: 4, Height: 22);
        LayoutMode: Left;

        Label #WeaponDamageValue {
          Anchor: (Width: 120);
          Style: (FontSize: 12, TextColor: #9fb0ba);
          Text: "";
        }

        $C.@TextButton #WeaponDamageToggle {
          Anchor: (Width: 120, Height: 22);
          Text: "Toggle";
        }
      }

      Label {
        Anchor: (Top: 8);
        Style: (FontSize: 13, TextColor: #cfd7dc);
        Text: "Teleport debug logging";
      }

      Group {
        Anchor: (Top: 4, Height: 22);
        LayoutMode: Left;

        Label #TeleportDebugValue {
          Anchor: (Width: 120);
          Style: (FontSize: 12, TextColor: #9fb0ba);
          Text: "";
        }

        $C.@TextButton #TeleportDebugToggle {
          Anchor: (Width: 120, Height: 22);
          Text: "Toggle";
        }
      }

      Label {
        Anchor: (Top: 10);
        Style: (FontSize: 13, TextColor: #cfd7dc);
        Text: "Tutorial";
      }

      Group {
        Anchor: (Top: 4, Height: 22);
        LayoutMode: Left;

        $C.@TextButton #WelcomeButton {
          Anchor: (Width: 140, Height: 22);
          Text: "Show Welcome";
        }
      }
    }
  }
}

$C.@BackButton {}
