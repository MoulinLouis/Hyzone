$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #PopulationAdminWindow {
    Anchor: (Width: 640, Height: 440);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      // Top accent line
      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #f59e0b;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 300, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "Population";
      }

      // Right side: Clear + Back buttons
      Group {
        Anchor: (Right: 16, Top: 10, Width: 160, Height: 32);
        LayoutMode: Left;

        TextButton #ClearButton {
          Anchor: (Width: 72, Height: 32);
          Text: "CLEAR";
          Style: TextButtonStyle(
            Default: (
              Background: #ef4444(0.15),
              LabelStyle: (FontSize: 13, TextColor: #ef4444, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ef4444(0.25),
              LabelStyle: (FontSize: 13, TextColor: #ef4444, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ef4444(0.1),
              LabelStyle: (FontSize: 13, TextColor: #ef4444, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }

        Group { Anchor: (Width: 8); }

        TextButton #BackButton {
          Anchor: (Width: 72, Height: 32);
          Text: "< Back";
          Style: TextButtonStyle(
            Default: (
              Background: #ffffff(0.06),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ffffff(0.1),
              LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ffffff(0.04),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 6, Bottom: 12);

      Label {
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Track online players over time.";
      }

      Label #SummaryText {
        Anchor: (Top: 6, Height: 60);
        Style: (
          FontSize: 13,
          TextColor: #cfd7dc
        );
        Text: "";
      }

      Label #WindowText {
        Anchor: (Top: 4);
        Style: (
          FontSize: 13,
          TextColor: #cfd7dc
        );
        Text: "Last 24 hours";
      }

      Group #GraphList {
        Anchor: (Width: 610, Top: 6, Height: 240);
        LayoutMode: LeftScrolling;
        Padding: (Left: 6, Right: 6, Top: 6, Bottom: 6);
        ScrollbarStyle: $C.@DefaultScrollbarStyle;

        Group #GraphBars {
          LayoutMode: Left;
        }
      }

      Label #EmptyText {
        Anchor: (Top: 6);
        Style: (
          FontSize: 12,
          TextColor: #9fb0ba
        );
        Text: "";
      }
    }
  }
}

$C.@BackButton {}
