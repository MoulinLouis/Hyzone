$C = "../Common.ui";

Group {
  LayoutMode: Left;
  Anchor: (Left: 0, Right: 0, Bottom: 6, Height: 44);
  Background: #1a2530(0.95);

  Group #AccentBar {
    Anchor: (Width: 8, Top: 0, Bottom: 0);
    Background: #9fb0ba;
  }

  Group #ContentRow {
    FlexWeight: 1;
    Padding: (Left: 12, Right: 12, Top: 12);
    LayoutMode: Left;

    Label #Rank {
      Anchor: (Width: 46);
      Style: (
        FontSize: 14,
        RenderBold: true,
        TextColor: #f0f4f8
      );
      Text: "1";
    }

    Label #PlayerName {
      FlexWeight: 1;
      Style: (
        FontSize: 14,
        TextColor: #cfd7dc
      );
      Text: "Player";
    }

    Label #Completion {
      Anchor: (Width: 76, Right: 0);
      Style: (
        FontSize: 13,
        RenderBold: true,
        TextColor: #9fb0ba
      );
      Text: "0/0";
    }
  }
}
