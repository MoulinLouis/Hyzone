$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 520, Height: 340);

    #Title {
      Group {
        TextButton #BackButton {
          Anchor: (Left: 12, Top: 4, Width: 64, Height: 26);
          Padding: (Left: 8, Top: 3);
          Text: "< Back";
          Style: TextButtonStyle(
            Default: (
              Background: #1a2530(0.95),
              LabelStyle: (FontSize: 14, TextColor: #f0f4f8, RenderBold: true)
            ),
            Hovered: (
              Background: #263545,
              LabelStyle: (FontSize: 14, TextColor: #f0f4f8, RenderBold: true)
            ),
            Pressed: (
              Background: #1e2d3a,
              LabelStyle: (FontSize: 14, TextColor: #f0f4f8, RenderBold: true)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
        $C.@Title {
          @Text = "Music Settings";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 6, Bottom: 12);

      Label {
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Music selection.";
      }

      Label #CurrentMusicLabel {
        Anchor: (Top: 8);
        Style: (
          FontSize: 15,
          TextColor: #c8d6df
        );
        Text: "Now Playing: Zelda OST";
      }

      Group {
        Anchor: (Top: 12, Left: 0, Right: 0, Height: 26);
        LayoutMode: Left;

        $C.@TextButton #PlayZeldaMusicButton {
          Anchor: (Height: 26, Width: 230);
          Text: "Play Zelda OST";
        }

        Group {
          Anchor: (Width: 8);
        }

        $C.@TextButton #PlayCelesteMusicButton {
          Anchor: (Height: 26, Width: 230);
          Text: "Play Celeste OST";
        }
      }

      Group {
        Anchor: (Top: 8, Left: 0, Right: 0, Height: 26);
        LayoutMode: Left;

        $C.@TextButton #PlayDefaultMusicButton {
          Anchor: (Height: 26, Width: 230);
          Text: "Default Music";
        }

        Group {
          Anchor: (Width: 8);
        }

        $C.@TextButton #PlayNoMusicButton {
          Anchor: (Height: 26, Width: 230);
          Text: "No Music";
        }
      }

      Label {
        Anchor: (Top: 10);
        Style: (
          FontSize: 13,
          TextColor: #9fb0ba
        );
        Text: "SFX toggles.";
      }

      Group {
        Anchor: (Top: 6, Left: 0, Right: 0, Height: 26);
        LayoutMode: Left;

        $C.@TextButton #CheckpointSfxButton {
          Anchor: (Height: 26, Width: 230);
          Text: "Disable Checkpoint SFX";
        }

        Group {
          Anchor: (Width: 8);
        }

        $C.@TextButton #VictorySfxButton {
          Anchor: (Height: 26, Width: 230);
          Text: "Disable Victory SFX";
        }
      }
    }
  }
}

$C.@BackButton {}
