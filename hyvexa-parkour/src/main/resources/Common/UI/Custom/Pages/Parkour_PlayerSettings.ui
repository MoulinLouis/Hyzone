$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 460, Height: 370);

    #Title {
      Group {
        TextButton #BackButton {
          Anchor: (Left: 12, Top: 4, Width: 64, Height: 26);
          Padding: (Left: 8, Top: 3);
          Text: "Close";
          Style: TextButtonStyle(
            Default: (
              Background: #1a2530(0.95),
              LabelStyle: (FontSize: 14, TextColor: #f0f4f8, RenderBold: true)
            ),
            Hovered: (
              Background: #263545,
              LabelStyle: (FontSize: 14, TextColor: #f0f4f8, RenderBold: true)
            ),
            Pressed: (
              Background: #1e2d3a,
              LabelStyle: (FontSize: 14, TextColor: #f0f4f8, RenderBold: true)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
        $C.@Title {
          @Text = "Player Settings";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 6, Bottom: 12);

      Label {
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Music options.";
      }

      Group {
        Anchor: (Top: 12, Left: 0, Right: 0, Height: 24);
        LayoutMode: Left;

        $C.@TextButton #MusicButton {
          Anchor: (Height: 24, Width: 200);
          Text: "Music";
        }
      }

      Label {
        Anchor: (Top: 12);
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Control player visibility preferences.";
      }

      Group {
        Anchor: (Top: 8, Left: 0, Right: 0, Height: 24);
        LayoutMode: Left;

        $C.@TextButton #HideAllButton {
          Anchor: (Height: 24, Width: 200);
          Text: "Hide players";
        }

        Group {
          Anchor: (Width: 8);
        }

        $C.@TextButton #ShowAllButton {
          Anchor: (Height: 24, Width: 200);
          Text: "Show players";
        }
      }

      Label {
        Anchor: (Top: 12);
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Run HUD visibility.";
      }

      Group {
        Anchor: (Top: 8, Left: 0, Right: 0, Height: 24);
        LayoutMode: Left;

        $C.@TextButton #HideHudButton {
          Anchor: (Height: 24, Width: 200);
          Text: "Hide HUD";
        }

        Group {
          Anchor: (Width: 8);
        }

        $C.@TextButton #ShowHudButton {
          Anchor: (Height: 24, Width: 200);
          Text: "Show HUD";
        }
      }

      Label #VipSpeedLabel {
        Anchor: (Top: 12);
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "VIP/Founder speed boost.";
      }

      Group #VipSpeedRow {
        Anchor: (Top: 8, Left: 6, Right: 6, Height: 24);
        LayoutMode: Left;

        $C.@TextButton #VipSpeedX1Button {
          Anchor: (Height: 24, Width: 78);
          Text: "x1";
        }

        Group { Anchor: (Width: 6); }

        $C.@TextButton #VipSpeedX2Button {
          Anchor: (Height: 24, Width: 78);
          Text: "x2";
        }

        Group { Anchor: (Width: 6); }

        $C.@TextButton #VipSpeedX4Button {
          Anchor: (Height: 24, Width: 78);
          Text: "x4";
        }
      }

      Label {
        Anchor: (Top: 12);
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Run item preferences.";
      }

      Group {
        Anchor: (Top: 8, Left: 0, Right: 0, Height: 28);
        LayoutMode: Left;

        $C.@TextButton #ResetItemButton {
          Anchor: (Height: 28, Width: 260);
          Text: "No reset item: Off";
        }
      }
    }
  }
}

$C.@BackButton {}
