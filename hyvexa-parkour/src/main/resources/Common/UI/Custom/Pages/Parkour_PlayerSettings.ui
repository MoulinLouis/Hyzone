$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #SettingsWindow {
    Anchor: (Width: 460, Height: 430);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      // Top accent line
      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #6366f1;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 300, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "Player Settings";
      }

      Group {
        Anchor: (Right: 16, Top: 10, Width: 72, Height: 32);

        TextButton #BackButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "Close";
          Style: TextButtonStyle(
            Default: (
              Background: #ffffff(0.06),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ffffff(0.1),
              LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ffffff(0.04),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 6, Bottom: 12);

      Label {
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Music options.";
      }

      Group {
        Anchor: (Top: 12, Left: 0, Right: 0, Height: 24);
        LayoutMode: Left;

        $C.@TextButton #MusicButton {
          Anchor: (Height: 24, Width: 200);
          Text: "Music";
        }
      }

      Label {
        Anchor: (Top: 12);
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Control player visibility preferences.";
      }

      Group {
        Anchor: (Top: 8, Left: 0, Right: 0, Height: 24);
        LayoutMode: Left;

        $C.@TextButton #HideAllButton {
          Anchor: (Height: 24, Width: 200);
          Text: "Hide players";
        }

        Group {
          Anchor: (Width: 8);
        }

        $C.@TextButton #ShowAllButton {
          Anchor: (Height: 24, Width: 200);
          Text: "Show players";
        }
      }

      Label {
        Anchor: (Top: 12);
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Run HUD visibility.";
      }

      Group {
        Anchor: (Top: 8, Left: 0, Right: 0, Height: 24);
        LayoutMode: Left;

        $C.@TextButton #HideHudButton {
          Anchor: (Height: 24, Width: 200);
          Text: "Hide HUD";
        }

        Group {
          Anchor: (Width: 8);
        }

        $C.@TextButton #ShowHudButton {
          Anchor: (Height: 24, Width: 200);
          Text: "Show HUD";
        }
      }

      Label #VipSpeedLabel {
        Anchor: (Top: 12);
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "VIP/Founder speed boost.";
      }

      Group #VipSpeedRow {
        Anchor: (Top: 8, Left: 6, Right: 6, Height: 24);
        LayoutMode: Left;

        $C.@TextButton #VipSpeedX1Button {
          Anchor: (Height: 24, Width: 78);
          Text: "x1";
        }

        Group { Anchor: (Width: 6); }

        $C.@TextButton #VipSpeedX2Button {
          Anchor: (Height: 24, Width: 78);
          Text: "x2";
        }

        Group { Anchor: (Width: 6); }

        $C.@TextButton #VipSpeedX4Button {
          Anchor: (Height: 24, Width: 78);
          Text: "x4";
        }
      }

      Label {
        Anchor: (Top: 12);
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Run item preferences.";
      }

      Group {
        Anchor: (Top: 8, Left: 0, Right: 0, Height: 28);
        LayoutMode: Left;

        $C.@TextButton #ResetItemButton {
          Anchor: (Height: 28, Width: 260);
          Text: "No reset item: Off";
        }
      }

      Label {
        Anchor: (Top: 12);
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Personal best ghost replay.";
      }

      Group {
        Anchor: (Top: 8, Left: 0, Right: 0, Height: 28);
        LayoutMode: Left;

        $C.@TextButton #GhostButton {
          Anchor: (Height: 28, Width: 260);
          Text: "PB Ghost: On";
        }
      }
    }
  }
}

$C.@BackButton {}
