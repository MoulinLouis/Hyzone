$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 420, Height: 340);

    #Title {
      Group {
        TextButton #CloseButton {
          Anchor: (Left: 12, Top: 4, Width: 64, Height: 24);
          Padding: (Left: 8, Top: 2);
          Text: "Close";
          Style: TextButtonStyle(
            Default: (LabelStyle: (FontSize: 14, TextColor: #9fb0ba, RenderBold: true)),
            Sounds: $C.@ButtonSounds,
          );
          Background: #000000(0.3);
        }
        $C.@Title {
          @Text = "E L E V A T I O N";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 20, Right: 20, Top: 6, Bottom: 12);

      Label {
        Anchor: (Top: 8);
        Style: (FontSize: 14, TextColor: #b8c5cc);
        Text: "Convert coins into a permanent multiplier.";
      }

      Group {
        LayoutMode: Left;
        Anchor: (Top: 16, Height: 32);

        Label {
          Anchor: (Width: 140);
          Style: (FontSize: 14, TextColor: #9fb0ba);
          Text: "Your Coins:";
        }

        Label #CoinsValue {
          Style: (FontSize: 14, TextColor: #ffd166, RenderBold: true);
          Text: "0";
        }
      }

      Group {
        LayoutMode: Left;
        Anchor: (Top: 6, Height: 32);

        Label {
          Anchor: (Width: 140);
          Style: (FontSize: 14, TextColor: #9fb0ba);
          Text: "Current Elevation:";
        }

        Label #MultiplierValue {
          Style: (FontSize: 14, TextColor: #06b6d4, RenderBold: true);
          Text: "x1";
        }
      }

      Group {
        LayoutMode: Left;
        Anchor: (Top: 6, Height: 32);

        Label {
          Anchor: (Width: 140);
          Style: (FontSize: 14, TextColor: #9fb0ba);
          Text: "You will gain:";
        }

        Label #GainValue {
          Style: (FontSize: 14, TextColor: #4ade80, RenderBold: true);
          Text: "+0";
        }
      }

      Group {
        LayoutMode: Left;
        Anchor: (Top: 6, Height: 32);

        Label {
          Anchor: (Width: 140);
          Style: (FontSize: 14, TextColor: #9fb0ba);
          Text: "New Elevation:";
        }

        Label #NewMultiplierValue {
          Style: (FontSize: 14, TextColor: #4ade80, RenderBold: true);
          Text: "x1";
        }
      }

      Group #ActionButtons {
        Anchor: (Left: 0, Right: 0, Top: 20, Height: 48);
        LayoutMode: Left;

        Group { FlexWeight: 1; }

        TextButton #ElevateButton {
          Anchor: (Width: 200, Height: 48);
          Padding: (Left: 8, Right: 8, Top: 8, Bottom: 8);
          Text: "ELEVATE";
          Style: TextButtonStyle(
            Default: (
              Background: #2d5a7b(0.85),
              LabelStyle: (FontSize: 16, TextColor: #e8f4fc, RenderBold: true, HorizontalAlignment: Center)
            ),
            Hovered: (
              Background: #3a7399(0.92),
              LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center)
            ),
            Pressed: (
              Background: #4a8ab3(0.95),
              LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }

        Group { FlexWeight: 1; }
      }
    }
  }
}
