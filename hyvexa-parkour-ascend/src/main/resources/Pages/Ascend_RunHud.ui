$C = "../Common.ui";

$C.@PageOverlay {
  Background: #000000(0.0);
  Group #HudLayer {
    Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);

    Group #RunHudRoot {
      Anchor: (Right: 20, Top: 400, Width: 320, Height: 80);
      Background: #000000(0.0);
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 10, Bottom: 10);

      Group #InfoBox {
        Anchor: (Left: 0, Right: 0, Height: 60);
        Background: #000000(0.4);
        Padding: (Left: 10, Right: 10, Top: 8, Bottom: 8);
        LayoutMode: Top;

        Label #PlayerNameText {
          Anchor: (Left: 0, Right: 0);
          Style: (
            FontSize: 18,
            TextColor: #ff7fb0,
            RenderBold: true,
            HorizontalAlignment: Center
          );
          Text: "HYVEXA ASCEND";
        }
      }
    }
  }
}
