$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #SettingsWindow {
    Anchor: (Width: 460, Height: 432);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #6366f1;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 300, Height: 24);
        Style: (FontSize: 20, TextColor: #f0f4f8, RenderBold: true);
        Text: "Settings";
      }

      Group {
        Anchor: (Right: 16, Top: 10, Width: 72, Height: 32);

        TextButton #CloseButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "Close";
          Style: TextButtonStyle(
            Default: (
              Background: #ffffff(0.06),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ffffff(0.1),
              LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ffffff(0.04),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 10, Bottom: 12);

      // --- Music ---
      Group {
        Anchor: (Left: 0, Right: 0, Height: 46);
        LayoutMode: Full;
        Background: #ffffff(0.03);
        OutlineColor: #ffffff(0.04);
        OutlineSize: 1;

        Group {
          Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 4);
          Background: #a855f7;
        }

        Label {
          Anchor: (Left: 16, Top: 0, Bottom: 0, Width: 200);
          Style: (FontSize: 14, TextColor: #9fb0ba, VerticalAlignment: Center);
          Text: "Music options";
        }

        Group {
          Anchor: (Right: 12, Top: 9, Width: 130, Height: 28);

          TextButton #MusicButton {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "Music";
            Style: TextButtonStyle(
              Default: (
                Background: #ffffff(0.08),
                LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Hovered: (
                Background: #ffffff(0.14),
                LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Pressed: (
                Background: #ffffff(0.05),
                LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Sounds: $C.@ButtonSounds,
            );
          }
        }
      }

      // --- HUD Visibility ---
      Group {
        Anchor: (Left: 0, Right: 0, Height: 50, Top: 6);
        LayoutMode: Full;
        Background: #ffffff(0.03);
        OutlineColor: #ffffff(0.04);
        OutlineSize: 1;

        Group {
          Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 4);
          Background: #06b6d4;
        }

        Label {
          Anchor: (Left: 16, Top: 0, Bottom: 0, Width: 180);
          Style: (FontSize: 14, TextColor: #9fb0ba, VerticalAlignment: Center);
          Text: "HUD visibility";
        }

        Group {
          Anchor: (Right: 12, Top: 7, Width: 228, Height: 36);
          LayoutMode: Left;

          Group {
            Anchor: (Width: 110, Height: 36);
            LayoutMode: Full;

            TextButton #HideHudButton {
              Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 5);
              Text: "Hide HUD";
              Style: TextButtonStyle(
                Default: (
                  Background: #ffffff(0.08),
                  LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Hovered: (
                  Background: #ffffff(0.14),
                  LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Pressed: (
                  Background: #ffffff(0.05),
                  LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Sounds: $C.@ButtonSounds,
              );
            }

            Group #HideHudIndicator {
              Anchor: (Left: 4, Right: 4, Bottom: 0, Height: 3);
              Background: #06b6d4;
            }
          }

          Group {
            Anchor: (Width: 8);
          }

          Group {
            Anchor: (Width: 110, Height: 36);
            LayoutMode: Full;

            TextButton #ShowHudButton {
              Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 5);
              Text: "Show HUD";
              Style: TextButtonStyle(
                Default: (
                  Background: #ffffff(0.08),
                  LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Hovered: (
                  Background: #ffffff(0.14),
                  LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Pressed: (
                  Background: #ffffff(0.05),
                  LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Sounds: $C.@ButtonSounds,
              );
            }

            Group #ShowHudIndicator {
              Anchor: (Left: 4, Right: 4, Bottom: 0, Height: 3);
              Background: #06b6d4;
            }
          }
        }
      }

      // --- Hide Other Runners ---
      Group {
        Anchor: (Left: 0, Right: 0, Height: 46, Top: 6);
        LayoutMode: Full;
        Background: #ffffff(0.03);
        OutlineColor: #ffffff(0.04);
        OutlineSize: 1;

        Group {
          Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 4);
          Background: #f59e0b;
        }

        Label {
          Anchor: (Left: 16, Top: 0, Bottom: 0, Width: 200);
          Style: (FontSize: 14, TextColor: #9fb0ba, VerticalAlignment: Center);
          Text: "Other players' runners";
        }

        Group {
          Anchor: (Right: 12, Top: 9, Width: 170, Height: 28);

          TextButton #ToggleRunnersButton {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "Hide: Off";
            Style: TextButtonStyle(
              Default: (
                Background: #ffffff(0.08),
                LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Hovered: (
                Background: #ffffff(0.14),
                LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Pressed: (
                Background: #ffffff(0.05),
                LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Sounds: $C.@ButtonSounds,
            );
          }
        }
      }

      // --- Player Visibility ---
      Group {
        Anchor: (Left: 0, Right: 0, Height: 50, Top: 6);
        LayoutMode: Full;
        Background: #ffffff(0.03);
        OutlineColor: #ffffff(0.04);
        OutlineSize: 1;

        Group {
          Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 4);
          Background: #3b82f6;
        }

        Label {
          Anchor: (Left: 16, Top: 0, Bottom: 0, Width: 180);
          Style: (FontSize: 14, TextColor: #9fb0ba, VerticalAlignment: Center);
          Text: "Player visibility";
        }

        Group {
          Anchor: (Right: 12, Top: 7, Width: 228, Height: 36);
          LayoutMode: Left;

          Group {
            Anchor: (Width: 110, Height: 36);
            LayoutMode: Full;

            TextButton #HideAllButton {
              Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 5);
              Text: "Hide players";
              Style: TextButtonStyle(
                Default: (
                  Background: #ffffff(0.08),
                  LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Hovered: (
                  Background: #ffffff(0.14),
                  LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Pressed: (
                  Background: #ffffff(0.05),
                  LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Sounds: $C.@ButtonSounds,
              );
            }

            Group #HidePlayersIndicator {
              Anchor: (Left: 4, Right: 4, Bottom: 0, Height: 3);
              Background: #3b82f6;
            }
          }

          Group {
            Anchor: (Width: 8);
          }

          Group {
            Anchor: (Width: 110, Height: 36);
            LayoutMode: Full;

            TextButton #ShowAllButton {
              Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 5);
              Text: "Show players";
              Style: TextButtonStyle(
                Default: (
                  Background: #ffffff(0.08),
                  LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Hovered: (
                  Background: #ffffff(0.14),
                  LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Pressed: (
                  Background: #ffffff(0.05),
                  LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Sounds: $C.@ButtonSounds,
              );
            }

            Group #ShowPlayersIndicator {
              Anchor: (Left: 4, Right: 4, Bottom: 0, Height: 3);
              Background: #3b82f6;
            }
          }
        }
      }

      // --- Achievements ---
      Group {
        Anchor: (Left: 0, Right: 0, Height: 46, Top: 6);
        LayoutMode: Full;
        Background: #ffffff(0.03);
        OutlineColor: #ffffff(0.04);
        OutlineSize: 1;

        Group {
          Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 4);
          Background: #f59e0b;
        }

        Label {
          Anchor: (Left: 16, Top: 0, Bottom: 0, Width: 200);
          Style: (FontSize: 14, TextColor: #9fb0ba, VerticalAlignment: Center);
          Text: "Achievements";
        }

        Group {
          Anchor: (Right: 12, Top: 9, Width: 130, Height: 28);

          TextButton #AchievementsButton {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "View";
            Style: TextButtonStyle(
              Default: (
                Background: #ffffff(0.08),
                LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Hovered: (
                Background: #ffffff(0.14),
                LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Pressed: (
                Background: #ffffff(0.05),
                LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Sounds: $C.@ButtonSounds,
            );
          }
        }
      }
    }
  }
}
