$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 460, Height: 320);

    #Title {
      Group {
        TextButton #CloseButton {
          Anchor: (Left: 12, Top: 4, Width: 64, Height: 24);
          Padding: (Left: 8, Top: 2);
          Text: "Close";
          Style: TextButtonStyle(
            Default: (LabelStyle: (FontSize: 14, TextColor: #93844c, RenderBold: true)),
            Sounds: $C.@ButtonSounds,
          );
          Background: #000000(0.13);
        }
        $C.@Title {
          @Text = "Ascend Admin";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 18, Right: 18, Top: 12, Bottom: 12);

      Label {
        Style: (FontSize: 16, TextColor: #93844c, RenderBold: true);
        Text: "Admin Tools";
      }

      Group {
        LayoutMode: Left;
        Anchor: (Top: 12, Height: 38);

        $C.@TextButton #MapsButton {
          Anchor: (Width: 130, Height: 36);
          Text: "Maps";
        }

        $C.@TextButton #AdminButton {
          Anchor: (Left: 10, Width: 130, Height: 36);
          Text: "Admin Panel";
        }

        $C.@TextButton #WhitelistButton {
          Anchor: (Left: 10, Width: 130, Height: 36);
          Text: "Whitelist";
        }
      }
    }
  }
}
