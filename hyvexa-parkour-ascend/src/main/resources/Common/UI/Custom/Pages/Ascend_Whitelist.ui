$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 560, Height: 420);

    #Title {
      Group {
        TextButton #BackButton {
          Anchor: (Left: 12, Top: 4, Width: 64, Height: 24);
          Padding: (Left: 8, Top: 2);
          Text: "< Back";
          Style: TextButtonStyle(
            Default: (
              Background: #000000(0.13),
              LabelStyle: (FontSize: 14, TextColor: #93844c, RenderBold: true)
            ),
            Hovered: (
              Background: #000000(0.22),
              LabelStyle: (FontSize: 14, TextColor: #93844c, RenderBold: true)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
        $C.@Title {
          @Text = "Access Whitelist";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 6, Bottom: 12);

      Label {
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Manage players allowed to access Ascend mode.";
      }

      Group {
        LayoutMode: Left;
        Anchor: (Top: 10, Height: 32);

        Label {
          Anchor: (Width: 140);
          Style: (
            FontSize: 13,
            TextColor: #cfd7dc
          );
          Text: "Access Mode:";
        }

        $C.@TextButton #PublicToggleButton {
          Anchor: (Width: 120, Height: 28);
          Text: "WHITELIST";
        }
      }

      Group {
        LayoutMode: Left;
        Anchor: (Top: 6, Height: 32);

        Label {
          Anchor: (Width: 140);
          Style: (
            FontSize: 13,
            TextColor: #cfd7dc
          );
          Text: "Whitelist Status:";
        }

        $C.@TextButton #ToggleButton {
          Anchor: (Width: 120, Height: 28);
          Text: "ENABLED";
        }
      }

      Label {
        Anchor: (Top: 10);
        Style: (
          FontSize: 13,
          TextColor: #cfd7dc
        );
        Text: "Add player";
      }

      $C.@TextField #UsernameField {
        Anchor: (Height: 26, Top: 4);
        Style: (FontSize: 14, TextColor: #ffffff(0.85));
      }

      $C.@TextButton #AddButton {
        Anchor: (Height: 22, Width: 140, Top: 6);
        Text: "Add Player";
      }

      Label {
        Anchor: (Top: 12);
        Style: (
          FontSize: 13,
          TextColor: #cfd7dc
        );
        Text: "Whitelisted players";
      }

      Group #WhitelistContainer {
        Anchor: (Width: 520, Top: 6, Height: 180);
        LayoutMode: TopScrolling;
        Padding: (Left: 6, Right: 6);
        ScrollbarStyle: $C.@DefaultScrollbarStyle;

        Group #WhitelistEntries {
          LayoutMode: Top;
        }
      }

      Label #EmptyText {
        Anchor: (Top: 6);
        Style: (
          FontSize: 12,
          TextColor: #9fb0ba
        );
        Text: "";
      }
    }
  }
}

$C.@BackButton {}
