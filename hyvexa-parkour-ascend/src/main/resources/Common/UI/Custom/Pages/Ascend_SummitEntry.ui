$C = "../Common.ui";

Group {
  Anchor: (Left: 0, Right: 0, Bottom: 8, Height: 112);
  Background: #1a2530(0.95);

  Group #AccentBar {
    Anchor: (Width: 8, Top: 0, Bottom: 0, Left: 0);
    Background: #10b981;
  }

  Group #CardBgGreen {
    Anchor: (Left: 8, Right: 0, Top: 0, Bottom: 0);
    Background: #10b981(0.35);
    Visible: false;
  }

  Group #CardBgBlue {
    Anchor: (Left: 8, Right: 0, Top: 0, Bottom: 0);
    Background: #3b82f6(0.35);
    Visible: false;
  }

  Group #CardBgPurple {
    Anchor: (Left: 8, Right: 0, Top: 0, Bottom: 0);
    Background: #8b5cf6(0.35);
    Visible: false;
  }

  Button #SummitButton {
    Anchor: (Left: 8, Right: 0, Top: 0, Bottom: 0);
    Padding: (Left: 12, Top: 12, Bottom: 12);
    Background: #00000000;
    Style: ButtonStyle(
      Default: (Background: #00000000),
      Hovered: (Background: #ffffff(0.05)),
      Pressed: (Background: #ffffff(0.02)),
      Sounds: $C.@ButtonSounds,
    );
    LayoutMode: Top;

    Group #TitleRow {
      Anchor: (Height: 20);
      LayoutMode: Left;

      Label #CategoryName {
        Style: (
          FontSize: 16,
          RenderBold: true,
          TextColor: #f0f4f8
        );
        Text: "Category Name";
      }

      Group #LockIcon {
        Anchor: (Width: 16, Height: 16, Left: 8, Top: 2);
        Background: (TexturePath: "../Textures/lock.png");
        Visible: false;
      }
    }

    Label #CategoryDesc {
      Anchor: (Top: 4);
      Style: (
        FontSize: 13,
        TextColor: #9fb0ba
      );
      Text: "Category description";
    }

    Label #CategoryBonus {
      Anchor: (Top: 4);
      Style: (
        FontSize: 14,
        TextColor: #ffd166,
        RenderBold: true
      );
      Text: "Current: x1.00 -> Next: x1.10";
    }

    Group #XpBarContainer {
      Anchor: (Left: 0, Right: 12, Top: 6, Height: 22);
      Background: #000000(0.3);

      Group #XpSeg1 { Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 20); Background: #10b981; Visible: false; }
      Group #XpSeg2 { Anchor: (Left: 20, Top: 0, Bottom: 0, Width: 20); Background: #10b981; Visible: false; }
      Group #XpSeg3 { Anchor: (Left: 40, Top: 0, Bottom: 0, Width: 20); Background: #10b981; Visible: false; }
      Group #XpSeg4 { Anchor: (Left: 60, Top: 0, Bottom: 0, Width: 20); Background: #10b981; Visible: false; }
      Group #XpSeg5 { Anchor: (Left: 80, Top: 0, Bottom: 0, Width: 20); Background: #10b981; Visible: false; }
      Group #XpSeg6 { Anchor: (Left: 100, Top: 0, Bottom: 0, Width: 20); Background: #10b981; Visible: false; }
      Group #XpSeg7 { Anchor: (Left: 120, Top: 0, Bottom: 0, Width: 20); Background: #10b981; Visible: false; }
      Group #XpSeg8 { Anchor: (Left: 140, Top: 0, Bottom: 0, Width: 20); Background: #10b981; Visible: false; }
      Group #XpSeg9 { Anchor: (Left: 160, Top: 0, Bottom: 0, Width: 20); Background: #10b981; Visible: false; }
      Group #XpSeg10 { Anchor: (Left: 180, Top: 0, Bottom: 0, Width: 20); Background: #10b981; Visible: false; }
      Group #XpSeg11 { Anchor: (Left: 200, Top: 0, Bottom: 0, Width: 20); Background: #10b981; Visible: false; }
      Group #XpSeg12 { Anchor: (Left: 220, Top: 0, Bottom: 0, Width: 20); Background: #10b981; Visible: false; }
      Group #XpSeg13 { Anchor: (Left: 240, Top: 0, Bottom: 0, Width: 20); Background: #10b981; Visible: false; }
      Group #XpSeg14 { Anchor: (Left: 260, Top: 0, Bottom: 0, Width: 20); Background: #10b981; Visible: false; }
      Group #XpSeg15 { Anchor: (Left: 280, Top: 0, Bottom: 0, Width: 20); Background: #10b981; Visible: false; }
      Group #XpSeg16 { Anchor: (Left: 300, Top: 0, Bottom: 0, Width: 20); Background: #10b981; Visible: false; }
      Group #XpSeg17 { Anchor: (Left: 320, Top: 0, Bottom: 0, Width: 20); Background: #10b981; Visible: false; }
      Group #XpSeg18 { Anchor: (Left: 340, Top: 0, Bottom: 0, Width: 20); Background: #10b981; Visible: false; }
      Group #XpSeg19 { Anchor: (Left: 360, Top: 0, Bottom: 0, Width: 20); Background: #10b981; Visible: false; }
      Group #XpSeg20 { Anchor: (Left: 380, Top: 0, Bottom: 0, Width: 20); Background: #10b981; Visible: false; }

      Label #XpProgress {
        Anchor: (Left: 8, Right: 0, Top: 0, Bottom: 0);
        Style: (
          FontSize: 13,
          TextColor: #f0f4f8,
          RenderBold: true
        );
        Text: "Exp 0/100 (+0)";
      }
    }
  }
}
