$C = "../Common.ui";

Group {
  LayoutMode: Left;
  Anchor: (Left: 0, Right: 0, Bottom: 8, Height: 110);
  Background: #1a2530(0.95);

  Group #AccentBar {
    Anchor: (Width: 8, Top: 0, Bottom: 0);
    Background: #7c3aed;
  }

  Button #CategoryInfoButton {
    Anchor: (Width: 436, Top: 0, Bottom: 0);
    Padding: (Left: 12, Top: 12, Bottom: 12);
    Background: #00000000;
    Style: ButtonStyle(
      Default: (Background: #00000000),
      Hovered: (Background: #ffffff(0.05)),
      Pressed: (Background: #ffffff(0.02)),
      Sounds: $C.@ButtonSounds,
    );
    LayoutMode: Top;

    Label #CategoryName {
      Style: (
        FontSize: 16,
        RenderBold: true,
        TextColor: #f0f4f8
      );
      Text: "Category Name";
    }

    Label #CategoryDesc {
      Anchor: (Top: 4);
      Style: (
        FontSize: 13,
        TextColor: #9fb0ba
      );
      Text: "Category description";
    }

    Label #CategoryBonus {
      Anchor: (Top: 4);
      Style: (
        FontSize: 13,
        TextColor: #ffd166,
        RenderBold: true
      );
      Text: "Current Bonus: +0%";
    }

    Group #XpBarContainer {
      Anchor: (Left: 0, Right: 0, Top: 6, Height: 16);
      Background: #000000(0.3);

      Group #XpBarFill {
        Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 0%);
        Background: #7c3aed(0.6);
      }

      Label #XpProgress {
        Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
        Style: (
          FontSize: 11,
          TextColor: #f0f4f8
        );
        Text: "Exp 0/100 (+0)";
      }
    }
  }

  Group #ButtonZone {
    Anchor: (Width: 128, Top: 0, Bottom: 0);
    LayoutMode: Top;

    Group #ButtonAccent {
      Anchor: (Left: 0, Right: 0, Height: 3);
      Background: #7c3aed;
    }

    Button #SummitButton {
      Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
      FlexWeight: 1;
      Padding: (Left: 8, Right: 8, Top: 4, Bottom: 6);
      Background: #000000(0.25);
      Style: ButtonStyle(
        Default: (Background: #000000(0.25)),
        Hovered: (Background: #000000(0.4)),
        Pressed: (Background: #000000(0.15)),
        Sounds: $C.@ButtonSounds,
      );
      LayoutMode: Top;

      Label #CurrentLevel {
        Anchor: (Left: 0, Right: 0);
        Style: (
          FontSize: 13,
          RenderBold: true,
          TextColor: #7c3aed,
          HorizontalAlignment: Center
        );
        Text: "Lv.0";
      }

      Label #PreviewLevel {
        Anchor: (Left: 0, Right: 0, Top: 1);
        Style: (
          FontSize: 11,
          TextColor: #9fb0ba,
          HorizontalAlignment: Center
        );
        Text: "â†’ Lv.0";
      }

      Label #SummitText {
        Anchor: (Left: 0, Right: 0, Top: 3);
        Style: (
          FontSize: 13,
          RenderBold: true,
          TextColor: #f0f4f8,
          HorizontalAlignment: Center
        );
        Text: "Summit";
      }

      Label #WarningText {
        Anchor: (Left: 0, Right: 0, Top: 1);
        Style: (
          FontSize: 10,
          TextColor: #fca5a5,
          HorizontalAlignment: Center
        );
        Text: "Resets coins";
      }
    }
  }
}
