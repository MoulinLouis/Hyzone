$C = "../Common.ui";

Group {
  LayoutMode: Left;
  Anchor: (Left: 0, Right: 0, Bottom: 4, Height: 44);
  Background: #1a2530(0.95);
  OutlineColor: #ffffff(0.03);
  OutlineSize: 1;

  Group #AccentBar {
    Anchor: (Width: 4, Top: 0, Bottom: 0);
    Background: #9fb0ba;
  }

  Group #ContentRow {
    FlexWeight: 1;
    Padding: (Left: 14, Right: 14, Top: 12);
    LayoutMode: Left;

    Label #Rank {
      Anchor: (Width: 50);
      Style: (
        FontSize: 14,
        RenderBold: true,
        TextColor: #f0f4f8
      );
      Text: "#1";
    }

    Label #PlayerName {
      FlexWeight: 1;
      Style: (
        FontSize: 14,
        TextColor: #cfd7dc
      );
      Text: "Player";
    }

    Label #Value {
      Anchor: (Width: 90, Right: 0);
      Style: (
        FontSize: 13,
        RenderBold: true,
        TextColor: #f59e0b
      );
      Text: "0";
    }
  }
}
