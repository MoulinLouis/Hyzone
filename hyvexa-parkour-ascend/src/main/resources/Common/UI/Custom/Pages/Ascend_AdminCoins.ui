$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 650, Height: 780);

    #Title {
      Group {
        TextButton #CloseButton {
          Anchor: (Left: 12, Top: 4, Width: 64, Height: 24);
          Padding: (Left: 8, Top: 2);
          Text: "Close";
          Style: TextButtonStyle(
            Default: (LabelStyle: (FontSize: 14, TextColor: #93844c, RenderBold: true)),
            Sounds: $C.@ButtonSounds,
          );
          Background: #000000(0.13);
        }
        $C.@Title {
          @Text = "Ascend Admin Vexa";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 18, Right: 18, Top: 12, Bottom: 12);

      Label {
        Style: (FontSize: 16, TextColor: #93844c, RenderBold: true);
        Text: "Adjust Vexa";
      }

      Group {
        LayoutMode: Left;
        Anchor: (Top: 10, Height: 30);

        Label {
          Anchor: (Width: 140);
          Style: (FontSize: 14, TextColor: #cfd7dc);
          Text: "Current Vexa:";
        }

        Label #CurrentCoinsValue {
          Style: (FontSize: 14, TextColor: #ffffff(0.9));
          Text: "0";
        }
      }

      Label {
        Anchor: (Top: 10);
        Style: (FontSize: 13, TextColor: #cfd7dc);
        Text: "Vexa Amount";
      }

      $C.@TextField #CoinsAmountField {
        Anchor: (Height: 30);
        Style: (FontSize: 14, TextColor: #ffffff(0.85));
      }

      Group {
        LayoutMode: Left;
        Anchor: (Top: 12, Height: 36);

        $C.@TextButton #AddButton {
          Anchor: (Width: 250, Height: 36);
          Text: "Add Vexa";
        }

        $C.@TextButton #RemoveButton {
          Anchor: (Left: 10, Width: 200, Height: 36);
          Text: "Remove Vexa";
        }
      }

      Group {
        LayoutMode: Left;
        Anchor: (Top: 8, Height: 36);

        $C.@TextButton #ResetProgressButton {
          Anchor: (Width: 250, Height: 36);
          Text: "Reset Progress";
        }

        TextButton #ResetAllPlayersButton {
          Anchor: (Left: 10, Width: 250, Height: 36);
          Padding: (Left: 8, Top: 2);
          Text: "Reset ALL Players";
          Style: TextButtonStyle(
            Default: (LabelStyle: (FontSize: 14, TextColor: #ff4444, RenderBold: true)),
            Sounds: $C.@ButtonSounds,
          );
          Background: #330000(0.4);
        }
      }

      Label {
        Anchor: (Top: 16);
        Style: (FontSize: 16, TextColor: #93844c, RenderBold: true);
        Text: "Skill Tree Points";
      }

      Group {
        LayoutMode: Left;
        Anchor: (Top: 10, Height: 30);

        Label {
          Anchor: (Width: 140);
          Style: (FontSize: 14, TextColor: #cfd7dc);
          Text: "Current Points:";
        }

        Label #CurrentSkillPointsValue {
          Style: (FontSize: 14, TextColor: #ffffff(0.9));
          Text: "0";
        }
      }

      Label {
        Anchor: (Top: 10);
        Style: (FontSize: 13, TextColor: #cfd7dc);
        Text: "Skill Points Amount";
      }

      $C.@TextField #SkillPointsAmountField {
        Anchor: (Height: 30);
        Style: (FontSize: 14, TextColor: #ffffff(0.85));
      }

      Group {
        LayoutMode: Left;
        Anchor: (Top: 12, Height: 36);

        $C.@TextButton #AddSkillPointsButton {
          Anchor: (Width: 250, Height: 36);
          Text: "Add Skill Points";
        }

        $C.@TextButton #RemoveSkillPointsButton {
          Anchor: (Left: 10, Width: 200, Height: 36);
          Text: "Remove Skill Points";
        }
      }

      Label {
        Anchor: (Top: 16);
        Style: (FontSize: 16, TextColor: #93844c, RenderBold: true);
        Text: "World Settings";
      }

      Group {
        LayoutMode: Left;
        Anchor: (Top: 8, Height: 36);

        $C.@TextButton #SetSpawnLocationButton {
          Anchor: (Width: 250, Height: 36);
          Text: "Set Spawn Location";
        }

        Label #SpawnLocationStatus {
          Anchor: (Left: 12);
          Style: (FontSize: 13, TextColor: #cfd7dc, VerticalAlignment: Center);
          Text: "Not set";
        }
      }

      Group {
        LayoutMode: Left;
        Anchor: (Top: 8, Height: 36);

        $C.@TextButton #SetNpcLocationButton {
          Anchor: (Width: 250, Height: 36);
          Text: "Set NPC Location";
        }

        Label #NpcLocationStatus {
          Anchor: (Left: 12);
          Style: (FontSize: 13, TextColor: #cfd7dc, VerticalAlignment: Center);
          Text: "Not set";
        }
      }

      Label {
        Anchor: (Top: 16);
        Style: (FontSize: 16, TextColor: #93844c, RenderBold: true);
        Text: "Void Y Threshold";
      }

      Group {
        LayoutMode: Left;
        Anchor: (Top: 8, Height: 30);

        Label {
          Anchor: (Width: 140);
          Style: (FontSize: 14, TextColor: #cfd7dc);
          Text: "Current Value:";
        }

        Label #VoidYThresholdValue {
          Style: (FontSize: 14, TextColor: #ffffff(0.9));
          Text: "Not set";
        }
      }

      Label {
        Anchor: (Top: 6);
        Style: (FontSize: 12, TextColor: #cfd7dc(0.6));
        Text: "Players below this Y are teleported to spawn";
      }

      $C.@TextField #VoidYThresholdField {
        Anchor: (Top: 6, Height: 30);
        Style: (FontSize: 14, TextColor: #ffffff(0.85));
      }

      Group {
        LayoutMode: Left;
        Anchor: (Top: 8, Height: 36);

        $C.@TextButton #SaveVoidYButton {
          Anchor: (Width: 200, Height: 36);
          Text: "Save Threshold";
        }

        $C.@TextButton #ClearVoidYButton {
          Anchor: (Left: 10, Width: 200, Height: 36);
          Text: "Disable Threshold";
        }
      }

      Group {
        LayoutMode: Left;
        Anchor: (Top: 10, Height: 32);

        $C.@TextButton #BackButton {
          Anchor: (Width: 140, Height: 32);
          Text: "Back";
        }
      }
    }
  }
}
