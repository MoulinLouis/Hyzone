Group {
  Anchor: (Left: 0, Right: 0, Height: 64);
  LayoutMode: Left;
  Padding: (Left: 0, Right: 0, Top: 4, Bottom: 0);

  // Left accent bar
  Group #AccentBar {
    Anchor: (Width: 8, Top: 0, Bottom: 0);
    Background: #10b981;
  }

  // Content
  Group {
    Anchor: (Left: 12, Right: 0, Top: 0, Bottom: 0);
    LayoutMode: Top;
    Padding: (Left: 8, Right: 8, Top: 6, Bottom: 6);
    Background: #1a2530(0.6);

    // Map name + stars
    Group {
      Anchor: (Left: 0, Right: 0);
      LayoutMode: Left;

      Label #MapName {
        Style: (FontSize: 14, TextColor: #e2e8f0, RenderBold: true);
        Text: "Map Name";
      }

      Label #Stars {
        Anchor: (Left: 8);
        Style: (FontSize: 12, TextColor: #ffd166);
        Text: "â˜…â˜…â˜…";
      }

      Label #SpeedLevel {
        Anchor: (Left: 8);
        Style: (FontSize: 11, TextColor: #94a3b8);
        Text: "Lv.10";
      }
    }

    // Stats
    Group {
      Anchor: (Left: 0, Right: 0, Top: 4);
      LayoutMode: Left;

      Label #Runs {
        Style: (FontSize: 12, TextColor: #9fb0ba);
        Text: "0 runs";
      }

      Label #Multiplier {
        Anchor: (Left: 12);
        Style: (FontSize: 12, TextColor: #7c3aed);
        Text: "+0.0 mult";
      }

      Label #Coins {
        Anchor: (Left: 12);
        Style: (FontSize: 12, TextColor: #10b981, RenderBold: true);
        Text: "ðŸª™ 0";
      }
    }
  }
}
