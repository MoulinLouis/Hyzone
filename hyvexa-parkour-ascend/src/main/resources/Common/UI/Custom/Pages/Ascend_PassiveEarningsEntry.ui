Group {
  Anchor: (Left: 0, Right: 0, Height: 60, Bottom: 4);
  LayoutMode: Full;
  Background: #ffffff(0.03);
  OutlineColor: #ffffff(0.04);
  OutlineSize: 1;

  // Left accent bar
  Group #AccentBar {
    Anchor: (Width: 4, Top: 0, Bottom: 0, Left: 0);
    Background: #10b981;
  }

  // Content
  Group {
    Anchor: (Left: 4, Right: 0, Top: 0, Bottom: 0);
    LayoutMode: Top;
    Padding: (Left: 10, Right: 10, Top: 8, Bottom: 8);

    // Map name + stars + speed level
    Group {
      Anchor: (Left: 0, Right: 0);
      LayoutMode: Left;

      Label #MapName {
        Style: (FontSize: 14, TextColor: #f0f4f8, RenderBold: true);
        Text: "Map Name";
      }

      Group #StarContainer {
        Anchor: (Left: 8, Height: 12, Top: 2);
        LayoutMode: Left;

        Group #Star1 {
          Anchor: (Width: 12, Height: 12);
          Background: (TexturePath: "../Textures/star.png");
          Visible: false;
        }
        Group #Star2 {
          Anchor: (Left: 2, Width: 12, Height: 12);
          Background: (TexturePath: "../Textures/star.png");
          Visible: false;
        }
        Group #Star3 {
          Anchor: (Left: 2, Width: 12, Height: 12);
          Background: (TexturePath: "../Textures/star.png");
          Visible: false;
        }
        Group #Star4 {
          Anchor: (Left: 2, Width: 12, Height: 12);
          Background: (TexturePath: "../Textures/star.png");
          Visible: false;
        }
        Group #Star5 {
          Anchor: (Left: 2, Width: 12, Height: 12);
          Background: (TexturePath: "../Textures/star.png");
          Visible: false;
        }
      }

      Label #SpeedLevel {
        Anchor: (Left: 8);
        Style: (FontSize: 12, TextColor: #6b7280);
        Text: "Lv.10";
      }
    }

    // Stats row
    Group {
      Anchor: (Left: 0, Right: 0, Top: 4);
      LayoutMode: Left;

      Label #Runs {
        Style: (FontSize: 13, TextColor: #9fb0ba);
        Text: "0 runs";
      }

      Label #Multiplier {
        Anchor: (Left: 12);
        Style: (FontSize: 13, TextColor: #7c3aed);
        Text: "+0.0 mult";
      }

      Label #Vexa {
        Anchor: (Left: 12);
        Style: (FontSize: 13, TextColor: #10b981, RenderBold: true);
        Text: "0";
      }
    }
  }
}
