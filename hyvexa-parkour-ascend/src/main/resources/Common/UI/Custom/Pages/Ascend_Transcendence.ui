$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #TranscendenceWindow {
    Anchor: (Width: 380, Height: 500);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      // Top accent line (gold)
      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #f59e0b;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 200, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "Transcendence";
      }

      Group {
        Anchor: (Right: 16, Top: 10, Width: 72, Height: 32);

        TextButton #CloseButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "Close";
          Style: TextButtonStyle(
            Default: (
              Background: #ffffff(0.06),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ffffff(0.1),
              LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ffffff(0.04),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 20, Right: 20, Top: 12, Bottom: 16);

      Label {
        Anchor: (Left: 0, Right: 0);
        Style: (FontSize: 11, TextColor: #f59e0b, RenderBold: true, RenderUppercase: true, LetterSpacing: 2);
        Text: "4th Prestige";
      }

      // --- Transcendence Card ---
      Group #TranscendenceCard {
        Anchor: (Left: 0, Right: 0, Top: 10);
        LayoutMode: Full;
        Background: #ffffff(0.03);
        OutlineColor: #ffffff(0.04);
        OutlineSize: 1;

        // Left accent bar
        Group {
          Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 4);
          Background: #f59e0b;
        }

        Group #CardContent {
          Anchor: (Left: 4, Right: 0, Top: 0, Bottom: 0);
          Padding: (Left: 20, Right: 20, Top: 14, Bottom: 16);
          LayoutMode: Top;

          Label {
            Anchor: (Left: 0, Right: 0);
            Style: (FontSize: 12, TextColor: #6b7280, RenderUppercase: true, LetterSpacing: 1, HorizontalAlignment: Center);
            Text: "Transcendence Count";
          }

          Label #TranscendenceCountValue {
            Anchor: (Left: 0, Right: 0, Top: 4);
            Style: (FontSize: 28, TextColor: #f59e0b, RenderBold: true, HorizontalAlignment: Center);
            Text: "x0";
          }

          Group #Divider {
            Anchor: (Left: 40, Right: 40, Top: 12, Height: 1);
            Background: #ffffff(0.06);
          }

          // --- Stat Rows ---
          Group #StatRows {
            Anchor: (Left: 0, Right: 0, Top: 12);
            LayoutMode: Top;

            Group {
              LayoutMode: Left;
              Anchor: (Left: 0, Right: 0, Height: 26);

              Label {
                Anchor: (Width: 180, Top: 0, Bottom: 0);
                Style: (FontSize: 13, TextColor: #9fb0ba, VerticalAlignment: Center);
                Text: "Your Volt";
              }

              Group { FlexWeight: 1; }

              Label #CurrentVolt {
                Anchor: (Top: 0, Bottom: 0);
                Style: (FontSize: 14, TextColor: #ffd166, RenderBold: true, VerticalAlignment: Center);
                Text: "0";
              }
            }

            Group {
              LayoutMode: Left;
              Anchor: (Left: 0, Right: 0, Top: 4, Height: 26);

              Label {
                Anchor: (Width: 180, Top: 0, Bottom: 0);
                Style: (FontSize: 13, TextColor: #9fb0ba, VerticalAlignment: Center);
                Text: "Required";
              }

              Group { FlexWeight: 1; }

              Label #RequiredVolt {
                Anchor: (Top: 0, Bottom: 0);
                Style: (FontSize: 14, TextColor: #f59e0b, RenderBold: true, VerticalAlignment: Center);
                Text: "1 Googol";
              }
            }
          }
        }
      }

      // --- Milestone Section ---
      Group #MilestoneCard {
        Anchor: (Left: 0, Right: 0, Top: 12);
        LayoutMode: Full;
        Background: #ffffff(0.03);
        OutlineColor: #ffffff(0.04);
        OutlineSize: 1;

        Group {
          Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 4);
          Background: #f59e0b;
        }

        Group {
          Anchor: (Left: 4, Right: 0, Top: 0, Bottom: 0);
          Padding: (Left: 16, Right: 16, Top: 10, Bottom: 10);
          LayoutMode: Left;

          Label {
            Anchor: (Width: 200, Top: 0, Bottom: 0);
            Style: (FontSize: 13, TextColor: #9fb0ba, VerticalAlignment: Center);
            Text: "Milestone 1: Unlock Map 6";
          }

          Group { FlexWeight: 1; }

          Label #Milestone1Status {
            Anchor: (Top: 0, Bottom: 0);
            Style: (FontSize: 13, TextColor: #6b7280, RenderBold: true, VerticalAlignment: Center);
            Text: "LOCKED";
          }
        }
      }

      // --- Transcend Button ---
      Group #ButtonRow {
        Anchor: (Left: 0, Right: 0, Top: 12, Height: 44);

        TextButton #TranscendButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "TRANSCEND";
          Style: TextButtonStyle(
            Default: (
              Background: #92400e,
              LabelStyle: (FontSize: 15, TextColor: #fef3c7, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #b45309,
              LabelStyle: (FontSize: 15, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #78350f,
              LabelStyle: (FontSize: 15, TextColor: #fef3c7, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }

      // --- Warning Card ---
      Group #WarningCard {
        Anchor: (Left: 0, Right: 0, Top: 12, Height: 48);
        LayoutMode: Full;
        Background: #ffffff(0.03);
        OutlineColor: #ef4444(0.2);
        OutlineSize: 1;

        Group {
          Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 4);
          Background: #ef4444;
        }

        Label {
          Anchor: (Left: 16, Top: 0, Bottom: 0, Width: 14);
          Style: (FontSize: 14, TextColor: #ef4444, RenderBold: true, VerticalAlignment: Center);
          Text: "!";
        }

        Label {
          Anchor: (Left: 28, Right: 16, Top: 0, Bottom: 0);
          Style: (FontSize: 11, TextColor: #fca5a5, VerticalAlignment: Center, Wrap: true);
          Text: "Resets EVERYTHING including Ascendancy Tree and challenges.";
        }
      }

      // --- Tip ---
      Label {
        Anchor: (Left: 0, Right: 0, Top: 8);
        Style: (FontSize: 12, TextColor: #6b7280, HorizontalAlignment: Center, Wrap: true);
        Text: "Best times, achievements, and lifetime stats are preserved.";
      }
    }
  }
}
