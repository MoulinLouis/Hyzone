$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 920, Height: 780);

    #Title {
      Group {
        TextButton #CloseButton {
          Anchor: (Left: 12, Top: 4, Width: 64, Height: 24);
          Padding: (Left: 8, Top: 2);
          Text: "Close";
          Style: TextButtonStyle(
            Default: (
              Background: #000000(0.13),
              LabelStyle: (FontSize: 14, TextColor: #93844c, RenderBold: true)
            ),
            Hovered: (
              Background: #000000(0.22),
              LabelStyle: (FontSize: 14, TextColor: #93844c, RenderBold: true)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
        $C.@Title {
          @Text = "Ascend Map Admin";
        }
      }
    }

    #Content {
      LayoutMode: Left;
      Padding: (Left: 12, Right: 12, Top: 6, Bottom: 12);

      Group #FormColumn {
        Anchor: (Width: 300);
        LayoutMode: Top;

        Label {
          Style: (FontSize: 16, TextColor: #93844c, RenderBold: true);
          Text: "Create / Edit Map";
        }

        Label {
          Text: "Map Id";
          Style: (FontSize: 13, TextColor: #cfd7dc);
          Anchor: (Top: 4);
        }

        $C.@TextField #MapIdField {
          Anchor: (Height: 28);
          Style: (FontSize: 14, TextColor: #ffffff(0.85));
        }

        Label {
          Text: "Map Name";
          Style: (FontSize: 13, TextColor: #cfd7dc);
          Anchor: (Top: 4);
        }

        $C.@TextField #MapNameField {
          Anchor: (Height: 28);
          Style: (FontSize: 14, TextColor: #ffffff(0.85));
        }

        Label {
          Text: "Level (0-4)";
          Style: (FontSize: 13, TextColor: #cfd7dc);
          Anchor: (Top: 4);
        }

        $C.@TextField #MapOrderField {
          Anchor: (Height: 28);
          Style: (FontSize: 14, TextColor: #ffffff(0.85));
        }

        Label #SelectedMapText {
          Anchor: (Top: 8);
          Style: (FontSize: 13, TextColor: #9fb0ba, RenderBold: true);
          Text: "Selected: (none)";
        }

        Label #BalanceInfoText {
          Anchor: (Top: 2);
          Style: (FontSize: 12, TextColor: #7a9aa8);
          Text: "";
        }

        Group {
          LayoutMode: Left;
          Anchor: (Top: 8, Height: 32);

          $C.@TextButton #CreateButton {
            Anchor: (Width: 140, Height: 30);
            Text: "Create";
          }

          $C.@TextButton #SetNameButton {
            Anchor: (Left: 8, Width: 140, Height: 30);
            Text: "Set Name";
          }
        }

        Group {
          LayoutMode: Left;
          Anchor: (Top: 6, Height: 32);

          $C.@TextButton #SetOrderButton {
            Anchor: (Width: 140, Height: 30);
            Text: "Set Level";
          }
        }

        Label {
          Text: "Position (at your location)";
          Style: (FontSize: 14, TextColor: #93844c, RenderBold: true);
          Anchor: (Top: 12);
        }

        Group {
          LayoutMode: Left;
          Anchor: (Top: 6, Height: 32);

          $C.@TextButton #SetStartButton {
            Anchor: (Width: 140, Height: 30);
            Text: "Set Start";
          }

          $C.@TextButton #SetFinishButton {
            Anchor: (Left: 8, Width: 140, Height: 30);
            Text: "Set Finish";
          }
        }

        Label {
          Text: "Waypoints (runner path)";
          Style: (FontSize: 14, TextColor: #93844c, RenderBold: true);
          Anchor: (Top: 12);
        }

        Label #WaypointCountText {
          Anchor: (Top: 2);
          Style: (FontSize: 12, TextColor: #9fb0ba);
          Text: "No waypoints";
        }

        Group {
          LayoutMode: Left;
          Anchor: (Top: 6, Height: 32);

          $C.@TextButton #AddWaypointButton {
            Anchor: (Width: 140, Height: 30);
            Text: "Add Waypoint";
          }

          $C.@TextButton #ClearWaypointsButton {
            Anchor: (Left: 8, Width: 140, Height: 30);
            Text: "Clear All";
          }
        }

        Label {
          Text: "Holograms";
          Style: (FontSize: 14, TextColor: #93844c, RenderBold: true);
          Anchor: (Top: 12);
        }

        Group {
          LayoutMode: Left;
          Anchor: (Top: 6, Height: 32);

          $C.@TextButton #CreateMapHoloButton {
            Anchor: (Width: 140, Height: 30);
            Text: "Create Holo";
          }

          $C.@TextButton #DeleteMapHoloButton {
            Anchor: (Left: 8, Width: 140, Height: 30);
            Text: "Delete Holo";
          }
        }

        Label {
          Text: "Balancing (from code)";
          Style: (FontSize: 14, TextColor: #93844c, RenderBold: true);
          Anchor: (Top: 16);
        }

        Label #BalancingTableText {
          Anchor: (Top: 4);
          Style: (FontSize: 11, TextColor: #8fa8b4);
          Text: "Loading...";
        }

        Label {
          Text: "Multipliers";
          Style: (FontSize: 12, TextColor: #7a9aa8);
          Anchor: (Top: 8);
        }

        Label #MultiplierInfoText {
          Anchor: (Top: 2);
          Style: (FontSize: 11, TextColor: #8fa8b4);
          Text: "";
        }
      }

      Group #ListColumn {
        Anchor: (Left: 16, Width: 560);
        LayoutMode: Top;

        Label {
          Style: (FontSize: 16, TextColor: #93844c, RenderBold: true);
          Text: "Maps";
        }

        $C.@TextField #MapSearchField {
          Anchor: (Top: 4, Height: 28);
          Style: (FontSize: 13, TextColor: #ffffff(0.85));
        }

        Group #MapList {
          Anchor: (Top: 6, Width: 540, Height: 620);
          LayoutMode: TopScrolling;
          Padding: (Left: 6, Right: 6);
          ScrollbarStyle: $C.@DefaultScrollbarStyle;

          Group #MapCards {
            LayoutMode: Top;
          }
        }
      }
    }
  }
}
