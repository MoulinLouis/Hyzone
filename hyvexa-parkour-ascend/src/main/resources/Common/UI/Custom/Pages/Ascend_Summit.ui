$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 620, Height: 520);

    #Title {
      Group {
        TextButton #CloseButton {
          Anchor: (Left: 12, Top: 4, Width: 64, Height: 24);
          Padding: (Left: 8, Top: 2);
          Text: "Close";
          Style: TextButtonStyle(
            Default: (LabelStyle: (FontSize: 14, TextColor: #9fb0ba, RenderBold: true)),
            Sounds: $C.@ButtonSounds,
          );
          Background: #000000(0.3);
        }
        $C.@Title {
          @Text = "S U M M I T";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 20, Right: 20, Top: 6, Bottom: 12);

      Group {
        Anchor: (Top: 8);
        LayoutMode: Left;

        Label {
          Anchor: (Width: 120);
          Style: (FontSize: 14, TextColor: #9fb0ba);
          Text: "Your Coins:";
        }

        Label #CoinsValue {
          Style: (FontSize: 14, TextColor: #ffd166, RenderBold: true);
          Text: "0";
        }
      }

      Label {
        Anchor: (Top: 8);
        Style: (FontSize: 12, TextColor: #9fb0ba);
        Text: "Invest coins into permanent category bonuses.";
      }

      Group #CategoryList {
        Anchor: (Left: 0, Right: 0, Top: 12);
        FlexWeight: 1;
        LayoutMode: Top;

        Group #CategoryCards {
          LayoutMode: Top;
        }
      }

      Label #WarningText {
        Anchor: (Top: 12);
        Style: (FontSize: 12, TextColor: #fca5a5);
        Text: "Warning: Summit resets coins and elevation.";
      }
    }
  }
}
