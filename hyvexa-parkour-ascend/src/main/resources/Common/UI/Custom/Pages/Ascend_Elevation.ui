$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #ElevationWindow {
    Anchor: (Width: 380, Height: 385);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      // Top accent line
      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #06b6d4;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 200, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "Elevation";
      }

      Group {
        Anchor: (Right: 16, Top: 10, Width: 72, Height: 32);

        TextButton #CloseButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "Close";
          Style: TextButtonStyle(
            Default: (
              Background: #ffffff(0.06),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ffffff(0.1),
              LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ffffff(0.04),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 20, Right: 20, Top: 12, Bottom: 16);

      // --- Progress Info ---
      Label #ConversionRate {
        Anchor: (Left: 0, Right: 0);
        Style: (FontSize: 13, TextColor: #9fb0ba);
        Text: "1000 volt = +1 elevation";
      }

      // --- Multiplier Card ---
      Group #ElevationCard {
        Anchor: (Left: 0, Right: 0, Top: 12);
        LayoutMode: Full;
        Background: #ffffff(0.03);
        OutlineColor: #ffffff(0.04);
        OutlineSize: 1;

        // Left accent bar
        Group {
          Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 4);
          Background: #06b6d4;
        }

        Group #CardContent {
          Anchor: (Left: 4, Right: 0, Top: 0, Bottom: 0);
          Padding: (Left: 20, Right: 20, Top: 16, Bottom: 16);
          LayoutMode: Top;

          Label #GlobalMultiplierTitle {
            Anchor: (Left: 0, Right: 0);
            Style: (FontSize: 14, TextColor: #9fb0ba, HorizontalAlignment: Center);
            Text: "GLOBAL MULTIPLIER";
          }

          Group #MultiplierDisplay {
            Anchor: (Left: 0, Right: 0, Top: 12, Height: 48);
            LayoutMode: Left;

            Group { FlexWeight: 1; }

            Group #CurrentBlock {
              LayoutMode: Top;

              Label {
                Style: (FontSize: 12, TextColor: #6b7280, HorizontalAlignment: Center);
                Text: "Current";
              }

              Label #MultiplierValue {
                Anchor: (Top: 2);
                Style: (FontSize: 22, TextColor: #06b6d4, RenderBold: true, HorizontalAlignment: Center);
                Text: "x1";
              }
            }

            Label #ArrowLabel {
              Anchor: (Left: 20, Right: 20);
              Style: (FontSize: 18, TextColor: #9fb0ba, HorizontalAlignment: Center);
              Text: "->";
            }

            Group #NewBlock {
              LayoutMode: Top;

              Label {
                Style: (FontSize: 12, TextColor: #6b7280, HorizontalAlignment: Center);
                Text: "New";
              }

              Label #NewMultiplierValue {
                Anchor: (Top: 2);
                Style: (FontSize: 22, TextColor: #4ade80, RenderBold: true, HorizontalAlignment: Center);
                Text: "x1";
              }
            }

            Group { FlexWeight: 1; }
          }

          Label #GainValue {
            Anchor: (Left: 0, Right: 0, Top: 10);
            Style: (FontSize: 14, TextColor: #4ade80, RenderBold: true, HorizontalAlignment: Center);
            Text: "+0 elevation";
          }
        }
      }

      // --- Elevate Button ---
      Group #ButtonRow {
        Anchor: (Left: 0, Right: 0, Top: 12, Height: 44);

        TextButton #ElevateButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "ELEVATE";
          Style: TextButtonStyle(
            Default: (
              Background: #164e63,
              LabelStyle: (FontSize: 15, TextColor: #e0f2fe, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #1e6b8a,
              LabelStyle: (FontSize: 15, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #0e3a4a,
              LabelStyle: (FontSize: 15, TextColor: #e0f2fe, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }

      // --- Warning Card ---
      Group #WarningCard {
        Anchor: (Left: 0, Right: 0, Top: 12, Height: 38);
        LayoutMode: Full;
        Background: #ffffff(0.03);
        OutlineColor: #ef4444(0.2);
        OutlineSize: 1;

        Group {
          Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 4);
          Background: #ef4444;
        }

        Label {
          Anchor: (Left: 16, Top: 0, Bottom: 0, Width: 14);
          Style: (FontSize: 14, TextColor: #ef4444, RenderBold: true, VerticalAlignment: Center);
          Text: "!";
        }

        Label {
          Anchor: (Left: 28, Right: 16, Top: 0, Bottom: 0);
          Style: (FontSize: 12, TextColor: #fca5a5, VerticalAlignment: Center);
          Text: "Warning: Elevation resets volt to zero.";
        }
      }

      // --- Tip ---
      Label #TipText {
        Anchor: (Left: 0, Right: 0, Top: 8);
        Style: (FontSize: 12, TextColor: #6b7280, HorizontalAlignment: Center);
        Text: "Higher elevation = more volt from all sources.";
      }
    }
  }
}
