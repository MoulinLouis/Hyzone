$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 340, Height: 380);

    #Title {
      Group {
        TextButton #CloseButton {
          Anchor: (Left: 12, Top: 4, Width: 64, Height: 24);
          Padding: (Left: 8, Top: 2);
          Text: "Close";
          Style: TextButtonStyle(
            Default: (LabelStyle: (FontSize: 14, TextColor: #9fb0ba, RenderBold: true)),
            Sounds: $C.@ButtonSounds,
          );
          Background: #000000(0.3);
        }
        $C.@Title {
          @Text = "E L E V A T I O N";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 24, Right: 24, Top: 10, Bottom: 16);

      Label #ConversionRate {
        Anchor: (Left: 0, Right: 0, Top: 4);
        Style: (FontSize: 14, TextColor: #9fb0ba);
        Text: "1000 coins = +1 elevation";
      }

      Group #ElevationCard {
        Anchor: (Left: 0, Right: 0, Top: 16);
        LayoutMode: Top;
        Background: #1a2530(0.95);

        Group #AccentBar {
          Anchor: (Left: 0, Right: 0, Height: 4);
          Background: #06b6d4;
        }

        Group #CardContent {
          Anchor: (Left: 0, Right: 0, Top: 0);
          Padding: (Left: 24, Right: 24, Top: 20, Bottom: 20);
          LayoutMode: Top;

          Label #GlobalMultiplierTitle {
            Anchor: (Left: 0, Right: 0);
            Style: (FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center);
            Text: "GLOBAL MULTIPLIER";
          }

          Group #MultiplierDisplay {
            Anchor: (Left: 0, Right: 0, Top: 12, Height: 48);
            LayoutMode: Left;

            Group { FlexWeight: 1; }

            Group #CurrentBlock {
              LayoutMode: Top;

              Label {
                Style: (FontSize: 14, TextColor: #9fb0ba, HorizontalAlignment: Center);
                Text: "Current";
              }

              Label #MultiplierValue {
                Anchor: (Top: 2);
                Style: (FontSize: 22, TextColor: #06b6d4, RenderBold: true, HorizontalAlignment: Center);
                Text: "x1";
              }
            }

            Label #ArrowLabel {
              Anchor: (Left: 20, Right: 20);
              Style: (FontSize: 18, TextColor: #9fb0ba, HorizontalAlignment: Center);
              Text: "->";
            }

            Group #NewBlock {
              LayoutMode: Top;

              Label {
                Style: (FontSize: 14, TextColor: #9fb0ba, HorizontalAlignment: Center);
                Text: "New";
              }

              Label #NewMultiplierValue {
                Anchor: (Top: 2);
                Style: (FontSize: 22, TextColor: #4ade80, RenderBold: true, HorizontalAlignment: Center);
                Text: "x1";
              }
            }

            Group { FlexWeight: 1; }
          }

          Label #GainValue {
            Anchor: (Left: 0, Right: 0, Top: 12);
            Style: (FontSize: 16, TextColor: #4ade80, RenderBold: true, HorizontalAlignment: Center);
            Text: "+0 elevation";
          }

          Group #ButtonRow {
            Anchor: (Left: 0, Right: 0, Top: 20, Height: 48);
            LayoutMode: Left;

            Group { FlexWeight: 1; }

            TextButton #ElevateButton {
              Anchor: (Width: 180, Height: 48);
              Padding: (Left: 16, Right: 16, Top: 12, Bottom: 8);
              Text: "ELEVATE";
              Style: TextButtonStyle(
                Default: (
                  Background: #2d5a7b(0.85),
                  LabelStyle: (FontSize: 16, TextColor: #e8f4fc, RenderBold: true, HorizontalAlignment: Center)
                ),
                Hovered: (
                  Background: #3a7399(0.92),
                  LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center)
                ),
                Pressed: (
                  Background: #4a8ab3(0.95),
                  LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center)
                ),
                Sounds: $C.@ButtonSounds,
              );
            }

            Group { FlexWeight: 1; }
          }
        }
      }

      Label #WarningText {
        Anchor: (Left: 0, Right: 0, Top: 16);
        Style: (FontSize: 14, TextColor: #fca5a5, HorizontalAlignment: Center);
        Text: "Warning: Elevation resets coins to zero.";
      }

      Label #TipText {
        Anchor: (Left: 0, Right: 0, Top: 6);
        Style: (FontSize: 14, TextColor: #9fb0ba, HorizontalAlignment: Center);
        Text: "Higher elevation = more coins from all sources.";
      }
    }
  }
}
