$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 620, Height: 420);

    #Title {
      Group {
        TextButton #CloseButton {
          Anchor: (Left: 12, Top: 4, Width: 64, Height: 24);
          Padding: (Left: 8, Top: 2);
          Text: "Close";
          Style: TextButtonStyle(
            Default: (LabelStyle: (FontSize: 14, TextColor: #9fb0ba, RenderBold: true)),
            Sounds: $C.@ButtonSounds,
          );
          Background: #000000(0.3);
        }
        $C.@Title {
          @Text = "E L E V A T I O N";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 20, Right: 20, Top: 6, Bottom: 12);

      Group {
        Anchor: (Top: 8);
        LayoutMode: Left;

        Label {
          Anchor: (Width: 120);
          Style: (FontSize: 14, TextColor: #9fb0ba);
          Text: "Your Coins:";
        }

        Label #CoinsValue {
          Style: (FontSize: 14, TextColor: #ffd166, RenderBold: true);
          Text: "0";
        }
      }

      Label {
        Anchor: (Top: 8);
        Style: (FontSize: 12, TextColor: #9fb0ba);
        Text: "Convert coins into a permanent multiplier that boosts all earnings.";
      }

      Group #CardContainer {
        Anchor: (Left: 0, Right: 0, Top: 12);
        LayoutMode: Left;

        Group { FlexWeight: 1; }

        Group #ElevationCard {
          Anchor: (Width: 420, Height: 260);
          LayoutMode: Top;
          Background: #1a2530(0.95);

          Group #AccentBar {
            Anchor: (Left: 0, Right: 0, Height: 4);
            Background: #06b6d4;
          }

          Group #InfoSection {
            Anchor: (Left: 0, Right: 0, Top: 0);
            Padding: (Left: 20, Right: 20, Top: 18, Bottom: 12);
            LayoutMode: Top;

          Label {
            Anchor: (Left: 0, Right: 0);
            Style: (
              FontSize: 18,
              RenderBold: true,
              TextColor: #f0f4f8,
              HorizontalAlignment: Center
            );
            Text: "Elevation Multiplier";
          }

          Label #ConversionRate {
            Anchor: (Left: 0, Right: 0, Top: 4);
            Style: (
              FontSize: 13,
              TextColor: #9fb0ba,
              HorizontalAlignment: Center
            );
            Text: "Conversion: 1000 coins = +1 elevation";
          }

          Group {
            LayoutMode: Left;
            Anchor: (Left: 0, Right: 0, Top: 12, Height: 28);

            Label {
              Anchor: (Width: 160);
              Style: (FontSize: 14, TextColor: #9fb0ba);
              Text: "Current Elevation:";
            }

            Label #MultiplierValue {
              Style: (FontSize: 14, TextColor: #06b6d4, RenderBold: true);
              Text: "x1";
            }
          }

          Group {
            LayoutMode: Left;
            Anchor: (Left: 0, Right: 0, Top: 4, Height: 28);

            Label {
              Anchor: (Width: 160);
              Style: (FontSize: 14, TextColor: #9fb0ba);
              Text: "Multiplier Gain:";
            }

            Label #GainValue {
              Style: (FontSize: 14, TextColor: #4ade80, RenderBold: true);
              Text: "+0";
            }
          }
        }

          Group #ButtonZone {
            Anchor: (Left: 0, Right: 0, Top: 0);
            Padding: (Left: 20, Right: 20, Top: 0, Bottom: 18);
            LayoutMode: Top;

            Button #ElevateButton {
              Anchor: (Left: 0, Right: 0, Height: 110);
              Padding: (Left: 12, Right: 12, Top: 8, Bottom: 8);
              Background: #000000(0.25);
              Style: ButtonStyle(
                Default: (Background: #000000(0.25)),
                Hovered: (Background: #000000(0.4)),
                Pressed: (Background: #000000(0.15)),
                Sounds: $C.@ButtonSounds,
              );
              LayoutMode: Top;

              Label #CurrentMultiplierLabel {
                Anchor: (Left: 0, Right: 0, Top: 2);
                Style: (
                  FontSize: 15,
                  RenderBold: true,
                  TextColor: #06b6d4,
                  HorizontalAlignment: Center
                );
                Text: "x1";
              }

              Label #ArrowLabel {
                Anchor: (Left: 0, Right: 0, Top: 2);
                Style: (
                  FontSize: 18,
                  TextColor: #9fb0ba,
                  HorizontalAlignment: Center
                );
                Text: "â†“";
              }

              Label #NewMultiplierLabel {
                Anchor: (Left: 0, Right: 0, Top: 2);
                Style: (
                  FontSize: 15,
                  RenderBold: true,
                  TextColor: #4ade80,
                  HorizontalAlignment: Center
                );
                Text: "x1";
              }

              Label #ButtonText {
                Anchor: (Left: 0, Right: 0, Top: 6);
                Style: (
                  FontSize: 15,
                  RenderBold: true,
                  TextColor: #f0f4f8,
                  HorizontalAlignment: Center
                );
                Text: "ELEVATE";
              }

              Label #GainPreview {
                Anchor: (Left: 0, Right: 0, Top: 2);
                Style: (
                  FontSize: 10,
                  TextColor: #4ade80,
                  RenderBold: true,
                  HorizontalAlignment: Center
                );
                Text: "";
              }
            }
          }
        }

        Group { FlexWeight: 1; }
      }

      Label #WarningText {
        Anchor: (Top: 12);
        Style: (FontSize: 12, TextColor: #fca5a5);
        Text: "Warning: Elevation resets coins to zero.";
      }

      Label #TipText {
        Anchor: (Top: 4);
        Style: (FontSize: 11, TextColor: #9fb0ba);
        Text: "Tip: Higher elevation = more coins from all sources permanently.";
      }
    }
  }
}
