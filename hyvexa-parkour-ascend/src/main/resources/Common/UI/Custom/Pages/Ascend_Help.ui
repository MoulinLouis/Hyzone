      // --- Ascension ---
      Group #AscensionEntry {
        Anchor: (Left: 0, Right: 0, Height: 64, Top: 8);
        LayoutMode: Full;
        Background: #ffffff(0.03);
        OutlineColor: #ffffff(0.06);
        OutlineSize: 1;

        Group {
          Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 4);
          Background: #ec4899;
        }

        Group {
          Anchor: (Left: 16, Top: 12, Width: 40, Height: 40);
          Background: (TexturePath: "../Textures/golem_icon.png");
        }

        Group {
          Anchor: (Left: 68, Top: 14, Right: 16);
          LayoutMode: Top;

          Label {
            Style: (FontSize: 15, TextColor: #f0f4f8, RenderBold: true);
            Text: "Ascension";
          }

          Label {
            Anchor: (Top: 4);
