$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #HelpWindow {
    Anchor: (Width: 460, Height: 620);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      // Top accent line
      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #f59e0b;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 200, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "Help";
      }

      Group {
        Anchor: (Right: 16, Top: 10, Width: 72, Height: 32);

        TextButton #CloseButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "Close";
          Style: TextButtonStyle(
            Default: (
              Background: #ffffff(0.06),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ffffff(0.1),
              LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ffffff(0.04),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 16, Right: 16, Top: 16, Bottom: 16);

      // --- Welcome Tutorial ---
      Group #WelcomeEntry {
        Anchor: (Left: 0, Right: 0, Height: 64);
        LayoutMode: Full;
        Background: #ffffff(0.03);
        OutlineColor: #ffffff(0.06);
        OutlineSize: 1;

        Group {
          Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 4);
          Background: #f59e0b;
        }

        Group {
          Anchor: (Left: 16, Top: 12, Width: 40, Height: 40);
          Background: (TexturePath: "../Textures/golem_icon.png");
        }

        Group {
          Anchor: (Left: 68, Top: 14, Right: 16);
          LayoutMode: Top;

          Label {
            Style: (FontSize: 15, TextColor: #f0f4f8, RenderBold: true);
            Text: "Welcome Tutorial";
          }

          Label {
            Anchor: (Top: 4);
            Style: (FontSize: 12, TextColor: #9fb0ba);
            Text: "Learn the basics of Ascend mode";
          }
        }

        Label {
          Anchor: (Right: 16, Top: 22);
          Style: (FontSize: 16, TextColor: #f59e0b);
          Text: ">";
        }

        TextButton #WelcomeButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "";
          Style: TextButtonStyle(
            Default: (Background: #ffffff(0.0)),
            Hovered: (Background: #ffffff(0.04)),
            Pressed: (Background: #ffffff(0.02)),
            Sounds: $C.@ButtonSounds,
          );
        }
      }

      // --- First Completion ---
      Group #FirstCompletionEntry {
        Anchor: (Left: 0, Right: 0, Height: 64, Top: 8);
        LayoutMode: Full;
        Background: #ffffff(0.03);
        OutlineColor: #ffffff(0.06);
        OutlineSize: 1;

        Group {
          Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 4);
          Background: #10b981;
        }

        Group {
          Anchor: (Left: 16, Top: 12, Width: 40, Height: 40);
          Background: (TexturePath: "../Textures/golem_icon.png");
        }

        Group {
          Anchor: (Left: 68, Top: 14, Right: 16);
          LayoutMode: Top;

          Label {
            Style: (FontSize: 15, TextColor: #f0f4f8, RenderBold: true);
            Text: "First Completion";
          }

          Label {
            Anchor: (Top: 4);
            Style: (FontSize: 12, TextColor: #9fb0ba);
