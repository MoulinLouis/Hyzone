$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #HelpWindow {
    Anchor: (Width: 460, Height: 380);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      // Top accent line
      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #f59e0b;
      }

      Label {
        Anchor: (Left: 20, Top: 18, Width: 200, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "Help";
      }

      Label {
        Anchor: (Right: 20, Top: 22, Width: 150, Height: 20);
        Style: (FontSize: 11, TextColor: #6b7c8a);
        Text: "Choose a topic";
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 16, Right: 16, Top: 16, Bottom: 16);

      // --- Welcome Tutorial entry ---
      Group #WelcomeEntry {
        Anchor: (Left: 0, Right: 0, Height: 64);
        LayoutMode: Full;
        Background: #ffffff(0.03);
        OutlineColor: #ffffff(0.06);
        OutlineSize: 1;

        // Accent bar
        Group {
          Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 4);
          Background: #f59e0b;
        }

        // Icon area
        Group {
          Anchor: (Left: 16, Top: 12, Width: 40, Height: 40);
          Background: (TexturePath: "../Textures/help/welcome_icon.png");
        }

        // Text
        Group {
          Anchor: (Left: 68, Top: 14, Right: 16);
          LayoutMode: Top;

          Label {
            Style: (FontSize: 15, TextColor: #f0f4f8, RenderBold: true);
            Text: "Welcome Tutorial";
          }

          Label {
            Anchor: (Top: 4);
            Style: (FontSize: 12, TextColor: #9fb0ba);
            Text: "Learn the basics of Ascend mode";
          }
        }

        // Arrow indicator
        Label {
          Anchor: (Right: 16, Top: 22);
          Style: (FontSize: 16, TextColor: #f59e0b);
          Text: ">";
        }

        // Clickable overlay
        TextButton #WelcomeButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "";
          Style: TextButtonStyle(
            Default: (Background: #ffffff(0.0)),
            Hovered: (Background: #ffffff(0.04)),
            Pressed: (Background: #ffffff(0.02)),
            Sounds: $C.@ButtonSounds,
          );
        }
      }

      // --- Placeholder for future tutorials ---
      Group #PlaceholderEntry {
        Anchor: (Left: 0, Right: 0, Height: 64, Top: 8);
        LayoutMode: Full;
        Background: #ffffff(0.015);
        OutlineColor: #ffffff(0.04);
        OutlineSize: 1;

        // Accent bar (muted)
        Group {
          Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 4);
          Background: #6b7c8a(0.3);
        }

        // Text
        Group {
          Anchor: (Left: 68, Top: 14, Right: 16);
          LayoutMode: Top;

          Label {
            Style: (FontSize: 15, TextColor: #6b7c8a);
            Text: "More coming soon...";
          }

          Label {
            Anchor: (Top: 4);
            Style: (FontSize: 12, TextColor: #4a5568);
            Text: "Additional guides will appear here";
          }
        }
      }
    }

    // === FOOTER ===
    Group #Footer {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Left;
      Padding: (Left: 16, Right: 16, Top: 8, Bottom: 8);
      Background: #0a1018(0.5);

      Group { FlexWeight: 1; }

      TextButton #CloseButton {
        Anchor: (Width: 100, Height: 36);
        Text: "Close";
        Style: TextButtonStyle(
          Default: (
            Background: #ffffff(0.06),
            LabelStyle: (FontSize: 14, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
          ),
          Hovered: (
            Background: #ffffff(0.1),
            LabelStyle: (FontSize: 14, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
          ),
          Pressed: (
            Background: #ffffff(0.04),
            LabelStyle: (FontSize: 14, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
          ),
          Sounds: $C.@ButtonSounds,
        );
      }
    }
  }
}
