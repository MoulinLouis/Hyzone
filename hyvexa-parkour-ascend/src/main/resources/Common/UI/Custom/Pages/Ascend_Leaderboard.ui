$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 540, Height: 580);

    #Title {
      Group {
        TextButton #CloseButton {
          Anchor: (Left: 12, Top: 4, Width: 64, Height: 26);
          Padding: (Left: 8, Top: 3);
          Text: "< Back";
          Style: TextButtonStyle(
            Default: (
              Background: #1a2530(0.95),
              LabelStyle: (FontSize: 14, TextColor: #f0f4f8, RenderBold: true)
            ),
            Hovered: (
              Background: #263545,
              LabelStyle: (FontSize: 14, TextColor: #f0f4f8, RenderBold: true)
            ),
            Pressed: (
              Background: #1e2d3a,
              LabelStyle: (FontSize: 14, TextColor: #f0f4f8, RenderBold: true)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
        $C.@Title {
          @Text = "Leaderboard";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 6, Bottom: 12);

      Group #TabsRow {
        Anchor: (Height: 36);
        LayoutMode: Left;

        TextButton #TabCoins {
          Anchor: (Width: 120, Height: 32);
          Background: #2d3f50;
          LayoutMode: Top;

          Group #TabCoinsAccent {
            Anchor: (Left: 0, Right: 0, Top: 0, Height: 3);
            Background: #f59e0b;
          }

          Label {
            Anchor: (Left: 0, Right: 0, Top: 8, Bottom: 0);
            Style: (FontSize: 13, RenderBold: true, TextColor: #f0f4f8);
            Text: "Coins";
          }
        }

        Group {
          Anchor: (Width: 8);
        }

        TextButton #TabAscensions {
          Anchor: (Width: 120, Height: 32);
          Background: #1a2530(0.6);
          LayoutMode: Top;

          Group #TabAscensionsAccent {
            Anchor: (Left: 0, Right: 0, Top: 0, Height: 3);
            Background: #1a2530(0.6);
          }

          Label {
            Anchor: (Left: 0, Right: 0, Top: 8, Bottom: 0);
            Style: (FontSize: 13, RenderBold: true, TextColor: #9fb0ba);
            Text: "Ascensions";
          }
        }

        Group {
          Anchor: (Width: 8);
        }

        TextButton #TabRuns {
          Anchor: (Width: 120, Height: 32);
          Background: #1a2530(0.6);
          LayoutMode: Top;

          Group #TabRunsAccent {
            Anchor: (Left: 0, Right: 0, Top: 0, Height: 3);
            Background: #1a2530(0.6);
          }

          Label {
            Anchor: (Left: 0, Right: 0, Top: 8, Bottom: 0);
            Style: (FontSize: 13, RenderBold: true, TextColor: #9fb0ba);
            Text: "Manual Runs";
          }
        }
      }

      Label {
        Anchor: (Top: 8);
        Style: (FontSize: 12, TextColor: #9fb0ba);
        Text: "Search";
      }

      $C.@TextField #SearchField {
        Anchor: (Height: 24, Top: 4);
        Style: (FontSize: 13, TextColor: #ffffff(0.85));
      }

      Label #EmptyText {
        Anchor: (Top: 8);
        Style: (FontSize: 14, TextColor: #9fb0ba);
        Text: "";
      }

      Group #LeaderboardList {
        Anchor: (Width: 510, Top: 8);
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        Padding: (Left: 6, Right: 6);
        ScrollbarStyle: $C.@DefaultScrollbarStyle;

        Group #LeaderboardCards {
          LayoutMode: Top;
        }
      }

      Group #Pagination {
        Anchor: (Top: 6, Height: 22, Width: 510);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 75);
        }

        $C.@TextButton #PrevPageButton {
          Anchor: (Width: 110, Height: 22);
          Text: "< Prev";
        }

        Group #PageLabelWrap {
          Anchor: (Width: 140, Height: 22);
          LayoutMode: Left;

          Group {
            Anchor: (Width: 35);
          }

          Label #PageLabel {
            Anchor: (Width: 70);
            Style: (FontSize: 12, TextColor: #9fb0ba);
            Text: "";
          }

          Group {
            Anchor: (Width: 35);
          }
        }

        $C.@TextButton #NextPageButton {
          Anchor: (Width: 110, Height: 22);
          Text: "Next >";
        }

        Group {
          Anchor: (Width: 75);
        }
      }

    }
  }
}

$C.@BackButton {}
