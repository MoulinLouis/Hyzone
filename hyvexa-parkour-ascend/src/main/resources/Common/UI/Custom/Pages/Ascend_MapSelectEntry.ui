          Background: (TexturePath: "../Textures/star.png");
          Visible: false;
        }
      }

      Label #RunnerLevel {
        Anchor: (Left: 0, Right: 0);
        Style: (
          FontSize: 13,
          RenderBold: true,
          TextColor: #7c3aed,
          HorizontalAlignment: Center
        );
        Text: "Lv.0";
      }

      Label #RunnerStatus {
        Anchor: (Left: 0, Right: 0, Top: 1);
        Style: (
          FontSize: 11,
          TextColor: #9fb0ba,
          HorizontalAlignment: Center
