      Group #ActionRow {
        Anchor: (Left: 0, Right: 0, Top: 3);
        LayoutMode: Left;

        Group {
          FlexWeight: 1;
        }

        Label #RobotBuyText {
          Style: (
            FontSize: 13,
            RenderBold: true,
            TextColor: #f0f4f8
          );
          Text: "Buy Runner";
        }

        Label #RobotPriceText {
          Anchor: (Left: 2);
          Style: (
            FontSize: 13,
            TextColor: #f0f4f8
          );
          Text: "100 coins";
        }

        Group {
          FlexWeight: 1;
        }
      }
