$C = "../Common.ui";

Group {
  LayoutMode: Left;
  Anchor: (Left: 0, Right: 0, Bottom: 8, Height: 90);
  Background: #1a2530(0.95);

  Group #AccentBar {
    Anchor: (Width: 8, Top: 0, Bottom: 0);
    Background: #7c3aed;
  }

  Button #SelectButton {
    Anchor: (Width: 436, Top: 0, Bottom: 0);
    Padding: (Left: 12, Top: 12, Bottom: 12);
    Background: #00000000;
    Style: ButtonStyle(
      Default: (Background: #00000000),
      Hovered: (Background: #ffffff(0.05)),
      Pressed: (Background: #ffffff(0.02)),
      Sounds: $C.@ButtonSounds,
    );
    LayoutMode: Top;

    Label #MapName {
      Style: (
        FontSize: 16,
        RenderBold: true,
        TextColor: #f0f4f8
      );
      Text: "Map Name";
    }

    Group #ProgressRow {
