$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 440, Height: 380);

    #Title {
      Group {
        TextButton #CloseButton {
          Anchor: (Left: 12, Top: 4, Width: 64, Height: 24);
          Padding: (Left: 8, Top: 2);
          Text: "Close";
          Style: TextButtonStyle(
            Default: (LabelStyle: (FontSize: 14, TextColor: #9fb0ba, RenderBold: true)),
            Sounds: $C.@ButtonSounds,
          );
          Background: #000000(0.3);
        }
        $C.@Title {
          @Text = "A S C E N S I O N";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 20, Right: 20, Top: 6, Bottom: 12);

      Label {
        Anchor: (Top: 8);
        Style: (FontSize: 14, TextColor: #b8c5cc);
        Text: "The ultimate prestige. Gain skill points.";
      }

      Group {
        LayoutMode: Left;
        Anchor: (Top: 16, Height: 32);

        Label {
          Anchor: (Width: 160);
          Style: (FontSize: 14, TextColor: #9fb0ba);
          Text: "Your Coins:";
        }

        Label #CurrentCoins {
          Style: (FontSize: 14, TextColor: #ffd166, RenderBold: true);
          Text: "0";
        }
      }

      Group {
        LayoutMode: Left;
        Anchor: (Top: 6, Height: 32);

        Label {
          Anchor: (Width: 160);
          Style: (FontSize: 14, TextColor: #9fb0ba);
          Text: "Required:";
        }

        Label #RequiredCoins {
          Style: (FontSize: 14, TextColor: #f59e0b, RenderBold: true);
          Text: "10Q";
        }
      }

      Group {
        LayoutMode: Left;
        Anchor: (Top: 6, Height: 32);

        Label {
          Anchor: (Width: 160);
          Style: (FontSize: 14, TextColor: #9fb0ba);
          Text: "Ascension Count:";
        }

        Label #AscensionCountValue {
          Style: (FontSize: 14, TextColor: #f59e0b, RenderBold: true);
          Text: "x0";
        }
      }

      Group {
        LayoutMode: Left;
        Anchor: (Top: 6, Height: 32);

        Label {
          Anchor: (Width: 160);
          Style: (FontSize: 14, TextColor: #9fb0ba);
          Text: "Skill Points:";
        }

        Label #SkillPointsValue {
          Style: (FontSize: 14, TextColor: #4ade80, RenderBold: true);
          Text: "0";
        }
      }

      Label {
        Anchor: (Top: 16);
        Style: (FontSize: 12, TextColor: #fca5a5);
        Text: "Warning: Resets coins, elevation, and summit.";
      }

      Group #ActionButtons {
        Anchor: (Left: 0, Right: 0, Top: 20, Height: 48);
        LayoutMode: Left;

        Group { FlexWeight: 1; }

        TextButton #AscendButton {
          Anchor: (Width: 200, Height: 48);
          Padding: (Left: 8, Right: 8, Top: 8, Bottom: 8);
          Text: "ASCEND";
          Style: TextButtonStyle(
            Default: (
              Background: #6b3d5a(0.85),
              LabelStyle: (FontSize: 16, TextColor: #fce8f4, RenderBold: true, HorizontalAlignment: Center)
            ),
            Hovered: (
              Background: #8f4d7a(0.92),
              LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center)
            ),
            Pressed: (
              Background: #a86094(0.95),
              LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }

        Group { FlexWeight: 1; }
      }
    }
  }
}
