$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #PassiveEarningsWindow {
    Anchor: (Width: 520, Height: 520);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      // Top accent line
      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #10b981;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 240, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "Welcome Back";
      }

      Group {
        Anchor: (Right: 16, Top: 10, Width: 80, Height: 32);

        TextButton #ClaimButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "CLAIM";
          Style: TextButtonStyle(
            Default: (
              Background: #10b981(0.2),
              LabelStyle: (FontSize: 13, TextColor: #10b981, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #10b981(0.3),
              LabelStyle: (FontSize: 13, TextColor: #34d399, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #10b981(0.15),
              LabelStyle: (FontSize: 13, TextColor: #10b981, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 20, Right: 20, Top: 12, Bottom: 12);

      // Away time
      Label #AwayTimeLabel {
        Anchor: (Left: 0, Right: 0);
        Style: (FontSize: 13, TextColor: #9fb0ba);
        Text: "You were away for X";
      }

      // --- Summary Card ---
      Group #SummaryCard {
        Anchor: (Left: 0, Right: 0, Top: 10);
        LayoutMode: Full;
        Background: #ffffff(0.03);
        OutlineColor: #ffffff(0.04);
        OutlineSize: 1;

        Group {
          Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 4);
          Background: #ffd166;
        }

        Group {
          Anchor: (Left: 4, Right: 0, Top: 0, Bottom: 0);
          Padding: (Left: 14, Right: 14, Top: 10, Bottom: 10);
          LayoutMode: Top;

          Label #TotalVoltLabel {
            Style: (FontSize: 20, TextColor: #ffd166, RenderBold: true);
            Text: "0 VOLT";
          }

          Label #OfflineRateLabel {
            Anchor: (Top: 4);
            Style: (FontSize: 12, TextColor: #6b7280);
            Text: "Earned at 25% offline rate";
          }

          Label #MultiplierLabel {
            Anchor: (Top: 2);
            Style: (FontSize: 13, TextColor: #7c3aed);
            Text: "+0.0 total multiplier";
          }
        }
      }

      // Breakdown header
      Label {
        Anchor: (Top: 12);
        Style: (FontSize: 13, TextColor: #6b7280);
        Text: "Runner breakdown:";
      }

      // Runner list (scrollable)
      Group #RunnerList {
        Anchor: (Left: 0, Right: 0, Top: 8);
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        ScrollbarStyle: $C.@DefaultScrollbarStyle;

        Group #RunnerEntries {
          LayoutMode: Top;
        }
      }
    }
  }
}
