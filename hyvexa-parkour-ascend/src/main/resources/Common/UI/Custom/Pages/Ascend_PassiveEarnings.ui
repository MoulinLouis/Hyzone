$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 620, Height: 540);

    #Title {
      Group {
        TextButton #ClaimButton {
          Anchor: (Left: 12, Top: 4, Width: 96, Height: 24);
          Padding: (Left: 8, Top: 2);
          Text: "CLAIM";
          Style: TextButtonStyle(
            Default: (LabelStyle: (FontSize: 14, TextColor: #10b981, RenderBold: true)),
            Sounds: $C.@ButtonSounds,
          );
          Background: #10b981(0.2);
        }
        $C.@Title {
          @Text = "W E L C O M E   B A C K";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 20, Right: 20, Top: 6, Bottom: 12);

      // Away time label
      Label #AwayTimeLabel {
        Anchor: (Top: 8);
        Style: (FontSize: 14, TextColor: #9fb0ba, RenderBold: true);
        Text: "You were away for X";
      }

      // Summary card
      Group #SummaryCard {
        Anchor: (Left: 0, Right: 0, Top: 12);
        LayoutMode: Top;
        Padding: (Left: 12, Right: 12, Top: 8, Bottom: 8);
        Background: #1a2530(0.95);

        Label #TotalCoinsLabel {
          Anchor: (Top: 4);
          Style: (FontSize: 20, TextColor: #ffd166, RenderBold: true);
          Text: "0 VEXA";
        }

        Label #OfflineRateLabel {
          Anchor: (Top: 4);
          Style: (FontSize: 14, TextColor: #94a3b8);
          Text: "Earned at 25% offline rate";
        }

        Label #MultiplierLabel {
          Anchor: (Top: 4);
          Style: (FontSize: 14, TextColor: #7c3aed);
          Text: "+0.0 total multiplier";
        }
      }

      // Breakdown header
      Label {
        Anchor: (Top: 12);
        Style: (FontSize: 14, TextColor: #94a3b8);
        Text: "Runner breakdown:";
      }

      // Runner list (scrollable)
      Group #RunnerList {
        Anchor: (Left: 0, Right: 0, Top: 8);
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        ScrollbarStyle: $C.@DefaultScrollbarStyle;

        Group #RunnerEntries {
          LayoutMode: Top;
        }
      }
    }
  }
}
