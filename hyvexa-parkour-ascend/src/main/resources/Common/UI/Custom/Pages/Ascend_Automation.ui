              }
              Group #ElevTarget1 { Visible: false; Anchor: (Left: 0, Right: 0, Height: 26); LayoutMode: Left;
                Label #ElevTargetLabel1 { Anchor: (Width: 280, Height: 26); Padding: (Top: 4); Style: (FontSize: 12, TextColor: #e2e8f0); Text: ""; }
                Group { Anchor: (Width: 40, Height: 24); TextButton #ElevRemove1 { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Text: "X"; Style: TextButtonStyle( Default: (Background: #ffffff(0.04), LabelStyle: (FontSize: 11, TextColor: #ef4444, HorizontalAlignment: Center, VerticalAlignment: Center)), Hovered: (Background: #ffffff(0.08), LabelStyle: (FontSize: 11, TextColor: #fca5a5, HorizontalAlignment: Center, VerticalAlignment: Center)), Pressed: (Background: #ffffff(0.02), LabelStyle: (FontSize: 11, TextColor: #ef4444, HorizontalAlignment: Center, VerticalAlignment: Center)), Sounds: $C.@ButtonSounds); } }
              }
              Group #ElevTarget2 { Visible: false; Anchor: (Left: 0, Right: 0, Height: 26); LayoutMode: Left;
                Label #ElevTargetLabel2 { Anchor: (Width: 280, Height: 26); Padding: (Top: 4); Style: (FontSize: 12, TextColor: #e2e8f0); Text: ""; }
                Group { Anchor: (Width: 40, Height: 24); TextButton #ElevRemove2 { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Text: "X"; Style: TextButtonStyle( Default: (Background: #ffffff(0.04), LabelStyle: (FontSize: 11, TextColor: #ef4444, HorizontalAlignment: Center, VerticalAlignment: Center)), Hovered: (Background: #ffffff(0.08), LabelStyle: (FontSize: 11, TextColor: #fca5a5, HorizontalAlignment: Center, VerticalAlignment: Center)), Pressed: (Background: #ffffff(0.02), LabelStyle: (FontSize: 11, TextColor: #ef4444, HorizontalAlignment: Center, VerticalAlignment: Center)), Sounds: $C.@ButtonSounds); } }
              }
              Group #ElevTarget3 { Visible: false; Anchor: (Left: 0, Right: 0, Height: 26); LayoutMode: Left;
                Label #ElevTargetLabel3 { Anchor: (Width: 280, Height: 26); Padding: (Top: 4); Style: (FontSize: 12, TextColor: #e2e8f0); Text: ""; }
                Group { Anchor: (Width: 40, Height: 24); TextButton #ElevRemove3 { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Text: "X"; Style: TextButtonStyle( Default: (Background: #ffffff(0.04), LabelStyle: (FontSize: 11, TextColor: #ef4444, HorizontalAlignment: Center, VerticalAlignment: Center)), Hovered: (Background: #ffffff(0.08), LabelStyle: (FontSize: 11, TextColor: #fca5a5, HorizontalAlignment: Center, VerticalAlignment: Center)), Pressed: (Background: #ffffff(0.02), LabelStyle: (FontSize: 11, TextColor: #ef4444, HorizontalAlignment: Center, VerticalAlignment: Center)), Sounds: $C.@ButtonSounds); } }
              }
              Group #ElevTarget4 { Visible: false; Anchor: (Left: 0, Right: 0, Height: 26); LayoutMode: Left;
                Label #ElevTargetLabel4 { Anchor: (Width: 280, Height: 26); Padding: (Top: 4); Style: (FontSize: 12, TextColor: #e2e8f0); Text: ""; }
                Group { Anchor: (Width: 40, Height: 24); TextButton #ElevRemove4 { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Text: "X"; Style: TextButtonStyle( Default: (Background: #ffffff(0.04), LabelStyle: (FontSize: 11, TextColor: #ef4444, HorizontalAlignment: Center, VerticalAlignment: Center)), Hovered: (Background: #ffffff(0.08), LabelStyle: (FontSize: 11, TextColor: #fca5a5, HorizontalAlignment: Center, VerticalAlignment: Center)), Pressed: (Background: #ffffff(0.02), LabelStyle: (FontSize: 11, TextColor: #ef4444, HorizontalAlignment: Center, VerticalAlignment: Center)), Sounds: $C.@ButtonSounds); } }
              }

              Group { Anchor: (Height: 8); }

              // Add target row
              Group #ElevAddRow {
                Anchor: (Left: 0, Right: 0, Height: 32);
                LayoutMode: Left;

                Label {
                  Anchor: (Width: 20, Height: 32);
                  Padding: (Top: 6);
                  Style: (FontSize: 12, TextColor: #9fb0ba);
                  Text: "x";
                }

                TextField #ElevAddField {
                  Anchor: (Width: 120, Height: 28);
                  PlaceholderText: "";
                  MaxLength: 10;
                  Background: #1a2530;
                  OutlineColor: #ffffff(0.08);
                  OutlineSize: 1;
                  Style: (FontSize: 12, TextColor: #f0f4f8);
                }

                Group { Anchor: (Width: 12, Height: 32); }

                Group {
                  Anchor: (Width: 60, Height: 28);

                  TextButton #ElevAddButton {
                    Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
                    Text: "Add";
                    Style: TextButtonStyle(
                      Default: (
                        Background: #10b981,
                        LabelStyle: (FontSize: 12, TextColor: #0d1620, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
                      ),
                      Hovered: (
                        Background: #34d399,
                        LabelStyle: (FontSize: 12, TextColor: #0d1620, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
                      ),
                      Pressed: (
                        Background: #059669,
                        LabelStyle: (FontSize: 12, TextColor: #0d1620, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
                      ),
                      Sounds: $C.@ButtonSounds,
                    );
                  }
                }
              }

              Group { Anchor: (Height: 8); }

              // Next target info
              Label #ElevNextTarget {
                Anchor: (Left: 0, Right: 0, Height: 18);
                Style: (FontSize: 11, TextColor: #6b7280);
                Text: "";
              }
            }

            // Shown when locked
            Group #ElevLockedOverlay {
              Anchor: (Left: 0, Right: 0, Height: 224);
              LayoutMode: Top;
              Visible: false;

