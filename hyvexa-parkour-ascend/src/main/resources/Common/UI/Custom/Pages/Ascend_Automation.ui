          Group #AutoElevationSection {
            Anchor: (Left: 0, Right: 0);
            LayoutMode: Top;
            Background: #ffffff(0.02);
            OutlineColor: #ffffff(0.05);
            OutlineSize: 1;
            Padding: (Left: 14, Right: 14, Top: 12, Bottom: 12);

            // Shown when unlocked
            Group #ElevContent {
              Anchor: (Left: 0, Right: 0);
              LayoutMode: Top;

