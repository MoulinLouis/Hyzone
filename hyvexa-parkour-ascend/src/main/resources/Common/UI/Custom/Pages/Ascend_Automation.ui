$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #AutomationWindow {
    Anchor: (Width: 460, Height: 530);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      // Top accent line
      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #10b981;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 200, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "Automation";
      }

      Group {
        Anchor: (Right: 16, Top: 10, Width: 72, Height: 32);

        TextButton #CloseButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "Close";
          Style: TextButtonStyle(
            Default: (
              Background: #ffffff(0.06),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ffffff(0.1),
              LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ffffff(0.04),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 24, Right: 24, Top: 12, Bottom: 16);

      // Disclaimer for players who haven't ascended yet
      Group #AscensionDisclaimer {
        Anchor: (Left: 0, Right: 0);
        Padding: (Left: 12, Right: 12, Top: 10, Bottom: 10);
        Background: #1a2530;
        OutlineColor: #f59e0b(0.4);
        OutlineSize: 1;
        Visible: false;

        Label #DisclaimerText {
          Style: (FontSize: 12, TextColor: #f59e0b, Wrap: true);
          Text: "Automation skills unlock after your first Ascension.";
        }
      }

      Group #DisclaimerSpacer { Anchor: (Height: 12); Visible: false; }

      Group #AutoUpgradeSection {
        Anchor: (Left: 0, Right: 0);
        LayoutMode: Top;

        Label {
          Anchor: (Left: 0, Right: 0, Height: 22);
          Style: (FontSize: 14, RenderBold: true, TextColor: #f0f4f8);
          Text: "Auto-Upgrade Runners";
        }

        Label {
          Anchor: (Left: 0, Right: 0, Height: 18);
          Style: (FontSize: 11, TextColor: #6b7280);
          Text: "Automatically upgrades runner speed levels.";
        }

        Label {
          Anchor: (Left: 0, Right: 0, Height: 18);
          Style: (FontSize: 11, TextColor: #6b7280);
          Text: "Prioritizes cheapest cost. Does not auto-evolve.";
        }

        Group { Anchor: (Height: 10); }

        Group #ToggleRow {
          Anchor: (Left: 0, Right: 0, Height: 44);
          LayoutMode: Left;

          Label #StatusLabel {
            Anchor: (Width: 240, Height: 44);
            Padding: (Top: 12);
            Style: (FontSize: 13, TextColor: #9fb0ba);
            Text: "Status: OFF";
          }

          Button #ToggleButton {
            Anchor: (Width: 120, Height: 40);
            Background: #1a2530;
            Style: ButtonStyle(
              Default: (Background: #1a2530),
              Hovered: (Background: #243342),
              Pressed: (Background: #1e2b38),
              Sounds: $C.@ButtonSounds,
            );
            LayoutMode: Top;
            Group #ToggleBorder { Anchor: (Left: 0, Right: 0, Top: 0, Height: 3); Background: #4b5563; }
            Label #ToggleText { Anchor: (Top: 10); Style: (FontSize: 13, RenderBold: true, TextColor: #9fb0ba, HorizontalAlignment: Center); Text: "Enable"; }
          }
        }

        Group { Anchor: (Height: 12); }

        Group #LockedOverlay {
          Anchor: (Left: 0, Right: 0, Height: 36);
          Background: #1a2530;
          Padding: (Left: 12, Top: 8);

          Label #LockedLabel {
            Style: (FontSize: 12, TextColor: #f59e0b);
            Text: "Unlock 'Auto-Upgrade + Momentum' in the Skill Tree first.";
          }
        }
      }

      Group { Anchor: (Height: 16); }

      Group #AutoEvolutionSection {
        Anchor: (Left: 0, Right: 0);
        LayoutMode: Top;

        Label {
          Anchor: (Left: 0, Right: 0, Height: 22);
          Style: (FontSize: 14, RenderBold: true, TextColor: #f0f4f8);
          Text: "Auto-Evolution";
        }

        Label {
          Anchor: (Left: 0, Right: 0, Height: 18);
          Style: (FontSize: 11, TextColor: #6b7280);
          Text: "Runners auto-evolve at max speed level.";
        }

        Label {
          Anchor: (Left: 0, Right: 0, Height: 18);
          Style: (FontSize: 11, TextColor: #6b7280);
          Text: "Requires the Auto-Evolution skill tree node.";
        }

        Group { Anchor: (Height: 10); }

        Group #EvoToggleRow {
          Anchor: (Left: 0, Right: 0, Height: 44);
          LayoutMode: Left;

          Label #EvoStatusLabel {
            Anchor: (Width: 240, Height: 44);
            Padding: (Top: 12);
            Style: (FontSize: 13, TextColor: #9fb0ba);
            Text: "Status: OFF";
          }

          Button #EvoToggleButton {
            Anchor: (Width: 120, Height: 40);
            Background: #1a2530;
            Style: ButtonStyle(
              Default: (Background: #1a2530),
              Hovered: (Background: #243342),
              Pressed: (Background: #1e2b38),
              Sounds: $C.@ButtonSounds,
            );
            LayoutMode: Top;
            Group #EvoToggleBorder { Anchor: (Left: 0, Right: 0, Top: 0, Height: 3); Background: #4b5563; }
            Label #EvoToggleText { Anchor: (Top: 10); Style: (FontSize: 13, RenderBold: true, TextColor: #9fb0ba, HorizontalAlignment: Center); Text: "Enable"; }
          }
        }

        Group { Anchor: (Height: 12); }

        Group #EvoLockedOverlay {
          Anchor: (Left: 0, Right: 0, Height: 36);
          Background: #1a2530;
          Padding: (Left: 12, Top: 8);

          Label #EvoLockedLabel {
            Style: (FontSize: 12, TextColor: #f59e0b);
            Text: "Unlock 'Auto-Evolution' in the Skill Tree first.";
          }
        }
      }
    }

  }
}
