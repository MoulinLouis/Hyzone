                TextField #SumIncField1 {
                  Anchor: (Width: 50, Height: 26);
                  PlaceholderText: "10";
                  MaxLength: 5;
                  Background: #1a2530;
                  OutlineColor: #ffffff(0.08);
                  OutlineSize: 1;
                  Style: (FontSize: 11, TextColor: #f0f4f8);
                }

                Label {
                  Anchor: (Width: 30, Height: 32);
                  Padding: (Left: 4, Top: 6);
                  Style: (FontSize: 10, TextColor: #6b7280);
                  Text: "lvl";
                }
              }

              // Category 2: Evolution Power
              Group #SumCat2 {
                Anchor: (Left: 0, Right: 0, Height: 32);
                LayoutMode: Left;

                Label #SumCatName2 {
                  Anchor: (Width: 110, Height: 32);
                  Padding: (Top: 6);
                  Style: (FontSize: 11, TextColor: #e2e8f0);
                  Text: "Evolution Power";
                }

                Label #SumCatLevel2 {
                  Anchor: (Width: 44, Height: 32);
                  Padding: (Top: 6);
                  Style: (FontSize: 11, TextColor: #6b7280);
                  Text: "Lv 0";
                }

                Button #SumCatToggle2 {
                  Anchor: (Width: 42, Height: 26);
                  Background: #1a2530;
                  Style: ButtonStyle(
                    Default: (Background: #1a2530),
                    Hovered: (Background: #243342),
                    Pressed: (Background: #1e2b38),
                    Sounds: $C.@ButtonSounds,
                  );
                  LayoutMode: Top;
                  Group #SumCatBorder2 { Anchor: (Left: 0, Right: 0, Top: 0, Height: 2); Background: #4b5563; }
                  Label #SumCatToggleText2 { Anchor: (Top: 5); Style: (FontSize: 10, RenderBold: true, TextColor: #6b7280, HorizontalAlignment: Center); Text: "OFF"; }
                }

                Group { Anchor: (Width: 8, Height: 32); }

                Label {
                  Anchor: (Width: 12, Height: 32);
                  Padding: (Top: 6);
                  Style: (FontSize: 11, TextColor: #6b7280);
                  Text: "+";
                }

                TextField #SumIncField2 {
                  Anchor: (Width: 50, Height: 26);
                  PlaceholderText: "10";
                  MaxLength: 5;
                  Background: #1a2530;
                  OutlineColor: #ffffff(0.08);
                  OutlineSize: 1;
                  Style: (FontSize: 11, TextColor: #f0f4f8);
                }

                Label {
                  Anchor: (Width: 30, Height: 32);
                  Padding: (Left: 4, Top: 6);
                  Style: (FontSize: 10, TextColor: #6b7280);
                  Text: "lvl";
                }
              }

              Group { Anchor: (Height: 8); }

              // Next category info
              Label #SumNextLabel {
                Anchor: (Left: 0, Right: 0, Height: 18);
                Style: (FontSize: 11, TextColor: #6b7280);
                Text: "";
              }
            }

            // Shown when locked
            Group #SumLockedOverlay {
              Anchor: (Left: 0, Right: 0, Height: 224);
              LayoutMode: Top;
              Visible: false;

              Group { Anchor: (Height: 88); }
              Group { Anchor: (Width: 24, Height: 24); Background: (TexturePath: "../Textures/lock.png"); }
              Group { Anchor: (Height: 6); }
              Label {
                Anchor: (Left: 0, Right: 0, Height: 18);
                Style: (FontSize: 11, TextColor: #6b7280, HorizontalAlignment: Center, Wrap: true);
                Text: "Unlock in the Ascendancy Tree";
              }
            }
          }
        }
      }
    }

  }
