$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 620, Height: 620);

    #Title {
      Group {
        TextButton #CloseButton {
          Anchor: (Left: 12, Top: 4, Width: 64, Height: 24);
          Padding: (Left: 8, Top: 2);
          Text: "Close";
          Style: TextButtonStyle(
            Default: (LabelStyle: (FontSize: 14, TextColor: #9fb0ba, RenderBold: true)),
            Sounds: $C.@ButtonSounds,
          );
          Background: #000000(0.3);
        }
        $C.@Title {
          @Text = "A S C E N D";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Left: 20, Right: 20, Top: 6, Bottom: 12);

      Group #MapList {
        Anchor: (Left: 0, Right: 0, Top: 8);
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        ScrollbarStyle: $C.@DefaultScrollbarStyle;

        Group #MapCards {
          LayoutMode: Top;
        }
      }

      Group #ActionButtons {
        Anchor: (Left: 0, Right: 0, Top: 6, Height: 56);
        LayoutMode: Left;

        Group #BuyAllWrapper {
          Anchor: (Height: 56);
          FlexWeight: 1;

          TextButton #ActionButton1 {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "Buy All";
            Style: TextButtonStyle(
              Default: (
                Background: #3d6b5a(0.85),
                LabelStyle: (FontSize: 18, TextColor: #e8fcf4, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Hovered: (
                Background: #4d8f7a(0.92),
                LabelStyle: (FontSize: 18, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Pressed: (
                Background: #60a894(0.95),
                LabelStyle: (FontSize: 18, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Sounds: $C.@ButtonSounds,
            );
          }

          TextButton #BuyAllOverlay {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "";
            Style: TextButtonStyle(
              Default: (Background: #1a1a2a(0.6)),
              Hovered: (Background: #1a1a2a(0.6)),
              Pressed: (Background: #1a1a2a(0.7)),
            );
            Visible: false;
          }
        }

        Group { Anchor: (Width: 8); }

        Group #EvolveAllWrapper {
          Anchor: (Height: 56);
          FlexWeight: 1;

          TextButton #ActionButton2 {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "Evolve All";
            Style: TextButtonStyle(
              Default: (
                Background: #5a3d6b(0.85),
                LabelStyle: (FontSize: 18, TextColor: #f4e8fc, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Hovered: (
                Background: #7a4d8f(0.92),
                LabelStyle: (FontSize: 18, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Pressed: (
                Background: #9460a8(0.95),
                LabelStyle: (FontSize: 18, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Sounds: $C.@ButtonSounds,
            );
          }

          TextButton #EvolveAllOverlay {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "";
            Style: TextButtonStyle(
              Default: (Background: #1a1a2a(0.6)),
              Hovered: (Background: #1a1a2a(0.6)),
              Pressed: (Background: #1a1a2a(0.7)),
            );
            Visible: false;
          }
        }

        Group { Anchor: (Width: 8); }

        TextButton #ActionButton3 {
          Anchor: (Height: 56);
          FlexWeight: 1;
          Text: "Leaderboard";
          Style: TextButtonStyle(
            Default: (
              Background: #2d5a7b(0.85),
              LabelStyle: (FontSize: 18, TextColor: #e8f4fc, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #3a7399(0.92),
              LabelStyle: (FontSize: 18, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #4a8ab3(0.95),
              LabelStyle: (FontSize: 18, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }
  }
}
