$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #MapSelectWindow {
    Anchor: (Width: 620, Height: 675);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      // Top accent line
      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #f59e0b;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 200, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "Ascend";
      }

      Group {
        Anchor: (Right: 16, Top: 10, Width: 72, Height: 32);

        TextButton #CloseButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "Close";
          Style: TextButtonStyle(
            Default: (
              Background: #ffffff(0.06),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ffffff(0.1),
              LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ffffff(0.04),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 20, Right: 20, Top: 6, Bottom: 12);

      // --- Mode Tabs ---
      Group #ModeTabsRow {
        Anchor: (Left: 0, Right: 0, Height: 40);
        LayoutMode: Left;

        // Tab 1: Volt (active)
        Group #TabVoltWrap {
          Anchor: (Height: 36);
          FlexWeight: 1;
          Background: #2d3f50;
          OutlineColor: #ffffff(0.06);
          OutlineSize: 1;

          Label #TabVoltLabel {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Style: (FontSize: 14, RenderBold: true, TextColor: #f0f4f8, Alignment: Center, VerticalAlignment: Center);
            Text: "Volt";
          }

          TextButton #TabVolt {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "";
            Style: TextButtonStyle(
              Default: (Background: #000000(0)),
              Hovered: (Background: #ffffff(0.05)),
              Pressed: (Background: #ffffff(0.1)),
              Sounds: $C.@ButtonSounds,
            );
          }
        }

        Group { Anchor: (Width: 6); }

        // Tab 2: Locked / Challenge
        Group #TabLockedAWrap {
          Anchor: (Height: 36);
          FlexWeight: 1;
          Background: #0f1820;
          OutlineColor: #ffffff(0.03);
          OutlineSize: 1;

          // Unlocked background overlay (shown when Challenge skill is unlocked)
          Group #TabUnlockedBg {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Background: #2d3f50;
            OutlineColor: #ffffff(0.06);
            OutlineSize: 1;
            Visible: false;
          }

          // Lock icon + label layout (shown when locked)
          Group #TabLockedAContent {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            LayoutMode: Left;

            // Centering spacer
            Group { FlexWeight: 1; }

            // Lock icon
            Group {
              Anchor: (Width: 12, Height: 12, Top: 12);
              Background: (TexturePath: "../Textures/lock.png");
            }

            Group { Anchor: (Width: 5); }

            Label {
              Anchor: (Width: 30, Top: 0, Bottom: 0);
              Style: (FontSize: 13, TextColor: #4a5568, RenderBold: true, VerticalAlignment: Center);
              Text: "???";
            }

            // Centering spacer
            Group { FlexWeight: 1; }
          }

          // Challenge label (shown when unlocked)
          Label #TabChallengeLabel {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Style: (FontSize: 14, RenderBold: true, TextColor: #f0f4f8, Alignment: Center, VerticalAlignment: Center);
            Text: "Challenge";
            Visible: false;
          }

          // Button overlay
          TextButton #TabLockedA {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "";
            Style: TextButtonStyle(
              Default: (Background: #000000(0)),
              Hovered: (Background: #ffffff(0.02)),
              Pressed: (Background: #ffffff(0.02)),
              Sounds: $C.@ButtonSounds,
            );
          }
        }

        Group { Anchor: (Width: 6); }

        // Tab 3: Locked / Transcendence
        Group #TabLockedBWrap {
          Anchor: (Height: 36);
          FlexWeight: 1;
          Background: #0f1820;
          OutlineColor: #ffffff(0.03);
          OutlineSize: 1;

          // Unlocked background overlay (shown when transcendence milestone 1 is reached)
          Group #TabTransUnlockedBg {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Background: #2d3f50;
            OutlineColor: #ffffff(0.06);
            OutlineSize: 1;
            Visible: false;
          }

          // Lock icon + label layout (shown when locked)
          Group #TabLockedBContent {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            LayoutMode: Left;

            // Centering spacer
            Group { FlexWeight: 1; }

            // Lock icon
            Group {
              Anchor: (Width: 12, Height: 12, Top: 12);
              Background: (TexturePath: "../Textures/lock.png");
            }

            Group { Anchor: (Width: 5); }

            Label {
              Anchor: (Width: 30, Top: 0, Bottom: 0);
              Style: (FontSize: 13, TextColor: #4a5568, RenderBold: true, VerticalAlignment: Center);
              Text: "???";
            }

            // Centering spacer
            Group { FlexWeight: 1; }
          }

          // Transcendence label (shown when unlocked)
          Label #TabTransLabel {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Style: (FontSize: 14, RenderBold: true, TextColor: #f59e0b, Alignment: Center, VerticalAlignment: Center);
            Text: "Milestones";
            Visible: false;
          }

          // Button overlay
          TextButton #TabLockedB {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "";
            Style: TextButtonStyle(
              Default: (Background: #000000(0)),
              Hovered: (Background: #ffffff(0.02)),
              Pressed: (Background: #ffffff(0.02)),
              Sounds: $C.@ButtonSounds,
            );
          }
        }
      }

      Group #MapList {
        Anchor: (Left: 0, Right: 0, Top: 8);
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        ScrollbarStyle: $C.@DefaultScrollbarStyle;

        Group #MapCards {
          LayoutMode: Top;
        }
      }

      Group #ActionButtons {
        Anchor: (Left: 0, Right: 0, Top: 6, Height: 56);
        LayoutMode: Left;

        Group #BuyAllWrapper {
          Anchor: (Height: 56);
          FlexWeight: 1;

          TextButton #ActionButton1 {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "Buy All";
            Style: TextButtonStyle(
              Default: (
                Background: #3d6b5a(0.85),
                LabelStyle: (FontSize: 18, TextColor: #e8fcf4, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Hovered: (
                Background: #4d8f7a(0.92),
                LabelStyle: (FontSize: 18, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Pressed: (
                Background: #60a894(0.95),
                LabelStyle: (FontSize: 18, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Sounds: $C.@ButtonSounds,
            );
          }

          TextButton #BuyAllOverlay {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "";
            Style: TextButtonStyle(
              Default: (Background: #1a1a2a(0.6)),
              Hovered: (Background: #1a1a2a(0.6)),
              Pressed: (Background: #1a1a2a(0.7)),
            );
            Visible: false;
          }
        }

        Group { Anchor: (Width: 8); }

        Group #EvolveAllWrapper {
          Anchor: (Height: 56);
          FlexWeight: 1;

          TextButton #ActionButton2 {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "Evolve All";
            Style: TextButtonStyle(
              Default: (
                Background: #5a3d6b(0.85),
                LabelStyle: (FontSize: 18, TextColor: #f4e8fc, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Hovered: (
                Background: #7a4d8f(0.92),
                LabelStyle: (FontSize: 18, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Pressed: (
                Background: #9460a8(0.95),
                LabelStyle: (FontSize: 18, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Sounds: $C.@ButtonSounds,
            );
          }

          TextButton #EvolveAllOverlay {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "";
            Style: TextButtonStyle(
              Default: (Background: #1a1a2a(0.6)),
              Hovered: (Background: #1a1a2a(0.6)),
              Pressed: (Background: #1a1a2a(0.7)),
            );
            Visible: false;
          }
        }

        Group { Anchor: (Width: 8); }

        TextButton #ActionButton3 {
          Anchor: (Height: 56);
          FlexWeight: 1;
          Text: "Leaderboard";
          Style: TextButtonStyle(
            Default: (
              Background: #2d5a7b(0.85),
              LabelStyle: (FontSize: 18, TextColor: #e8f4fc, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #3a7399(0.92),
              LabelStyle: (FontSize: 18, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #4a8ab3(0.95),
              LabelStyle: (FontSize: 18, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

  }
}
