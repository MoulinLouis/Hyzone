$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #MapSelectWindow {
    Anchor: (Width: 620, Height: 635);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      // Top accent line
      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #f59e0b;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 200, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "Ascend";
      }

      Group {
        Anchor: (Right: 16, Top: 10, Width: 72, Height: 32);

        TextButton #CloseButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "Close";
          Style: TextButtonStyle(
            Default: (
              Background: #ffffff(0.06),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ffffff(0.1),
              LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ffffff(0.04),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 20, Right: 20, Top: 6, Bottom: 12);

      Group #MapList {
        Anchor: (Left: 0, Right: 0, Top: 8);
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        ScrollbarStyle: $C.@DefaultScrollbarStyle;

        Group #MapCards {
          LayoutMode: Top;
        }
      }

      Group #ActionButtons {
        Anchor: (Left: 0, Right: 0, Top: 6, Height: 56);
        LayoutMode: Left;

        Group #BuyAllWrapper {
          Anchor: (Height: 56);
          FlexWeight: 1;

          TextButton #ActionButton1 {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "Buy All";
            Style: TextButtonStyle(
              Default: (
                Background: #3d6b5a(0.85),
                LabelStyle: (FontSize: 18, TextColor: #e8fcf4, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Hovered: (
                Background: #4d8f7a(0.92),
                LabelStyle: (FontSize: 18, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Pressed: (
                Background: #60a894(0.95),
                LabelStyle: (FontSize: 18, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Sounds: $C.@ButtonSounds,
            );
          }

          TextButton #BuyAllOverlay {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "";
            Style: TextButtonStyle(
              Default: (Background: #1a1a2a(0.6)),
              Hovered: (Background: #1a1a2a(0.6)),
              Pressed: (Background: #1a1a2a(0.7)),
            );
            Visible: false;
          }
        }

        Group { Anchor: (Width: 8); }

        Group #EvolveAllWrapper {
          Anchor: (Height: 56);
          FlexWeight: 1;

          TextButton #ActionButton2 {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "Evolve All";
            Style: TextButtonStyle(
              Default: (
                Background: #5a3d6b(0.85),
                LabelStyle: (FontSize: 18, TextColor: #f4e8fc, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Hovered: (
                Background: #7a4d8f(0.92),
                LabelStyle: (FontSize: 18, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Pressed: (
                Background: #9460a8(0.95),
                LabelStyle: (FontSize: 18, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Sounds: $C.@ButtonSounds,
            );
          }

          TextButton #EvolveAllOverlay {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "";
            Style: TextButtonStyle(
              Default: (Background: #1a1a2a(0.6)),
              Hovered: (Background: #1a1a2a(0.6)),
              Pressed: (Background: #1a1a2a(0.7)),
            );
            Visible: false;
          }
        }

        Group { Anchor: (Width: 8); }

        TextButton #ActionButton3 {
          Anchor: (Height: 56);
          FlexWeight: 1;
          Text: "Leaderboard";
          Style: TextButtonStyle(
            Default: (
              Background: #2d5a7b(0.85),
              LabelStyle: (FontSize: 18, TextColor: #e8f4fc, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #3a7399(0.92),
              LabelStyle: (FontSize: 18, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #4a8ab3(0.95),
              LabelStyle: (FontSize: 18, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

  }
}
