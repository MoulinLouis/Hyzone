$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #StatsWindow {
    Anchor: (Width: 500, Height: 360);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #34d399;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 320, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "RunOrFall Stats";
      }

      Group {
        Anchor: (Right: 16, Top: 10, Width: 72, Height: 32);

        TextButton #CloseButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "Close";
          Style: TextButtonStyle(
            Default: (
              Background: #ffffff(0.06),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ffffff(0.1),
              LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ffffff(0.04),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 16, Right: 16, Top: 12, Bottom: 12);

      Label #StatsPlayerName {
        Anchor: (Left: 0, Right: 0, Height: 24);
        Style: (FontSize: 16, TextColor: #f0f4f8, RenderBold: true);
        Text: "Player";
      }

      Group #CardWins {
        Anchor: (Left: 0, Right: 0, Height: 42, Top: 10);
        LayoutMode: Full;
        Background: #ffffff(0.03);
        OutlineColor: #ffffff(0.04);
        OutlineSize: 1;
        Label {
          Anchor: (Left: 16, Top: 0, Bottom: 0, Width: 200);
          Style: (FontSize: 13, TextColor: #9fb0ba, VerticalAlignment: Center);
          Text: "Win";
        }
        Label #StatsWinsValue {
          Anchor: (Left: 220, Right: 16, Top: 0, Bottom: 0);
          Style: (FontSize: 15, TextColor: #34d399, RenderBold: true, VerticalAlignment: Center);
          Text: "0";
        }
      }

      Group #CardLoss {
        Anchor: (Left: 0, Right: 0, Height: 42, Top: 6);
        LayoutMode: Full;
        Background: #ffffff(0.03);
        OutlineColor: #ffffff(0.04);
        OutlineSize: 1;
        Label {
          Anchor: (Left: 16, Top: 0, Bottom: 0, Width: 200);
          Style: (FontSize: 13, TextColor: #9fb0ba, VerticalAlignment: Center);
          Text: "Losses";
        }
        Label #StatsLossValue {
          Anchor: (Left: 220, Right: 16, Top: 0, Bottom: 0);
          Style: (FontSize: 15, TextColor: #f87171, RenderBold: true, VerticalAlignment: Center);
          Text: "0";
        }
      }

      Group #CardWinrate {
        Anchor: (Left: 0, Right: 0, Height: 42, Top: 6);
        LayoutMode: Full;
        Background: #ffffff(0.03);
        OutlineColor: #ffffff(0.04);
        OutlineSize: 1;
        Label {
          Anchor: (Left: 16, Top: 0, Bottom: 0, Width: 200);
          Style: (FontSize: 13, TextColor: #9fb0ba, VerticalAlignment: Center);
          Text: "Winrate";
        }
        Label #StatsWinrateValue {
          Anchor: (Left: 220, Right: 16, Top: 0, Bottom: 0);
          Style: (FontSize: 15, TextColor: #60a5fa, RenderBold: true, VerticalAlignment: Center);
          Text: "0.00%";
        }
      }

      Group #CardBestStreak {
        Anchor: (Left: 0, Right: 0, Height: 42, Top: 6);
        LayoutMode: Full;
        Background: #ffffff(0.03);
        OutlineColor: #ffffff(0.04);
        OutlineSize: 1;
        Label {
          Anchor: (Left: 16, Top: 0, Bottom: 0, Width: 200);
          Style: (FontSize: 13, TextColor: #9fb0ba, VerticalAlignment: Center);
          Text: "Best win streak";
        }
        Label #StatsBestStreakValue {
          Anchor: (Left: 220, Right: 16, Top: 0, Bottom: 0);
          Style: (FontSize: 15, TextColor: #fbbf24, RenderBold: true, VerticalAlignment: Center);
          Text: "0";
        }
      }

      Group #CardLongestTime {
        Anchor: (Left: 0, Right: 0, Height: 42, Top: 6);
        LayoutMode: Full;
        Background: #ffffff(0.03);
        OutlineColor: #ffffff(0.04);
        OutlineSize: 1;
        Label {
          Anchor: (Left: 16, Top: 0, Bottom: 0, Width: 200);
          Style: (FontSize: 13, TextColor: #9fb0ba, VerticalAlignment: Center);
          Text: "Longest time survived";
        }
        Label #StatsLongestTimeValue {
          Anchor: (Left: 220, Right: 16, Top: 0, Bottom: 0);
          Style: (FontSize: 15, TextColor: #c084fc, RenderBold: true, VerticalAlignment: Center);
          Text: "00:00.00";
        }
      }
    }
  }
}
