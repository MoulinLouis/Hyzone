$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #LeaderboardWindow {
    Anchor: (Width: 500, Height: 580);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 80);
      Padding: (Left: 20, Right: 20, Top: 16);
      LayoutMode: Left;

      Group #TitleBlock {
        FlexWeight: 1;
        LayoutMode: Top;

        Label {
          Style: (FontSize: 11, TextColor: #34d399(0.7), RenderUppercase: true, LetterSpacing: 2, RenderBold: true);
          Text: "RunOrFall";
        }

        Label {
          Anchor: (Top: 6);
          Style: (FontSize: 20, TextColor: #f0f4f8, RenderBold: true);
          Text: "Leaderboard";
        }

        Group {
          Anchor: (Left: 0, Width: 40, Height: 2, Top: 10);
          Background: #34d399;
        }
      }

      Group {
        Anchor: (Width: 72, Height: 32, Top: 4);

        TextButton #CloseButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "Close";
          Style: TextButtonStyle(
            Default: (
              Background: #ffffff(0.06),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ffffff(0.1),
              LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ffffff(0.04),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0, Top: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 20, Right: 20, Top: 0, Bottom: 16);

      // --- Tabs ---
      Group #TabsRow {
        Anchor: (Height: 38);
        LayoutMode: Left;

        // Tab: Total Wins
        Group #TabWinsWrap {
          Anchor: (Height: 34);
          FlexWeight: 1;
          OutlineColor: #ffffff(0.04);
          OutlineSize: 1;

          Group #TabWinsInactiveBg {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Background: #142029;
            Visible: false;
          }

          Group #TabWinsActiveBg {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Background: #2d3f50;
            Visible: true;
          }

          Group #TabWinsAccent {
            Anchor: (Left: 0, Right: 0, Top: 0, Height: 3);

            Group #TabWinsAccentInactive {
              Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
              Background: #142029;
              Visible: false;
            }

            Group #TabWinsAccentActive {
              Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
              Background: #34d399;
              Visible: true;
            }
          }

          Label #TabWinsLabel {
            Anchor: (Left: 0, Right: 0, Top: 6, Bottom: 0);
            Style: (FontSize: 13, RenderBold: true, TextColor: #f0f4f8, Alignment: Center);
            Text: "Total Wins";
          }

          TextButton #TabWins {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "";
            Style: TextButtonStyle(
              Default: (Background: #000000(0)),
              Hovered: (Background: #ffffff(0.05)),
              Pressed: (Background: #ffffff(0.1)),
              Sounds: $C.@ButtonSounds,
            );
          }
        }

        Group { Anchor: (Width: 6); }

        // Tab: Best Streak
        Group #TabStreakWrap {
          Anchor: (Height: 34);
          FlexWeight: 1;
          OutlineColor: #ffffff(0.04);
          OutlineSize: 1;

          Group #TabStreakInactiveBg {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Background: #142029;
            Visible: true;
          }

          Group #TabStreakActiveBg {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Background: #2d3f50;
            Visible: false;
          }

          Group #TabStreakAccent {
            Anchor: (Left: 0, Right: 0, Top: 0, Height: 3);

            Group #TabStreakAccentInactive {
              Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
              Background: #142029;
              Visible: true;
            }

            Group #TabStreakAccentActive {
              Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
              Background: #fbbf24;
              Visible: false;
            }
          }

          Label #TabStreakLabel {
            Anchor: (Left: 0, Right: 0, Top: 6, Bottom: 0);
            Style: (FontSize: 13, RenderBold: true, TextColor: #9fb0ba, Alignment: Center);
            Text: "Best Streak";
          }

          TextButton #TabStreak {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "";
            Style: TextButtonStyle(
              Default: (Background: #000000(0)),
              Hovered: (Background: #ffffff(0.05)),
              Pressed: (Background: #ffffff(0.1)),
              Sounds: $C.@ButtonSounds,
            );
          }
        }

        Group { Anchor: (Width: 6); }

        // Tab: Longest Survived
        Group #TabLongestWrap {
          Anchor: (Height: 34);
          FlexWeight: 1;
          OutlineColor: #ffffff(0.04);
          OutlineSize: 1;

          Group #TabLongestInactiveBg {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Background: #142029;
            Visible: true;
          }

          Group #TabLongestActiveBg {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Background: #2d3f50;
            Visible: false;
          }

          Group #TabLongestAccent {
            Anchor: (Left: 0, Right: 0, Top: 0, Height: 3);

            Group #TabLongestAccentInactive {
              Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
              Background: #142029;
              Visible: true;
            }

            Group #TabLongestAccentActive {
              Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
              Background: #c084fc;
              Visible: false;
            }
          }

          Label #TabLongestLabel {
            Anchor: (Left: 0, Right: 0, Top: 6, Bottom: 0);
            Style: (FontSize: 13, RenderBold: true, TextColor: #9fb0ba, Alignment: Center);
            Text: "Longest Alive";
          }

          TextButton #TabLongest {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "";
            Style: TextButtonStyle(
              Default: (Background: #000000(0)),
              Hovered: (Background: #ffffff(0.05)),
              Pressed: (Background: #ffffff(0.1)),
              Sounds: $C.@ButtonSounds,
            );
          }
        }
      }

      // --- Search ---
      Group #SearchArea {
        Anchor: (Left: 0, Right: 0, Height: 52, Top: 8);
        LayoutMode: Top;

        Label {
          Style: (FontSize: 10, TextColor: #9fb0ba(0.6), RenderUppercase: true, LetterSpacing: 2);
          Text: "Search Player";
        }

        $C.@TextField #SearchField {
          Anchor: (Height: 26, Top: 4);
          Style: (FontSize: 13, TextColor: #ffffff(0.85));
        }
      }

      // --- Column Headers ---
      Group #ColumnHeaders {
        Anchor: (Left: 6, Right: 6, Height: 24, Top: 6);
        LayoutMode: Left;
        Padding: (Left: 16, Right: 14);

        Label {
          Anchor: (Width: 50);
          Style: (FontSize: 10, TextColor: #9fb0ba(0.5), RenderUppercase: true, LetterSpacing: 1, RenderBold: true);
          Text: "Rank";
        }

        Label {
          FlexWeight: 1;
          Style: (FontSize: 10, TextColor: #9fb0ba(0.5), RenderUppercase: true, LetterSpacing: 1, RenderBold: true);
          Text: "Player";
        }

        Label {
          Anchor: (Width: 180);
          Style: (FontSize: 10, TextColor: #9fb0ba(0.5), RenderUppercase: true, LetterSpacing: 1, RenderBold: true, HorizontalAlignment: End);
          Text: "Stats";
        }
      }

      // --- Empty State ---
      Label #EmptyText {
        Anchor: (Top: 8);
        Style: (FontSize: 14, TextColor: #9fb0ba);
        Text: "";
      }

      // --- Leaderboard List ---
      Group #LeaderboardList {
        Anchor: (Left: 0, Right: 0, Top: 4);
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        Padding: (Left: 2, Right: 2);
        ScrollbarStyle: $C.@DefaultScrollbarStyle;

        Group #LeaderboardCards {
          LayoutMode: Top;
        }
      }

      // --- Pagination ---
      Group #Pagination {
        Anchor: (Top: 8, Height: 36, Left: 0, Right: 0);
        LayoutMode: Left;

        Group { FlexWeight: 1; }

        TextButton #PrevPageButton {
          Anchor: (Width: 100, Height: 32);
          Text: "< Prev";
          Style: TextButtonStyle(
            Default: (
              Background: #ffffff(0.06),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ffffff(0.1),
              LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ffffff(0.04),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }

        Group { Anchor: (Width: 12); }

        Label #PageLabel {
          Anchor: (Width: 80, Top: 8);
          Style: (FontSize: 12, TextColor: #9fb0ba);
          Text: "";
        }

        Group { Anchor: (Width: 12); }

        TextButton #NextPageButton {
          Anchor: (Width: 100, Height: 32);
          Text: "Next >";
          Style: TextButtonStyle(
            Default: (
              Background: #34d399,
              LabelStyle: (FontSize: 13, TextColor: #1a1a2a, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #4ade80,
              LabelStyle: (FontSize: 13, TextColor: #1a1a2a, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #22c55e,
              LabelStyle: (FontSize: 13, TextColor: #1a1a2a, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }

        Group { FlexWeight: 1; }
      }
    }
  }
}
