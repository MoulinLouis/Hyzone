$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #LeaderboardWindow {
    Anchor: (Width: 640, Height: 560);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #34d399;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 420, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "RunOrFall Leaderboard";
      }

      Group {
        Anchor: (Right: 16, Top: 10, Width: 72, Height: 32);

        TextButton #CloseButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "Close";
          Style: TextButtonStyle(
            Default: (
              Background: #ffffff(0.06),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ffffff(0.1),
              LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ffffff(0.04),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 6, Bottom: 12);

      Label {
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "Choose a leaderboard category.";
      }

      Group #CategoryRow {
        Anchor: (Top: 6, Width: 610, Height: 22);
        LayoutMode: Left;

        Button #CategoryTotalWinsToggle {
          Anchor: (Width: 198, Height: 22);
          LayoutMode: Left;
          Style: ButtonStyle(
            Default: (Background: #1a2530(0.95)),
            Hovered: (Background: #263545),
            Pressed: (Background: #1e2d3a),
            Sounds: $C.@ButtonSounds,
          );

          Group #CategoryTotalWinsCheckbox {
            Anchor: (Width: 18, Height: 18, Top: 2, Left: 6);
            Background: #3b4b57;

            Group {
              Anchor: (Left: 2, Top: 2, Right: 2, Bottom: 2);
              Background: #1a2530(0.95);
            }

            Group #CategoryTotalWinsCheckboxMark {
              Anchor: (Left: 4, Top: 4, Width: 10, Height: 10);
              Background: #34d399;
            }
          }

          Group { Anchor: (Width: 12); }

          Label #CategoryTotalWinsLabel {
            Style: (FontSize: 12, TextColor: #f0f4f8, RenderBold: true);
            Text: "Total wins";
          }
        }

        Group {
          Anchor: (Width: 8);
        }

        Button #CategoryBestStreakToggle {
          Anchor: (Width: 198, Height: 22);
          LayoutMode: Left;
          Style: ButtonStyle(
            Default: (Background: #1a2530(0.95)),
            Hovered: (Background: #263545),
            Pressed: (Background: #1e2d3a),
            Sounds: $C.@ButtonSounds,
          );

          Group #CategoryBestStreakCheckbox {
            Anchor: (Width: 18, Height: 18, Top: 2, Left: 6);
            Background: #3b4b57;

            Group {
              Anchor: (Left: 2, Top: 2, Right: 2, Bottom: 2);
              Background: #1a2530(0.95);
            }

            Group #CategoryBestStreakCheckboxMark {
              Anchor: (Left: 4, Top: 4, Width: 10, Height: 10);
              Background: #34d399;
            }
          }

          Group { Anchor: (Width: 12); }

          Label #CategoryBestStreakLabel {
            Style: (FontSize: 12, TextColor: #f0f4f8, RenderBold: true);
            Text: "Best win streak";
          }
        }

        Group {
          Anchor: (Width: 8);
        }

        Button #CategoryLongestSurvivedToggle {
          Anchor: (Width: 198, Height: 22);
          LayoutMode: Left;
          Style: ButtonStyle(
            Default: (Background: #1a2530(0.95)),
            Hovered: (Background: #263545),
            Pressed: (Background: #1e2d3a),
            Sounds: $C.@ButtonSounds,
          );

          Group #CategoryLongestSurvivedCheckbox {
            Anchor: (Width: 18, Height: 18, Top: 2, Left: 6);
            Background: #3b4b57;

            Group {
              Anchor: (Left: 2, Top: 2, Right: 2, Bottom: 2);
              Background: #1a2530(0.95);
            }

            Group #CategoryLongestSurvivedCheckboxMark {
              Anchor: (Left: 4, Top: 4, Width: 10, Height: 10);
              Background: #34d399;
            }
          }

          Group { Anchor: (Width: 12); }

          Label #CategoryLongestSurvivedLabel {
            Style: (FontSize: 12, TextColor: #f0f4f8, RenderBold: true);
            Text: "Longest time alive";
          }
        }
      }

      Label #CategoryHint {
        Anchor: (Top: 6);
        Style: (FontSize: 12, TextColor: #9fb0ba);
        Text: "Ranked by total wins.";
      }

      Label {
        Anchor: (Top: 6);
        Style: (FontSize: 12, TextColor: #9fb0ba);
        Text: "Search";
      }

      $C.@TextField #LeaderboardSearchField {
        Anchor: (Height: 24, Top: 4);
        Style: (FontSize: 13, TextColor: #ffffff(0.85));
      }

      Label #EmptyText {
        Style: (
          FontSize: 14,
          TextColor: #9fb0ba
        );
        Text: "";
      }

      Group #LeaderboardList {
        Anchor: (Width: 610, Top: 8);
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        Padding: (Left: 6, Right: 6);
        ScrollbarStyle: $C.@DefaultScrollbarStyle;

        Group #LeaderboardCards {
          LayoutMode: Top;
        }
      }

      Group #Pagination {
        Anchor: (Top: 6, Height: 22, Width: 610);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 65);
        }

        $C.@TextButton #PrevPageButton {
          Anchor: (Width: 110, Height: 22);
          Text: "< Prev";
        }

        Group #PageLabelWrap {
          Anchor: (Width: 140, Height: 22);
          LayoutMode: Left;

          Group {
            Anchor: (Width: 35);
          }

          Label #PageLabel {
            Anchor: (Width: 70);
            Style: (FontSize: 12, TextColor: #9fb0ba);
            Text: "";
          }

          Group {
            Anchor: (Width: 35);
          }
        }

        $C.@TextButton #NextPageButton {
          Anchor: (Width: 110, Height: 22);
          Text: "Next >";
        }

        Group {
          Anchor: (Width: 65);
        }
      }
    }
  }
}
