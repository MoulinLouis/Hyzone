$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #MusicWindow {
    Anchor: (Width: 520, Height: 220);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #a855f7;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 300, Height: 24);
        Style: (FontSize: 20, TextColor: #f0f4f8, RenderBold: true);
        Text: "Music Settings";
      }

      Group {
        Anchor: (Right: 16, Top: 10, Width: 72, Height: 32);

        TextButton #BackButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "Back";
          Style: TextButtonStyle(
            Default: (
              Background: #ffffff(0.06),
              LabelStyle: (FontSize: 14, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ffffff(0.1),
              LabelStyle: (FontSize: 14, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ffffff(0.04),
              LabelStyle: (FontSize: 14, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 10, Bottom: 12);

      Group {
        Anchor: (Left: 0, Right: 0, Height: 136);
        LayoutMode: Full;
        Background: #ffffff(0.03);
        OutlineColor: #ffffff(0.04);
        OutlineSize: 1;

        Group {
          Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 4);
          Background: #a855f7;
        }

        Label #CurrentMusicLabel {
          Anchor: (Left: 16, Top: 12, Right: 16, Height: 20);
          Style: (FontSize: 15, TextColor: #cfd7dc);
          Text: "Now Playing: Zelda OST";
        }

        Group {
          Anchor: (Left: 16, Right: 12, Top: 40, Height: 30);
          LayoutMode: Left;

          Group {
            Anchor: (Width: 236, Height: 30);

            TextButton #PlayZeldaMusicButton {
              Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
              Text: "Play Zelda OST";
              Style: TextButtonStyle(
                Default: (
                  Background: #ffffff(0.08),
                  LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Hovered: (
                  Background: #ffffff(0.14),
                  LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Pressed: (
                  Background: #ffffff(0.05),
                  LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Sounds: $C.@ButtonSounds,
              );
            }
          }

          Group {
            Anchor: (Width: 8);
          }

          Group {
            Anchor: (Width: 236, Height: 30);

            TextButton #PlayCelesteMusicButton {
              Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
              Text: "Play Celeste OST";
              Style: TextButtonStyle(
                Default: (
                  Background: #ffffff(0.08),
                  LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Hovered: (
                  Background: #ffffff(0.14),
                  LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Pressed: (
                  Background: #ffffff(0.05),
                  LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Sounds: $C.@ButtonSounds,
              );
            }
          }
        }

        Group {
          Anchor: (Left: 16, Right: 12, Top: 76, Height: 30);
          LayoutMode: Left;

          Group {
            Anchor: (Width: 236, Height: 30);

            TextButton #PlayDefaultMusicButton {
              Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
              Text: "Default Music";
              Style: TextButtonStyle(
                Default: (
                  Background: #ffffff(0.08),
                  LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Hovered: (
                  Background: #ffffff(0.14),
                  LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Pressed: (
                  Background: #ffffff(0.05),
                  LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Sounds: $C.@ButtonSounds,
              );
            }
          }

          Group {
            Anchor: (Width: 8);
          }

          Group {
            Anchor: (Width: 236, Height: 30);

            TextButton #PlayNoMusicButton {
              Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
              Text: "No Music";
              Style: TextButtonStyle(
                Default: (
                  Background: #ffffff(0.08),
                  LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Hovered: (
                  Background: #ffffff(0.14),
                  LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Pressed: (
                  Background: #ffffff(0.05),
                  LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Sounds: $C.@ButtonSounds,
              );
            }
          }
        }
      }
    }
  }
}
