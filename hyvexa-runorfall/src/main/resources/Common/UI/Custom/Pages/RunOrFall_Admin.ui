$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #RunOrFallAdminWindow {
    Anchor: (Width: 920, Height: 760);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #f59e0b;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 320, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "RunOrFall Admin";
      }

      TextButton #CloseButton {
        Anchor: (Right: 16, Top: 10, Width: 72, Height: 32);
        Text: "Close";
        Style: TextButtonStyle(
          Default: (
            Background: #ffffff(0.06),
            LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
          ),
          Hovered: (
            Background: #ffffff(0.1),
            LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
          ),
          Pressed: (
            Background: #ffffff(0.04),
            LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
          ),
          Sounds: $C.@ButtonSounds,
        );
      }
    }

    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Left;
      Padding: (Left: 12, Right: 12, Top: 8, Bottom: 12);

      Group #AdminColumn {
        Anchor: (Width: 560);
        LayoutMode: Top;

        Label {
          Style: (FontSize: 14, TextColor: #9fb0ba);
          Text: "Configure selected map lobby, spawns, platforms, and game values.";
        }

        Label #StatusValue {
          Anchor: (Top: 6);
          Style: (FontSize: 12, TextColor: #cfd7dc);
          Text: "";
        }

        Label #SelectedMapValue {
          Anchor: (Top: 4);
          Style: (FontSize: 12, TextColor: #ffd166, RenderBold: true);
          Text: "Selected map: none";
        }

        Group {
          Anchor: (Top: 8, Height: 24);
          LayoutMode: Left;

          $C.@TextButton #JoinButton {
            Anchor: (Width: 120, Height: 22);
            Text: "Join Lobby";
          }

          $C.@TextButton #LeaveButton {
            Anchor: (Width: 120, Height: 22, Left: 6);
            Text: "Leave Lobby";
          }

          $C.@TextButton #StartButton {
            Anchor: (Width: 120, Height: 22, Left: 6);
            Text: "Start";
          }

          $C.@TextButton #StopButton {
            Anchor: (Width: 120, Height: 22, Left: 6);
            Text: "Stop";
          }
        }

        $C.@TextButton #RefreshButton {
          Anchor: (Top: 6, Width: 140, Height: 22);
          Text: "Refresh";
        }

        Label #LobbyValue {
          Anchor: (Top: 8);
          Style: (FontSize: 12, TextColor: #9fb0ba);
          Text: "";
        }

        Group {
          Anchor: (Top: 4, Height: 24);
          LayoutMode: Left;

          $C.@TextButton #SetLobbyButton {
            Anchor: (Width: 170, Height: 22);
            Text: "Set Lobby Here";
          }

          $C.@TextButton #TpLobbyButton {
            Anchor: (Width: 170, Height: 22, Left: 6);
            Text: "TP Lobby";
          }
        }

        Label #SpawnsValue {
          Anchor: (Top: 8);
          Style: (FontSize: 12, TextColor: #9fb0ba);
          Text: "";
        }

        Group {
          Anchor: (Top: 4, Height: 24);
          LayoutMode: Left;

          $C.@TextButton #AddSpawnButton {
            Anchor: (Width: 170, Height: 22);
            Text: "Add Spawn Here";
          }

          $C.@TextButton #ClearSpawnsButton {
            Anchor: (Width: 170, Height: 22, Left: 6);
            Text: "Clear Spawns";
          }
        }

        Label #PlatformsValue {
          Anchor: (Top: 8);
          Style: (FontSize: 12, TextColor: #9fb0ba);
          Text: "";
        }

        Label #Pos1Value {
          Anchor: (Top: 6);
          Style: (FontSize: 12, TextColor: #9fb0ba);
          Text: "";
        }

        Label #Pos2Value {
          Anchor: (Top: 2);
          Style: (FontSize: 12, TextColor: #9fb0ba);
          Text: "";
        }

        Label {
          Anchor: (Top: 6);
          Style: (FontSize: 12, TextColor: #9fb0ba);
          Text: "Platform Block Item ID";
        }

        Group {
          Anchor: (Top: 2, Height: 26);
          LayoutMode: Left;

          $C.@TextField #PlatformBlockIdField {
            Anchor: (Width: 200, Height: 24);
            Style: (FontSize: 13, TextColor: #ffffff(0.85));
          }
        }

        Group {
          Anchor: (Top: 4, Height: 24);
          LayoutMode: Left;

          $C.@TextButton #SetPos1Button {
            Anchor: (Width: 120, Height: 22);
            Text: "Set Pos1";
          }

          $C.@TextButton #SetPos2Button {
            Anchor: (Width: 120, Height: 22, Left: 6);
            Text: "Set Pos2";
          }

          $C.@TextButton #SavePlatformButton {
            Anchor: (Width: 140, Height: 22, Left: 6);
            Text: "Save Platform";
          }

          $C.@TextButton #ClearPlatformsButton {
            Anchor: (Width: 140, Height: 22, Left: 6);
            Text: "Clear Platforms";
          }
        }

        Label {
          Anchor: (Top: 10);
          Style: (FontSize: 13, TextColor: #cfd7dc);
          Text: "Void Y";
        }

        Group {
          Anchor: (Top: 2, Height: 26);
          LayoutMode: Left;

          $C.@TextField #VoidYField {
            Anchor: (Width: 200, Height: 24);
            Style: (FontSize: 13, TextColor: #ffffff(0.85));
          }

          $C.@TextButton #SaveVoidYButton {
            Anchor: (Width: 120, Height: 22, Left: 6, Top: 1);
            Text: "Save Void Y";
          }
        }

        Label #VoidYCurrent {
          Anchor: (Top: 4);
          Style: (FontSize: 12, TextColor: #9fb0ba);
          Text: "";
        }

        Label {
          Anchor: (Top: 8);
          Style: (FontSize: 13, TextColor: #cfd7dc);
          Text: "Block break delay (seconds)";
        }

        Group {
          Anchor: (Top: 2, Height: 26);
          LayoutMode: Left;

          $C.@TextField #BreakDelayField {
            Anchor: (Width: 200, Height: 24);
            Style: (FontSize: 13, TextColor: #ffffff(0.85));
          }

          $C.@TextButton #SaveBreakDelayButton {
            Anchor: (Width: 120, Height: 22, Left: 6, Top: 1);
            Text: "Save Delay";
          }
        }

        Label #BreakDelayCurrent {
          Anchor: (Top: 4);
          Style: (FontSize: 12, TextColor: #9fb0ba);
          Text: "";
        }

        Label {
          Anchor: (Top: 10);
          Style: (FontSize: 13, TextColor: #cfd7dc);
          Text: "Auto-start countdown";
        }

        Group {
          Anchor: (Top: 2, Height: 26);
          LayoutMode: Left;

          Label {
            Anchor: (Width: 90, Height: 24, Top: 3);
            Style: (FontSize: 12, TextColor: #9fb0ba);
            Text: "Min players";
          }

          $C.@TextField #MinPlayersField {
            Anchor: (Width: 60, Height: 24);
            Style: (FontSize: 13, TextColor: #ffffff(0.85));
          }

          Label {
            Anchor: (Width: 120, Height: 24, Left: 6, Top: 3);
            Style: (FontSize: 12, TextColor: #9fb0ba);
            Text: "Min players time";
          }

          $C.@TextField #MinPlayersTimeField {
            Anchor: (Width: 75, Height: 24);
            Style: (FontSize: 13, TextColor: #ffffff(0.85));
          }
        }

        Group {
          Anchor: (Top: 2, Height: 26);
          LayoutMode: Left;

          Label {
            Anchor: (Width: 90, Height: 24, Top: 3);
            Style: (FontSize: 12, TextColor: #9fb0ba);
            Text: "Optimal players";
          }

          $C.@TextField #OptimalPlayersField {
            Anchor: (Width: 60, Height: 24);
            Style: (FontSize: 13, TextColor: #ffffff(0.85));
          }

          Label {
            Anchor: (Width: 120, Height: 24, Left: 6, Top: 3);
            Style: (FontSize: 12, TextColor: #9fb0ba);
            Text: "Optimal players time";
          }

          $C.@TextField #OptimalPlayersTimeField {
            Anchor: (Width: 75, Height: 24);
            Style: (FontSize: 13, TextColor: #ffffff(0.85));
          }
        }

        $C.@TextButton #SaveAutoStartButton {
          Anchor: (Top: 4, Width: 160, Height: 22);
          Text: "Save Auto-start";
        }

        Label #AutoStartCurrent {
          Anchor: (Top: 4);
          Style: (FontSize: 12, TextColor: #9fb0ba);
          Text: "";
        }
      }

      Group #ColumnSpacer {
        Anchor: (Width: 12);
      }

      Group #MapColumn {
        Anchor: (Width: 320);
        LayoutMode: Top;

        Label {
          Style: (FontSize: 16, TextColor: #93844c, RenderBold: true);
          Text: "Maps";
        }

        Label {
          Anchor: (Top: 6);
          Style: (FontSize: 12, TextColor: #9fb0ba);
          Text: "Map Id";
        }

        $C.@TextField #MapIdField {
          Anchor: (Top: 4, Height: 24);
          Style: (FontSize: 13, TextColor: #ffffff(0.85));
        }

        Group {
          Anchor: (Top: 6, Height: 24);
          LayoutMode: Left;

          $C.@TextButton #MapCreateButton {
            Anchor: (Width: 150, Height: 22);
            Text: "Create + Select";
          }

          $C.@TextButton #MapDeleteButton {
            Anchor: (Width: 150, Height: 22, Left: 6);
            Text: "Delete Selected";
          }
        }

        Label {
          Anchor: (Top: 8);
          Style: (FontSize: 12, TextColor: #9fb0ba);
          Text: "Search";
        }

        $C.@TextField #MapSearchField {
          Anchor: (Top: 4, Height: 24);
          Style: (FontSize: 13, TextColor: #ffffff(0.85));
        }

        Group #MapList {
          Anchor: (Width: 320, Top: 8, Height: 560);
          LayoutMode: TopScrolling;
          Padding: (Left: 6, Right: 6);
          ScrollbarStyle: $C.@DefaultScrollbarStyle;

          Group #MapCards {
            LayoutMode: Top;
          }
        }
      }
    }
  }
}

$C.@BackButton {}
