$C = "../Common.ui";

Group {
  LayoutMode: Left;
  Anchor: (Left: 0, Right: 0, Bottom: 6, Height: 44);
  Background: #1a2530(0.95);

  Group #AccentBar {
    Anchor: (Width: 8, Top: 0, Bottom: 0);
    Background: #34d399;
  }

  Group #ContentRow {
    FlexWeight: 1;
    Padding: (Left: 12, Right: 12, Top: 12);
    LayoutMode: Left;

    Label #Rank {
      Anchor: (Width: 34);
      Style: (
        FontSize: 14,
        RenderBold: true,
        TextColor: #f0f4f8
      );
      Text: "1";
    }

    Label #PlayerName {
      Anchor: (Width: 290);
      Style: (
        FontSize: 13,
        TextColor: #cfd7dc
      );
      Text: "Player";
    }

    Group #StatsCell {
      FlexWeight: 1;
      LayoutMode: Full;

      Label #StatsGeneric {
        Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
        Style: (
          FontSize: 13,
          RenderBold: true,
          TextColor: #9fb0ba,
          HorizontalAlignment: End
        );
        Text: "0";
      }

      Group #StatsTotalWins {
        Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
        LayoutMode: Left;
        Visible: false;

        Group {
          FlexWeight: 1;
        }

        Label #StatsWins {
          Anchor: (Width: 48);
          Style: (
            FontSize: 13,
            RenderBold: true,
            TextColor: #34d399,
            HorizontalAlignment: End
          );
          Text: "0W";
        }

        Group {
          Anchor: (Width: 8);
        }

        Label #StatsLosses {
          Anchor: (Width: 48);
          Style: (
            FontSize: 13,
            RenderBold: true,
            TextColor: #f87171,
            HorizontalAlignment: End
          );
          Text: "0L";
        }

        Group {
          Anchor: (Width: 8);
        }

        Label #StatsWinrate {
          Anchor: (Width: 72);
          Style: (
            FontSize: 13,
            RenderBold: true,
            TextColor: #60a5fa,
            HorizontalAlignment: End
          );
          Text: "0.00%";
        }
      }
    }
  }
}
