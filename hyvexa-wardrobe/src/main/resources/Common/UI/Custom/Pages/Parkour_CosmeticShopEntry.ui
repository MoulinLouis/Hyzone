$C = "../Common.ui";

Group {
  Anchor: (Left: 0, Right: 0, Height: 52, Top: 6);
  LayoutMode: Full;
  Background: #ffffff(0.03);
  OutlineColor: #ffffff(0.04);
  OutlineSize: 1;

  // Accent bar (color set dynamically)
  Group #EntryAccent {
    Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 4);
    Background: #6366f1;
  }

  // Cosmetic name
  Label #EntryName {
    Anchor: (Left: 16, Top: 0, Bottom: 0, Width: 130);
    Style: (FontSize: 14, TextColor: #f0f4f8, VerticalAlignment: Center, RenderBold: true);
    Text: "Effect Name";
  }

  // Price label
  Label #EntryPrice {
    Anchor: (Left: 150, Top: 0, Bottom: 0, Width: 110);
    Style: (FontSize: 12, TextColor: #6b7c8a, VerticalAlignment: Center);
    Text: "10 Vexa";
  }

  // Preview button (always visible)
  Group {
    Anchor: (Right: 116, Top: 10, Width: 72, Height: 32);

    TextButton #PreviewButton {
      Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
      Text: "Preview";
      Style: TextButtonStyle(
        Default: (
          Background: #ffffff(0.06),
          LabelStyle: (FontSize: 12, TextColor: #9fb0ba, HorizontalAlignment: Center, VerticalAlignment: Center)
        ),
        Hovered: (
          Background: #ffffff(0.1),
          LabelStyle: (FontSize: 12, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
        ),
        Pressed: (
          Background: #ffffff(0.04),
          LabelStyle: (FontSize: 12, TextColor: #9fb0ba, HorizontalAlignment: Center, VerticalAlignment: Center)
        ),
        Sounds: $C.@ButtonSounds,
      );
    }
  }

  // Buy button (shown when not owned)
  Group #BuyGroup {
    Anchor: (Right: 12, Top: 10, Width: 96, Height: 32);

    TextButton #BuyButton {
      Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
      Text: "Buy";
      Style: TextButtonStyle(
        Default: (
          Background: #22c55e(0.2),
          LabelStyle: (FontSize: 13, TextColor: #22c55e, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
        ),
        Hovered: (
          Background: #22c55e(0.35),
          LabelStyle: (FontSize: 13, TextColor: #4ade80, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
        ),
        Pressed: (
          Background: #22c55e(0.15),
          LabelStyle: (FontSize: 13, TextColor: #22c55e, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
        ),
        Sounds: $C.@ButtonSounds,
      );
    }
  }

  // Equip button (shown when owned but not equipped)
  Group #EquipGroup {
    Anchor: (Right: 12, Top: 10, Width: 96, Height: 32);
    Visible: false;

    TextButton #EquipButton {
      Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
      Text: "Equip";
      Style: TextButtonStyle(
        Default: (
          Background: #6366f1(0.2),
          LabelStyle: (FontSize: 13, TextColor: #a5b4fc, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
        ),
        Hovered: (
          Background: #6366f1(0.35),
          LabelStyle: (FontSize: 13, TextColor: #c7d2fe, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
        ),
        Pressed: (
          Background: #6366f1(0.15),
          LabelStyle: (FontSize: 13, TextColor: #a5b4fc, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
        ),
        Sounds: $C.@ButtonSounds,
      );
    }
  }

  // Unequip button (shown when equipped)
  Group #UnequipGroup {
    Anchor: (Right: 12, Top: 10, Width: 96, Height: 32);
    Visible: false;

    TextButton #UnequipButton {
      Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
      Text: "Unequip";
      Style: TextButtonStyle(
        Default: (
          Background: #ef4444(0.2),
          LabelStyle: (FontSize: 13, TextColor: #fca5a5, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
        ),
        Hovered: (
          Background: #ef4444(0.35),
          LabelStyle: (FontSize: 13, TextColor: #fecaca, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
        ),
        Pressed: (
          Background: #ef4444(0.15),
          LabelStyle: (FontSize: 13, TextColor: #fca5a5, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
        ),
        Sounds: $C.@ButtonSounds,
      );
    }
  }
}
