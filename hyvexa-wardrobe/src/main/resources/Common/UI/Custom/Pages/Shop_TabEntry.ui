$C = "../Common.ui";

Group {
  Anchor: (Left: 0, Right: 0, Height: 36);
  LayoutMode: Full;

  // Active accent bar (left edge, hidden by default)
  Group #TabAccent {
    Anchor: (Left: 0, Top: 4, Bottom: 4, Width: 3);
    Background: #6366f1;
    Visible: false;
  }

  // Tab label (left-aligned)
  Label #TabLabel {
    Anchor: (Left: 18, Right: 8, Top: 0, Bottom: 0);
    Style: (FontSize: 14, TextColor: #8b9bb0, VerticalAlignment: Center);
    Text: "Tab";
  }

  // Clickable overlay
  TextButton #TabButton {
    Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
    Text: "";
    Style: TextButtonStyle(
      Default: (
        Background: #000000(0.01),
        LabelStyle: (FontSize: 1, TextColor: #000000(0.01), HorizontalAlignment: Center, VerticalAlignment: Center)
      ),
      Hovered: (
        Background: #ffffff(0.06),
        LabelStyle: (FontSize: 1, TextColor: #000000(0.01), HorizontalAlignment: Center, VerticalAlignment: Center)
      ),
      Pressed: (
        Background: #ffffff(0.03),
        LabelStyle: (FontSize: 1, TextColor: #000000(0.01), HorizontalAlignment: Center, VerticalAlignment: Center)
      ),
      Sounds: $C.@ButtonSounds,
    );
  }
}
