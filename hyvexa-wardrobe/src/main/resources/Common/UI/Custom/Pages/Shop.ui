$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #ShopWindow {
    Anchor: (Width: 800, Height: 380);
    LayoutMode: Left;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === LEFT SIDEBAR ===
    Group #Sidebar {
      Anchor: (Width: 170, Top: 0, Bottom: 0);
      LayoutMode: Top;
      Background: #080d14;

      // Purple accent top line
      Group {
        Anchor: (Left: 0, Right: 0, Height: 2);
        Background: #6366f1;
      }

      // Title
      Label {
        Anchor: (Left: 0, Right: 0, Top: 14, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true, HorizontalAlignment: Center);
        Text: "Shop";
      }

      // Divider
      Group {
        Anchor: (Left: 16, Right: 16, Top: 12, Height: 1);
        Background: #ffffff(0.06);
      }

      // Vertical tab bar
      Group #TabBar {
        Anchor: (Left: 0, Right: 0, Top: 8);
        FlexWeight: 1;
        LayoutMode: Top;
      }

      // Bottom tab bar (pinned above vexa balance)
      Group #BottomTabBar {
        Anchor: (Left: 0, Right: 0);
        LayoutMode: Top;
      }

      // Divider
      Group {
        Anchor: (Left: 16, Right: 16, Height: 1);
        Background: #ffffff(0.06);
      }

      // Vexa balance + "+" button to open packs
      Group {
        Anchor: (Left: 0, Right: 0, Height: 40);
        LayoutMode: Left;
        Padding: (Left: 16, Right: 12);

        Group {
          Anchor: (Width: 22, Height: 22, Top: 9);
          Background: (TexturePath: "../Textures/vexa.png");
        }

        Label #VexaBalance {
          Anchor: (Left: 6, Height: 40);
          FlexWeight: 1;
          Style: (FontSize: 18, TextColor: #22c55e, RenderBold: true, VerticalAlignment: Center);
          Text: "0";
        }

        // "+" button (Group wrapper + TextButton overlay)
        Group {
          Anchor: (Width: 26, Height: 26, Top: 7);
          LayoutMode: Full;

          Label {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Style: (FontSize: 18, TextColor: #22c55e, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center);
            Text: "+";
          }

          TextButton #VexaPacksButton {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "";
            Style: TextButtonStyle(
              Default: (
                Background: #22c55e(0.1),
                LabelStyle: (FontSize: 1, TextColor: #000000(0.01), HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Hovered: (
                Background: #22c55e(0.25),
                LabelStyle: (FontSize: 1, TextColor: #000000(0.01), HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Pressed: (
                Background: #22c55e(0.08),
                LabelStyle: (FontSize: 1, TextColor: #000000(0.01), HorizontalAlignment: Center, VerticalAlignment: Center)
              ),
              Sounds: $C.@ButtonSounds,
            );
          }
        }
      }

      // Close button
      Group {
        Anchor: (Left: 12, Right: 12, Height: 36);

        TextButton #CloseButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "Close";
          Style: TextButtonStyle(
            Default: (
              Background: #ffffff(0.06),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ffffff(0.1),
              LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ffffff(0.04),
              LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }

      // Bottom padding
      Group {
        Anchor: (Height: 10);
      }
    }

    // === VERTICAL SEPARATOR ===
    Group {
      Anchor: (Width: 1, Top: 0, Bottom: 0);
      Background: #ffffff(0.06);
    }

    // === RIGHT CONTENT ===
    Group {
      Anchor: (Top: 0, Bottom: 0);
      FlexWeight: 1;
      LayoutMode: Top;

      // Purple accent top line
      Group {
        Anchor: (Left: 0, Right: 0, Height: 2);
        Background: #6366f1;
      }

      // Scrollable tab content
      Group #TabContent {
        Anchor: (Left: 0, Right: 0);
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        Padding: (Left: 16, Right: 16, Top: 12, Bottom: 12);
        ScrollbarStyle: $C.@DefaultScrollbarStyle;
      }
    }
  }

  // === CONFIRM PURCHASE OVERLAY ===
  Group #ConfirmOverlay {
    Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
    Background: #000000(0.6);
    Visible: false;

    Group #ConfirmBox {
      Anchor: (Width: 280, Height: 190);
      LayoutMode: Top;
      Background: #0d1620;
      OutlineColor: #ffffff(0.1);
      OutlineSize: 1;

      Group {
        Anchor: (Left: 0, Right: 0, Height: 3);
        Background: #22c55e;
      }

      Label {
        Anchor: (Top: 18, Left: 0, Right: 0, Height: 24);
        Style: (FontSize: 18, TextColor: #f4f9ff, RenderBold: true, HorizontalAlignment: Center);
        Text: "Confirm Purchase";
      }

      Label #ConfirmSkinName {
        Anchor: (Top: 6, Left: 0, Right: 0, Height: 22);
        Style: (FontSize: 15, TextColor: #9fb0ba, HorizontalAlignment: Center);
        Text: "";
      }

      Group {
        Anchor: (Top: 8, Left: 0, Right: 0, Height: 26);
        LayoutMode: Left;

        Group { FlexWeight: 1; }
        Group {
          Anchor: (Width: 22, Height: 22, Top: 2);
          Background: (TexturePath: "../Textures/vexa.png");
        }
        Group { Anchor: (Width: 6); }
        Label #ConfirmPrice {
          Anchor: (Height: 26);
          Style: (FontSize: 20, TextColor: #22c55e, RenderBold: true, VerticalAlignment: Center);
          Text: "100";
        }
        Group { FlexWeight: 1; }
      }

      Group {
        Anchor: (Top: 18, Left: 0, Right: 0, Height: 36);
        LayoutMode: Left;
        Padding: (Left: 24, Right: 24);

        TextButton #ShopCancelButton {
          Anchor: (Width: 100, Height: 36);
          Text: "Cancel";
          Style: TextButtonStyle(
            Default: (
              Background: #ffffff(0.06),
              LabelStyle: (FontSize: 14, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ffffff(0.12),
              LabelStyle: (FontSize: 14, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ffffff(0.04),
              LabelStyle: (FontSize: 14, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }

        Group { FlexWeight: 1; }

        TextButton #ShopConfirmButton {
          Anchor: (Width: 100, Height: 36);
          Text: "Buy";
          Style: TextButtonStyle(
            Default: (
              Background: #22c55e(0.2),
              LabelStyle: (FontSize: 14, TextColor: #22c55e, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
            ),
            Hovered: (
              Background: #22c55e(0.35),
              LabelStyle: (FontSize: 14, TextColor: #4ade80, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
            ),
            Pressed: (
              Background: #22c55e(0.15),
              LabelStyle: (FontSize: 14, TextColor: #22c55e, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }
  }
}

$C.@BackButton {}
