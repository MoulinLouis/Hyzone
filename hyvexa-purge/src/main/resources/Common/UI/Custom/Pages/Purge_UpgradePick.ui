$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #UpgradePickWindow {
    Anchor: (Width: 700, Height: 200);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 42);
      LayoutMode: Full;
      Background: #0a1018;

      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #4ade80;
      }

      Label {
        Anchor: (Left: 20, Top: 12, Width: 300, Height: 22);
        Style: (FontSize: 15, TextColor: #f0f4f8, RenderBold: true);
        Text: "CHOOSE AN UPGRADE";
      }

      Label #WaveLabel {
        Anchor: (Right: 90, Top: 12, Width: 200, Height: 22);
        Style: (FontSize: 13, TextColor: #9fb0ba, HorizontalAlignment: End);
        Text: "Wave 1 Complete";
      }

      // Skip button in header
      Group #SkipWrap {
        Anchor: (Right: 12, Top: 9, Width: 64, Height: 24);

        TextButton #SkipButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "Skip";
          Style: TextButtonStyle(
            Default: (
              Background: #ffffff(0.06),
              LabelStyle: (FontSize: 12, TextColor: #6b7280, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ffffff(0.12),
              LabelStyle: (FontSize: 12, TextColor: #9fb0ba, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ffffff(0.04),
              LabelStyle: (FontSize: 12, TextColor: #6b7280, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

    // === CARDS ROW ===
    Group #CardsRow {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Left;
      Padding: (Left: 14, Right: 14, Top: 10, Bottom: 14);

      // --- Upgrade Card 1 ---
      Group #Card1 {
        FlexWeight: 1;
        Anchor: (Top: 0, Bottom: 0, Right: 10);
        LayoutMode: Full;
        Background: #ffffff(0.03);
        OutlineColor: #ffffff(0.04);
        OutlineSize: 1;

        // Top accent bar variants
        Group #Card1AccentGray {
          Anchor: (Left: 0, Right: 0, Top: 0, Height: 3);
          Background: #9ca3af;
          Visible: false;
        }
        Group #Card1AccentGreen {
          Anchor: (Left: 0, Right: 0, Top: 0, Height: 3);
          Background: #22c55e;
          Visible: false;
        }
        Group #Card1AccentBlue {
          Anchor: (Left: 0, Right: 0, Top: 0, Height: 3);
          Background: #3b82f6;
          Visible: false;
        }
        Group #Card1AccentViolet {
          Anchor: (Left: 0, Right: 0, Top: 0, Height: 3);
          Background: #a855f7;
          Visible: false;
        }
        Group #Card1AccentGold {
          Anchor: (Left: 0, Right: 0, Top: 0, Height: 3);
          Background: #eab308;
          Visible: false;
        }

        // Content
        Group #Card1Content {
          Anchor: (Left: 0, Right: 0, Top: 3, Bottom: 0);
          Padding: (Left: 12, Right: 12);
          LayoutMode: Top;

          Group { FlexWeight: 1; }

          Label #Card1Name {
            Anchor: (Left: 0, Right: 0);
            Style: (FontSize: 15, TextColor: #7d8c96, RenderBold: true, HorizontalAlignment: Center);
            Text: "Upgrade";
          }

          Label #Card1Desc {
            Anchor: (Left: 0, Right: 0, Top: 4);
            Style: (FontSize: 24, TextColor: #f0f4f8, RenderBold: true, HorizontalAlignment: Center);
            Text: "";
          }

          Label #Card1Rarity {
            Anchor: (Left: 0, Right: 0, Top: 6);
            Style: (FontSize: 14, TextColor: #9ca3af, RenderBold: true, HorizontalAlignment: Center);
            Text: "";
          }

          Label #Card1Stacks {
            Anchor: (Left: 0, Right: 0, Top: 4);
            Style: (FontSize: 12, TextColor: #4ade80, HorizontalAlignment: Center);
            Text: "";
          }

          Group { FlexWeight: 1; }
        }

        // Clickable overlay
        TextButton #Card1Button {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "";
          Style: TextButtonStyle(
            Default: (Background: #00000000, LabelStyle: (FontSize: 1, TextColor: #00000000)),
            Hovered: (Background: #ffffff(0.06), LabelStyle: (FontSize: 1, TextColor: #00000000)),
            Pressed: (Background: #ffffff(0.02), LabelStyle: (FontSize: 1, TextColor: #00000000)),
            Sounds: $C.@ButtonSounds,
          );
        }
      }

      // --- Upgrade Card 2 ---
      Group #Card2 {
        FlexWeight: 1;
        Anchor: (Top: 0, Bottom: 0, Right: 10);
        LayoutMode: Full;
        Background: #ffffff(0.03);
        OutlineColor: #ffffff(0.04);
