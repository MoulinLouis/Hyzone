$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #SettingsAdminWindow {
    Anchor: (Width: 560, Height: 430);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #f59e0b;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 320, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "Purge Settings";
      }

      Group {
        Anchor: (Right: 16, Top: 10, Width: 72, Height: 32);
        TextButton #BackButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "< Back";
          Style: TextButtonStyle(
            Default: (Background: #ffffff(0.06), LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Hovered: (Background: #ffffff(0.1), LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Pressed: (Background: #ffffff(0.04), LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 10, Bottom: 12);

      Label {
        Style: (FontSize: 14, TextColor: #9fb0ba);
        Text: "Configure player teleport points for /purge start and /purge stop.";
      }

      Group {
        Anchor: (Left: 0, Right: 0, Top: 10, Height: 124);
        LayoutMode: Top;
        Background: #ffffff(0.03);
        OutlineColor: #ffffff(0.04);
        OutlineSize: 1;
        Padding: (Left: 12, Right: 12, Top: 10, Bottom: 10);

        Label {
          Style: (FontSize: 15, RenderBold: true, TextColor: #f0f4f8);
          Text: "Session Start Spawn (/purge start)";
        }

        Label #StartPointValue {
          Anchor: (Top: 8);
          Style: (FontSize: 13, TextColor: #9fb0ba);
          Text: "Not configured";
        }

        TextButton #SetStartButton {
          Anchor: (Top: 10, Width: 210, Height: 34);
          Text: "Set Here";
          Style: TextButtonStyle(
            Default: (Background: #14532d, LabelStyle: (FontSize: 13, TextColor: #4ade80, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Hovered: (Background: #166534, LabelStyle: (FontSize: 13, TextColor: #86efac, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Pressed: (Background: #0f3d22, LabelStyle: (FontSize: 13, TextColor: #4ade80, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Sounds: $C.@ButtonSounds,
          );
        }
      }

      Group {
        Anchor: (Left: 0, Right: 0, Top: 10, Height: 124);
        LayoutMode: Top;
        Background: #ffffff(0.03);
        OutlineColor: #ffffff(0.04);
        OutlineSize: 1;
        Padding: (Left: 12, Right: 12, Top: 10, Bottom: 10);

        Label {
          Style: (FontSize: 15, RenderBold: true, TextColor: #f0f4f8);
          Text: "Exit Point (/purge stop)";
        }

        Label #ExitPointValue {
          Anchor: (Top: 8);
          Style: (FontSize: 13, TextColor: #9fb0ba);
          Text: "Not configured";
        }

        TextButton #SetExitButton {
          Anchor: (Top: 10, Width: 210, Height: 34);
          Text: "Set Here";
          Style: TextButtonStyle(
            Default: (Background: #14532d, LabelStyle: (FontSize: 13, TextColor: #4ade80, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Hovered: (Background: #166534, LabelStyle: (FontSize: 13, TextColor: #86efac, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Pressed: (Background: #0f3d22, LabelStyle: (FontSize: 13, TextColor: #4ade80, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }
  }
}

$C.@BackButton {}
