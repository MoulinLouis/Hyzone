$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #PartyMenuWindow {
    Anchor: (Width: 460, Height: 520);
    LayoutMode: Top;
    Background: #07101b(0.97);
    OutlineColor: #f8d25c(0.45);
    OutlineSize: 2;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 62);
      LayoutMode: Full;
      Background: #0f1f33;

      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 4);
        Background: #ffd44d;
      }

      Label #Title {
        Anchor: (Left: 24, Top: 18, Width: 300, Height: 30);
        Style: (FontSize: 22, TextColor: #f4f9ff, RenderBold: true);
        Text: "Purge";
      }

      TextButton #CloseButton {
        Anchor: (Right: 14, Top: 12, Width: 38, Height: 38);
        Text: "X";
        Style: TextButtonStyle(
          Default: (Background: #7a1f28, LabelStyle: (FontSize: 18, TextColor: #ffe8ea, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Hovered: (Background: #b32f3b, LabelStyle: (FontSize: 18, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Pressed: (Background: #5d1820, LabelStyle: (FontSize: 18, TextColor: #ffd8dc, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Sounds: $C.@ButtonSounds,
        );
      }
    }

    // === MAIN CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 20, Right: 20, Top: 16, Bottom: 16);

      // --- SOLO SECTION (visible when not in party) ---
      Group #SoloSection {
        Anchor: (Left: 0, Right: 0);
        LayoutMode: Top;

        Label {
          Style: (FontSize: 16, TextColor: #9fb0ba);
          Text: "Start a solo game or create a party.";
        }

        TextButton #PlaySoloButton {
          Anchor: (Left: 0, Right: 0, Top: 16, Height: 48);
          Text: "PLAY SOLO";
          Style: TextButtonStyle(
            Default: (Background: #1b5d2b, LabelStyle: (FontSize: 18, TextColor: #e8ffec, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Hovered: (Background: #2d9f49, LabelStyle: (FontSize: 18, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Pressed: (Background: #164a22, LabelStyle: (FontSize: 18, TextColor: #d8ffe0, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Sounds: $C.@ButtonSounds,
          );
        }

        TextButton #CreatePartyButton {
          Anchor: (Left: 0, Right: 0, Top: 10, Height: 48);
          Text: "CREATE PARTY";
          Style: TextButtonStyle(
            Default: (Background: #1a4a5a, LabelStyle: (FontSize: 18, TextColor: #d0f0ff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Hovered: (Background: #2a7a9a, LabelStyle: (FontSize: 18, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Pressed: (Background: #143a48, LabelStyle: (FontSize: 18, TextColor: #b0e0f0, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Sounds: $C.@ButtonSounds,
          );
        }
      }

      // --- INVITE SECTION (visible when has pending invite, not in party) ---
      Group #InviteSection {
        Anchor: (Left: 0, Right: 0);
        LayoutMode: Top;
        Visible: false;

        Label {
          Anchor: (Top: 8);
          Style: (FontSize: 16, TextColor: #9fb0ba);
          Text: "You have a party invitation!";
        }

        Group #InviteInfoRow {
          Anchor: (Left: 0, Right: 0, Top: 12, Height: 36);
          LayoutMode: Left;

          Label {
            Style: (FontSize: 15, TextColor: #d5e6ff);
            Text: "From: ";
          }

          Label #InviterName {
            Style: (FontSize: 15, TextColor: #ffd44d, RenderBold: true);
            Text: "";
          }
        }

        Group #InviteButtonRow {
          Anchor: (Left: 0, Right: 0, Top: 8, Height: 44);
          LayoutMode: Left;

          TextButton #AcceptInviteButton {
            Anchor: (Width: 195, Height: 44);
            Text: "ACCEPT";
            Style: TextButtonStyle(
              Default: (Background: #1b5d2b, LabelStyle: (FontSize: 16, TextColor: #e8ffec, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
              Hovered: (Background: #2d9f49, LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
              Pressed: (Background: #164a22, LabelStyle: (FontSize: 16, TextColor: #d8ffe0, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
              Sounds: $C.@ButtonSounds,
            );
          }

          TextButton #DeclineInviteButton {
            Anchor: (Left: 10, Width: 195, Height: 44);
            Text: "DECLINE";
            Style: TextButtonStyle(
              Default: (Background: #5a1a1a, LabelStyle: (FontSize: 16, TextColor: #ffd8dc, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
              Hovered: (Background: #8a2a2a, LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
              Pressed: (Background: #4a1414, LabelStyle: (FontSize: 16, TextColor: #ffc0c8, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
              Sounds: $C.@ButtonSounds,
            );
          }
        }
      }

      // --- PARTY SECTION (visible when in a party) ---
      Group #PartySection {
        Anchor: (Left: 0, Right: 0);
        FlexWeight: 1;
        LayoutMode: Top;
        Visible: false;

        // Party title with member count
        Label #PartyTitle {
          Style: (FontSize: 16, TextColor: #d5e6ff, RenderBold: true);
          Text: "Party (1/5)";
        }

        // Member list (scrollable)
        Group #MemberList {
          Anchor: (Left: 0, Right: 0, Top: 10);
          FlexWeight: 1;
          LayoutMode: Top;
        }

        TextButton #StartPartyButton {
          Anchor: (Left: 0, Right: 0, Top: 12, Height: 44);
          Text: "START PURGE";
          Style: TextButtonStyle(
            Default: (Background: #1b5d2b, LabelStyle: (FontSize: 16, TextColor: #e8ffec, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Hovered: (Background: #2d9f49, LabelStyle: (FontSize: 16, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Pressed: (Background: #164a22, LabelStyle: (FontSize: 16, TextColor: #d8ffe0, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Sounds: $C.@ButtonSounds,
          );
        }

        TextButton #ToggleInviteButton {
          Anchor: (Left: 0, Right: 0, Top: 8, Height: 38);
          Text: "INVITE PLAYERS";
          Style: TextButtonStyle(
            Default: (Background: #1a4a5a, LabelStyle: (FontSize: 15, TextColor: #d0f0ff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Hovered: (Background: #2a7a9a, LabelStyle: (FontSize: 15, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Pressed: (Background: #143a48, LabelStyle: (FontSize: 15, TextColor: #b0e0f0, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Sounds: $C.@ButtonSounds,
          );
        }

        // Non-leader waiting label
        Label #WaitingLabel {
          Anchor: (Top: 8);
          Style: (FontSize: 15, TextColor: #7a8fa0, HorizontalAlignment: Center);
          Text: "Waiting for the party leader to start...";
          Visible: false;
        }

        Group #InviteDrawer {
          Anchor: (Left: 0, Right: 0, Top: 10, Height: 190);
          LayoutMode: Top;
          Background: #0f1f33(0.92);
          Padding: (Left: 10, Right: 10, Top: 8, Bottom: 8);
          Visible: false;

          Label {
            Style: (FontSize: 14, TextColor: #d5e6ff, RenderBold: true);
            Text: "Invite players";
          }

          Group #SearchRow {
            Anchor: (Left: 0, Right: 0, Top: 6, Height: 30);
            LayoutMode: Left;

            Label {
              Anchor: (Width: 54, Height: 30);
              Style: (FontSize: 13, TextColor: #9fb0ba, VerticalAlignment: Center);
              Text: "Search:";
            }

            $C.@TextField #InviteSearchField {
              Anchor: (Height: 26, Top: 2);
              FlexWeight: 1;
              Style: (FontSize: 13, TextColor: #ffffff(0.85));
            }

            TextButton #ApplyInviteSearchButton {
              Anchor: (Left: 8, Width: 74, Height: 26, Top: 2);
              Text: "Apply";
              Style: TextButtonStyle(
                Default: (Background: #2b3f5d, LabelStyle: (FontSize: 13, TextColor: #d5e6ff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
                Hovered: (Background: #476995, LabelStyle: (FontSize: 13, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
                Pressed: (Background: #213149, LabelStyle: (FontSize: 13, TextColor: #d5e6ff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
                Sounds: $C.@ButtonSounds,
              );
            }
          }

          Label {
            Anchor: (Top: 4);
            Style: (FontSize: 11, TextColor: #7a8fa0);
            Text: "Type a name, then press Apply.";
          }

          Label #NoPlayersLabel {
            Anchor: (Top: 2);
            Style: (FontSize: 13, TextColor: #7a8fa0, HorizontalAlignment: Center);
            Text: "No players found.";
            Visible: false;
          }

          Group #InviteListContainer {
            Anchor: (Left: 0, Right: 0, Top: 4, Height: 96);
            LayoutMode: TopScrolling;
            Padding: (Left: 2, Right: 2);
            ScrollbarStyle: $C.@DefaultScrollbarStyle;

            Group #PlayerList {
              LayoutMode: Top;
            }
          }

          Label #InviteStatusLabel {
            Anchor: (Top: 4);
            Style: (FontSize: 12, TextColor: #9fb0ba, HorizontalAlignment: Center);
            Text: "";
            Visible: false;
          }
        }

        // Leave party button (all members)
        TextButton #LeavePartyButton {
          Anchor: (Left: 0, Right: 0, Top: 10, Height: 38);
          Text: "LEAVE PARTY";
          Style: TextButtonStyle(
            Default: (Background: #3a1a1a, LabelStyle: (FontSize: 14, TextColor: #ffd0d4, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Hovered: (Background: #5a2a2a, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Pressed: (Background: #2a1010, LabelStyle: (FontSize: 14, TextColor: #ffc0c8, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }
  }
}
