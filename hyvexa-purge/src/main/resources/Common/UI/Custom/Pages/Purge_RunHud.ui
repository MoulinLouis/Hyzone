$C = "../Common.ui";

$C.@PageOverlay {
  Background: #000000(0.0);
  Group #HudLayer {
    Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);

    Group #WaveStatusRow {
      Anchor: (Top: 30, Left: 0, Right: 0, Height: 80);
      LayoutMode: Left;
      Visible: false;

      Group { FlexWeight: 1; }

      Group #WaveStatusRoot {
        Anchor: (Width: 300, Height: 80);
        LayoutMode: Top;

        Label #WaveLabel {
          Anchor: (Height: 40);
          Style: (
            FontSize: 28,
            HorizontalAlignment: Center,
            RenderBold: true,
            TextColor: #e7f1f4
          );
          Text: "WAVE 1";
        }

        Label #ZombieCountLabel {
          Anchor: (Top: 4, Height: 24);
          Style: (
            FontSize: 16,
            HorizontalAlignment: Center,
            TextColor: #9fb0ba
          );
          Text: "Zombies: 0/5";
        }
      }

      Group { FlexWeight: 1; }
    }

    Group #RunHudRoot {
      Anchor: (Right: 20, Top: 400, Width: 284, Height: 406);
      LayoutMode: Left;

      Group #InfoAccentBar {
        Anchor: (Width: 4, Top: 0, Bottom: 0);
        Background: #4ade80;
      }

      Group #InfoBox {
        FlexWeight: 1;
        Anchor: (Top: 0, Bottom: 0);
        Background: #0d1620(0.95);
        OutlineColor: #ffffff(0.06);
        OutlineSize: 1;

        Group #InfoBoxFlow {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          LayoutMode: Top;

          Group #InfoImageBanner {
            Anchor: (Width: 200, Height: 94, Top: 18);
            Background: (TexturePath: "../Textures/logo_hyvexa.png");
          }

          Group #InfoContent {
            Anchor: (Left: 0, Right: 0);
            LayoutMode: Top;
            Padding: (Left: 14, Right: 14, Top: 12, Bottom: 14);

            Label #PlayerNameText {
              Style: (
                FontSize: 13,
                TextColor: #4ade80(0.7),
                RenderUppercase: true,
                LetterSpacing: 2,
                RenderBold: true
              );
              Text: "Purge";
            }

            Group #InfoSep {
              Anchor: (Left: 0, Width: 30, Height: 2, Top: 6);
              Background: #4ade80;
            }

            Label #InfoHintText {
              Anchor: (Top: 10, Left: 0, Right: 0);
              Style: (
                FontSize: 16,
                TextColor: #cfd7dc,
                Wrap: true
              );
              Text: "Zombie Survival - Survive the waves!";
            }

            Group #PlayerGemsRow {
              Anchor: (Left: 0, Right: 0, Top: 6, Height: 20);
              LayoutMode: Left;

              Group #GemIcon {
                Anchor: (Width: 16, Height: 16);
                Background: (TexturePath: "../Textures/gem.png");
              }
              Group { Anchor: (Width: 6); }
              Label #PlayerGemsValue {
                Style: (FontSize: 14, TextColor: #62d96b, RenderBold: true);
                Text: "0";
              }
            }

            Group #PlayerScrapRow {
              Anchor: (Left: 0, Right: 0, Top: 4, Height: 20);
              LayoutMode: Left;

              Group {
                Anchor: (Width: 16, Height: 16);
                Background: (TexturePath: "../Textures/scrap.png");
              }
              Group { Anchor: (Width: 6); }
              Label #PlayerScrapValue {
                Style: (FontSize: 14, TextColor: #f59e0b, RenderBold: true);
                Text: "0 scrap";
              }
            }

            Label #InfoIpText {
              Anchor: (Top: 6);
              Style: (
                FontSize: 16,
                TextColor: #4ade80(0.8),
                RenderBold: true
              );
              Text: "play.hyvexa.com (/vote)";
            }

            Group #InfoDivider {
              Anchor: (Left: 0, Right: 0, Height: 1, Top: 10);
              Background: #ffffff(0.06);
            }

            Label #InfoSupportTitle {
              Anchor: (Top: 10);
              Style: (
                FontSize: 15,
                TextColor: #ffd166,
                RenderBold: true
              );
              Text: "Support Hyvexa (/store)";
            }

            Group #InfoSupportRow1 {
              Anchor: (Left: 0, Right: 0, Top: 6, Height: 20);
              LayoutMode: Left;

              Group {
                Anchor: (Width: 18, Height: 18);
                Background: (TexturePath: "../Textures/star.png");
              }
              Group { Anchor: (Width: 6); }
              Label {
                Style: (FontSize: 16, TextColor: #e7f1f4);
                Text: "Exclusive Ranks";
              }
            }

            Group #InfoSupportRow2 {
              Anchor: (Left: 0, Right: 0, Top: 4, Height: 20);
              LayoutMode: Left;

              Group {
                Anchor: (Width: 18, Height: 18);
                Background: (TexturePath: "../Textures/storm.png");
              }
              Group { Anchor: (Width: 6); }
              Label {
                Style: (FontSize: 16, TextColor: #e7f1f4);
                Text: "Speed Boost";
              }
            }

            Label #InfoStoreLink {
              Anchor: (Top: 8, Left: 0, Right: 0);
              Style: (
                FontSize: 16,
                TextColor: #ffd166,
                RenderBold: true,
                HorizontalAlignment: Center
              );
              Text: "store.hyvexa.com";
            }
          }
        }

        Group #PlayerCountRow {
          Anchor: (Left: 0, Right: 0, Top: 8, Height: 20);
          LayoutMode: Right;
          Padding: (Right: 12);

          Label #PlayerCountText {
            Style: (
              FontSize: 14,
              TextColor: #8b9db0,
              RenderBold: true
            );
            Text: "0";
          }
          Group { Anchor: (Width: 4); }
          Group #PlayerCountIcon {
            Anchor: (Width: 14, Height: 14);
            Background: (TexturePath: "../Textures/user.png");
          }
        }
      }
    }
  }
}
