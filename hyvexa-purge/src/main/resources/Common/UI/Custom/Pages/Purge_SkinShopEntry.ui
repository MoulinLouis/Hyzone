$C = "../Common.ui";

Group {
  Anchor: (Left: 0, Right: 0, Height: 112, Top: 8);
  LayoutMode: Full;
  Background: #0d1a2e;
  OutlineColor: #ffffff(0.06);
  OutlineSize: 1;

  // Preview image area (left side) â€” one group per skin, toggled from Java
  Group #PreviewImage {
    Anchor: (Left: 6, Top: 6, Width: 222, Height: 98);
    LayoutMode: Full;
    Background: #182941;
    OutlineColor: #ffffff(0.08);
    OutlineSize: 1;

    Group #PrevAK47Asimov { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/AK47_Asimov_Preview.png"); Visible: false; }
    Group #PrevAK47Blossom { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/AK47_Blossom_Preview.png"); Visible: false; }
    Group #PrevAK47CyberpunkNeon { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/AK47_CyberpunkNeon_Preview.png"); Visible: false; }
    Group #PrevAK47FrozenVoltage { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/AK47_FrozenVoltage_Preview.png"); Visible: false; }
  }

  // Skin name (right of preview, top)
  Label #SkinName {
    Anchor: (Left: 240, Top: 14, Right: 12, Height: 22);
    Style: (FontSize: 17, TextColor: #f4f9ff, RenderBold: true);
    Text: "Skin Name";
  }

  // Price label (right of preview, below name)
  Label #SkinPrice {
    Anchor: (Left: 240, Top: 40, Width: 100, Height: 18);
    Style: (FontSize: 13, TextColor: #6b7c8a);
    Text: "";
  }

  // Buy button (shown when not owned, enough vexa)
  Group #BuyGroup {
    Anchor: (Right: 12, Bottom: 12, Width: 110, Height: 32);
    Visible: false;

    TextButton #BuyButton {
      Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
      Text: "Buy";
      Style: TextButtonStyle(
        Default: (
          Background: #22c55e(0.2),
          LabelStyle: (FontSize: 14, TextColor: #22c55e, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
        ),
        Hovered: (
          Background: #22c55e(0.35),
          LabelStyle: (FontSize: 14, TextColor: #4ade80, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
        ),
        Pressed: (
          Background: #22c55e(0.15),
          LabelStyle: (FontSize: 14, TextColor: #22c55e, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
        ),
        Sounds: $C.@ButtonSounds,
      );
    }
  }

  // Cannot afford label (shown when not owned, not enough vexa)
  Group #CantAffordGroup {
    Anchor: (Right: 12, Bottom: 12, Width: 130, Height: 32);
    Visible: false;

    Label #CantAffordLabel {
      Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
      Style: (FontSize: 12, TextColor: #ef4444, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true);
      Text: "NOT ENOUGH VEXA";
    }
  }

  // Select button (shown when owned, not selected)
  Group #SelectGroup {
    Anchor: (Right: 12, Bottom: 12, Width: 110, Height: 32);
    Visible: false;

    TextButton #SelectButton {
      Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
      Text: "Select";
      Style: TextButtonStyle(
        Default: (
          Background: #6366f1(0.2),
          LabelStyle: (FontSize: 14, TextColor: #a5b4fc, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
        ),
        Hovered: (
          Background: #6366f1(0.35),
          LabelStyle: (FontSize: 14, TextColor: #c7d2fe, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
        ),
        Pressed: (
          Background: #6366f1(0.15),
          LabelStyle: (FontSize: 14, TextColor: #a5b4fc, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
        ),
        Sounds: $C.@ButtonSounds,
      );
    }
  }

  // Selected indicator (shown when owned and selected)
  Group #SelectedGroup {
    Anchor: (Right: 12, Bottom: 12, Width: 110, Height: 32);
    Visible: false;

    Label #SelectedLabel {
      Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
      Style: (FontSize: 13, TextColor: #fbbf24, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true);
      Text: "SELECTED";
    }
  }

  // Selection highlight outline
  Group #EntrySelectedOverlay {
    Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
    OutlineColor: #fbbf24;
    OutlineSize: 2;
    Visible: false;
    HitTestVisible: false;
  }
}
