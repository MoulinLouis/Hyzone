$C = "../Common.ui";

Group {
  Anchor: (Width: 270, Height: 148, Top: 8, Left: 8);
  LayoutMode: Full;
  OutlineColor: #ffffff(0.06);
  OutlineSize: 1;

  // Preview image with gap
  Group #PreviewImage {
    Anchor: (Left: 10, Right: 10, Top: 18, Bottom: 18);
    LayoutMode: Full;
    Background: #07101b;

    Group #PrevAK47Default { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/AK47_Preview.png"); Visible: false; }
    Group #PrevAK47Asimov { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/AK47_Asimov_Preview.png"); Visible: false; }
    Group #PrevAK47Blossom { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/AK47_Blossom_Preview.png"); Visible: false; }
    Group #PrevAK47CyberpunkNeon { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/AK47_CyberpunkNeon_Preview.png"); Visible: false; }
    Group #PrevAK47FrozenVoltage { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/AK47_FrozenVoltage_Preview.png"); Visible: false; }
  }

  // Price - buyable (top right, green)
  Group #PriceBuyBadge {
    Anchor: (Right: 2, Top: 10, Width: 70, Height: 20);
    LayoutMode: Left;
    Visible: false;
    HitTestVisible: false;

    Group {
      Anchor: (Width: 16, Height: 16, Top: 2);
      Background: (TexturePath: "../Textures/vexa.png");
    }
    Group { Anchor: (Width: 4); }
    Label #BuyPriceLabel {
      Anchor: (Height: 20);
      Style: (FontSize: 15, TextColor: #22c55e, RenderBold: true, VerticalAlignment: Center);
      Text: "100";
    }
  }

  // Price - can't afford (top right, red)
  Group #PriceCantAffordBadge {
    Anchor: (Right: 2, Top: 10, Width: 70, Height: 20);
    LayoutMode: Left;
    Visible: false;
    HitTestVisible: false;

    Group {
      Anchor: (Width: 16, Height: 16, Top: 2);
      Background: (TexturePath: "../Textures/vexa.png");
    }
    Group { Anchor: (Width: 4); }
    Label #CantAffordPrice {
      Anchor: (Height: 20);
      Style: (FontSize: 15, TextColor: #ef4444, RenderBold: true, VerticalAlignment: Center);
      Text: "100";
    }
  }

  // Skin name (bottom left)
  Label #SkinName {
    Anchor: (Left: 14, Bottom: 8, Width: 200, Height: 22);
    Style: (FontSize: 16, TextColor: #cfd7dc, RenderBold: true, VerticalAlignment: Center);
    Text: "";
    HitTestVisible: false;
  }

  // Selected label (top right)
  Label #SelectedLabel {
    Anchor: (Right: 6, Top: 4, Width: 80, Height: 20);
    Style: (FontSize: 13, TextColor: #fbbf24, RenderBold: true, HorizontalAlignment: End, VerticalAlignment: Center);
    Text: "Selected";
    Visible: false;
    HitTestVisible: false;
  }

  // Selected overlay (amber border)
  Group #EntrySelectedOverlay {
    Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
    OutlineColor: #fbbf24;
    OutlineSize: 2;
    Visible: false;
    HitTestVisible: false;
  }

  // Clickable overlay with hover
  TextButton #ActionButton {
    Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
    Text: "";
    Style: TextButtonStyle(
      Default: (
        Background: #000000(0.01),
        LabelStyle: (FontSize: 1, TextColor: #000000(0.01), HorizontalAlignment: Center, VerticalAlignment: Center)
      ),
      Hovered: (
        Background: #ffffff(0.08),
        LabelStyle: (FontSize: 1, TextColor: #000000(0.01), HorizontalAlignment: Center, VerticalAlignment: Center)
      ),
      Pressed: (
        Background: #ffffff(0.03),
        LabelStyle: (FontSize: 1, TextColor: #000000(0.01), HorizontalAlignment: Center, VerticalAlignment: Center)
      ),
      Sounds: $C.@ButtonSounds,
    );
  }
}
