$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #SettingsWindow {
    Anchor: (Width: 420, Height: 440);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #a78bfa;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 300, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "Purge Settings";
      }

      Group {
        Anchor: (Right: 16, Top: 10, Width: 72, Height: 32);
        TextButton #BackButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "< Back";
          Style: TextButtonStyle(
            Default: (Background: #ffffff(0.06), LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Hovered: (Background: #ffffff(0.1), LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Pressed: (Background: #ffffff(0.04), LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 20, Right: 20, Top: 16, Bottom: 16);

      // --- Lootbox Drop Chance ---
      Label {
        Anchor: (Left: 0, Right: 0, Height: 20);
        Style: (FontSize: 14, TextColor: #9fb0ba);
        Text: "Lootbox Drop Chance";
      }

      Label {
        Anchor: (Left: 0, Right: 0, Height: 16, Top: 4);
        Style: (FontSize: 11, TextColor: #6b7280);
        Text: "Chance per zombie kill per alive player.";
      }

      Group #LootboxRow {
        Anchor: (Left: 0, Right: 0, Height: 40, Top: 10);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 44, Height: 36);
          TextButton #LootboxMinus {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "-";
            Style: TextButtonStyle(
              Default: (Background: #ffffff(0.06), LabelStyle: (FontSize: 18, TextColor: #f87171, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
              Hovered: (Background: #ffffff(0.1), LabelStyle: (FontSize: 18, TextColor: #fca5a5, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
              Pressed: (Background: #ffffff(0.03), LabelStyle: (FontSize: 18, TextColor: #f87171, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
              Sounds: $C.@ButtonSounds,
            );
          }
        }

        Group {
          Anchor: (Width: 80, Height: 36, Left: 8);
          Background: $C.@InputBoxBackground;

          Label #LootboxValue {
            Anchor: (Left: 0, Right: 0, Top: 8, Height: 20);
            Style: (FontSize: 16, TextColor: #f0f4f8, RenderBold: true, HorizontalAlignment: Center);
            Text: "5%";
          }
        }

        Group {
          Anchor: (Width: 44, Height: 36, Left: 8);
          TextButton #LootboxPlus {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "+";
            Style: TextButtonStyle(
              Default: (Background: #ffffff(0.06), LabelStyle: (FontSize: 18, TextColor: #4ade80, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
              Hovered: (Background: #ffffff(0.1), LabelStyle: (FontSize: 18, TextColor: #86efac, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
              Pressed: (Background: #ffffff(0.03), LabelStyle: (FontSize: 18, TextColor: #4ade80, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
              Sounds: $C.@ButtonSounds,
            );
          }
        }
      }

      // === SEPARATOR ===
      Group {
        Anchor: (Left: 0, Right: 0, Height: 1, Top: 20);
        Background: #ffffff(0.06);
      }

      // --- Reset Progress ---
      Label {
        Anchor: (Left: 0, Right: 0, Height: 20, Top: 20);
        Style: (FontSize: 14, TextColor: #f87171, RenderBold: true);
        Text: "Reset Progress";
      }

      Label {
        Anchor: (Left: 0, Right: 0, Height: 16, Top: 4);
        Style: (FontSize: 11, TextColor: #6b7280);
        Text: "Wipe all your purge data: scrap, weapons, upgrades, skins, stats.";
      }

      Label #ResetStatus {
        Anchor: (Left: 0, Right: 0, Height: 16, Top: 6);
        Style: (FontSize: 11, TextColor: #fbbf24);
        Text: "";
      }

      Group {
        Anchor: (Left: 0, Width: 180, Height: 36, Top: 8);
        TextButton #ResetButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "Reset My Progress";
          Style: TextButtonStyle(
            Default: (Background: #991b1b, LabelStyle: (FontSize: 13, TextColor: #fca5a5, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Hovered: (Background: #b91c1c, LabelStyle: (FontSize: 13, TextColor: #fef2f2, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Pressed: (Background: #7f1d1d, LabelStyle: (FontSize: 13, TextColor: #fca5a5, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }
  }
}
