$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #WeaponAdminWindow {
    Anchor: (Width: 720, Height: 560);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #f59e0b;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 400, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "Weapon Configuration";
      }

      TextButton #BackButton {
        Anchor: (Right: 12, Top: 12, Width: 28, Height: 28);
        Text: "X";
        Style: TextButtonStyle(
          Default: (Background: #3b1219, LabelStyle: (FontSize: 14, TextColor: #ef4444, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Hovered: (Background: #5c1d28, LabelStyle: (FontSize: 14, TextColor: #f87171, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Pressed: (Background: #2d0f14, LabelStyle: (FontSize: 14, TextColor: #ef4444, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Sounds: $C.@ButtonSounds,
        );
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 14, Right: 14, Top: 10, Bottom: 10);

      Label #WeaponSubtitle {
        Style: (FontSize: 14, TextColor: #9fb0ba);
        Text: "";
      }

      // === LOADOUT CONFIG ===
      Group #LoadoutConfig {
        Anchor: (Left: 0, Right: 0, Top: 8, Height: 40);
        LayoutMode: Left;
        Padding: (Left: 2, Top: 4);

        // Default Unlocked toggle
        TextButton #DefaultToggle {
          Anchor: (Width: 126, Height: 32);
          Text: "DEFAULT: OFF";
          Style: TextButtonStyle(
            Default: (Background: #1c2b3d, LabelStyle: (FontSize: 11, RenderBold: true, TextColor: #8b9bb0, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Hovered: (Background: #263b54, LabelStyle: (FontSize: 11, RenderBold: true, TextColor: #b0c4de, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Pressed: (Background: #162233, LabelStyle: (FontSize: 11, RenderBold: true, TextColor: #8b9bb0, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Sounds: $C.@ButtonSounds,
          );
        }

        // Session Weapon toggle
        TextButton #SessionToggle {
          Anchor: (Left: 6, Width: 146, Height: 32);
          Text: "SESSION WPN: OFF";
          Style: TextButtonStyle(
            Default: (Background: #1c2b3d, LabelStyle: (FontSize: 11, RenderBold: true, TextColor: #8b9bb0, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Hovered: (Background: #263b54, LabelStyle: (FontSize: 11, RenderBold: true, TextColor: #b0c4de, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Pressed: (Background: #162233, LabelStyle: (FontSize: 11, RenderBold: true, TextColor: #8b9bb0, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Sounds: $C.@ButtonSounds,
          );
        }

        // Unlock Cost label
        Label #UnlockCostLabel {
          Anchor: (Left: 14, Width: 56, Height: 32);
          Style: (FontSize: 12, TextColor: #8b9bb0, RenderBold: true, VerticalAlignment: Center);
          Text: "Unlock:";
        }

        // Unlock Cost minus
        TextButton #UnlockCostMinus {
          Anchor: (Width: 28, Height: 32);
          Text: "-";
          Style: TextButtonStyle(
            Default: (Background: #1c2b3d, LabelStyle: (FontSize: 14, RenderBold: true, TextColor: #ef4444, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Hovered: (Background: #263b54, LabelStyle: (FontSize: 14, RenderBold: true, TextColor: #f87171, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Pressed: (Background: #162233, LabelStyle: (FontSize: 14, RenderBold: true, TextColor: #ef4444, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Sounds: $C.@ButtonSounds,
          );
        }

        // Unlock Cost value
        Label #UnlockCostValue {
          Anchor: (Left: 4, Width: 52, Height: 32);
          Style: (FontSize: 13, TextColor: #fbbf24, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center);
          Text: "500";
        }

        // Unlock Cost plus
        TextButton #UnlockCostPlus {
          Anchor: (Width: 28, Height: 32);
          Text: "+";
          Style: TextButtonStyle(
            Default: (Background: #1c2b3d, LabelStyle: (FontSize: 14, RenderBold: true, TextColor: #4ade80, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Hovered: (Background: #263b54, LabelStyle: (FontSize: 14, RenderBold: true, TextColor: #86efac, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Pressed: (Background: #162233, LabelStyle: (FontSize: 14, RenderBold: true, TextColor: #4ade80, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Sounds: $C.@ButtonSounds,
          );
        }
      }

      Label #EmptyText {
        Style: (FontSize: 13, TextColor: #6b7b8a);
        Text: "";
      }

      Group #LevelCards {
        Anchor: (Left: 0, Right: 0, Top: 6);
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        ScrollbarStyle: $C.@DefaultScrollbarStyle;
      }
    }

    // === FOOTER ===
    Group #Footer {
      Anchor: (Left: 0, Right: 0, Height: 50);
      LayoutMode: Left;
      Padding: (Left: 14, Right: 14, Top: 8, Bottom: 8);

      TextButton #ResetButton {
        Anchor: (Width: 140, Height: 34);
        Text: "Reset Defaults";
        Style: TextButtonStyle(
          Default: (Background: #2a1f0a, LabelStyle: (FontSize: 13, RenderBold: true, TextColor: #fbbf24, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Hovered: (Background: #3d2e0f, LabelStyle: (FontSize: 13, RenderBold: true, TextColor: #fcd34d, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Pressed: (Background: #1f1707, LabelStyle: (FontSize: 13, RenderBold: true, TextColor: #fbbf24, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Sounds: $C.@ButtonSounds,
        );
      }
    }
  }
}
