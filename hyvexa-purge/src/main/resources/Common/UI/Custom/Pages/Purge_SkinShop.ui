$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #SkinShopWindow {
    Anchor: (Width: 600, Height: 580);
    LayoutMode: Top;
    Background: #07101b(0.97);
    OutlineColor: #ffffff(0.08);
    OutlineSize: 2;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 56);
      LayoutMode: Full;
      Background: #0f1f33;

      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 3);
        Background: #6366f1;
      }

      Label #Title {
        Anchor: (Left: 20, Top: 16, Width: 220, Height: 28);
        Style: (FontSize: 20, TextColor: #f4f9ff, RenderBold: true);
        Text: "Weapon Skins";
      }

      // Vexa balance
      Group #VexaGroup {
        Anchor: (Right: 96, Top: 14, Width: 160, Height: 34);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 28, Height: 28, Top: 3);
          Background: (TexturePath: "../Textures/vexa.png");
        }

        Label #VexaBalance {
          Anchor: (Left: 6, Width: 120, Height: 32);
          Style: (FontSize: 22, TextColor: #22c55e, RenderBold: true, VerticalAlignment: Center);
          Text: "0";
        }
      }

      TextButton #BackButton {
        Anchor: (Right: 14, Top: 14, Width: 80, Height: 32);
        Text: "< Back";
        Style: TextButtonStyle(
          Default: (
            Background: #ffffff(0.06),
            LabelStyle: (FontSize: 14, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
          ),
          Hovered: (
            Background: #ffffff(0.1),
            LabelStyle: (FontSize: 14, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
          ),
          Pressed: (
            Background: #ffffff(0.04),
            LabelStyle: (FontSize: 14, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
          ),
          Sounds: $C.@ButtonSounds,
        );
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: TopScrolling;
      Padding: (Left: 14, Right: 14, Top: 12, Bottom: 12);
      ScrollbarStyle: $C.@DefaultScrollbarStyle;

      // Subtitle (weapon name when viewing skins)
      Label #Subtitle {
        Anchor: (Left: 0, Right: 0, Height: 24);
        Style: (FontSize: 16, TextColor: #d5e6ff, RenderBold: true);
        Text: "Select a weapon";
        Visible: false;
      }

      // Weapon grid (shown in weapon selection mode)
      Group #WeaponGrid {
        Anchor: (Left: 0, Right: 0, Top: 8);
        LayoutMode: LeftCenterWrap;
      }

      // Skin list (shown when a weapon is selected)
      Group #SkinList {
        Anchor: (Left: 0, Right: 0, Top: 4);
        LayoutMode: LeftCenterWrap;
      }

    }

  }

  // === CONFIRM PURCHASE OVERLAY ===
  Group #ConfirmOverlay {
    Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
    Background: #000000(0.6);
    Visible: false;

    Group #ConfirmBox {
      Anchor: (Width: 280, Height: 190);
      LayoutMode: Top;
      Background: #0d1620;
      OutlineColor: #ffffff(0.1);
      OutlineSize: 1;

      Group {
        Anchor: (Left: 0, Right: 0, Height: 3);
        Background: #22c55e;
      }

      Label {
        Anchor: (Top: 18, Left: 0, Right: 0, Height: 24);
        Style: (FontSize: 18, TextColor: #f4f9ff, RenderBold: true, HorizontalAlignment: Center);
        Text: "Confirm Purchase";
      }

      Label #ConfirmSkinName {
        Anchor: (Top: 6, Left: 0, Right: 0, Height: 22);
        Style: (FontSize: 15, TextColor: #9fb0ba, HorizontalAlignment: Center);
        Text: "";
      }

      Group {
        Anchor: (Top: 8, Left: 0, Right: 0, Height: 26);
        LayoutMode: Left;

        Group { FlexWeight: 1; }
        Group {
          Anchor: (Width: 22, Height: 22, Top: 2);
          Background: (TexturePath: "../Textures/vexa.png");
        }
        Group { Anchor: (Width: 6); }
        Label #ConfirmPrice {
          Anchor: (Height: 26);
          Style: (FontSize: 20, TextColor: #22c55e, RenderBold: true, VerticalAlignment: Center);
          Text: "100";
        }
        Group { FlexWeight: 1; }
      }

      Group {
        Anchor: (Top: 18, Left: 0, Right: 0, Height: 36);
        LayoutMode: Left;
        Padding: (Left: 24, Right: 24);

        TextButton #CancelButton {
          Anchor: (Width: 100, Height: 36);
          Text: "Cancel";
          Style: TextButtonStyle(
            Default: (
              Background: #ffffff(0.06),
              LabelStyle: (FontSize: 14, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ffffff(0.12),
              LabelStyle: (FontSize: 14, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ffffff(0.04),
              LabelStyle: (FontSize: 14, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }

        Group { FlexWeight: 1; }

        TextButton #ConfirmButton {
          Anchor: (Width: 100, Height: 36);
          Text: "Buy";
          Style: TextButtonStyle(
            Default: (
              Background: #22c55e(0.2),
              LabelStyle: (FontSize: 14, TextColor: #22c55e, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
            ),
            Hovered: (
              Background: #22c55e(0.35),
              LabelStyle: (FontSize: 14, TextColor: #4ade80, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
            ),
            Pressed: (
              Background: #22c55e(0.15),
              LabelStyle: (FontSize: 14, TextColor: #22c55e, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }
  }
}
