$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #SkinShopWindow {
    Anchor: (Width: 600, Height: 580);
    LayoutMode: Top;
    Background: #07101b(0.97);
    OutlineColor: #ffffff(0.08);
    OutlineSize: 2;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 56);
      LayoutMode: Full;
      Background: #0f1f33;

      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 3);
        Background: #6366f1;
      }

      Label #Title {
        Anchor: (Left: 20, Top: 16, Width: 220, Height: 28);
        Style: (FontSize: 20, TextColor: #f4f9ff, RenderBold: true);
        Text: "Weapon Skins";
      }

      // Vexa balance
      Group {
        Anchor: (Right: 96, Top: 14, Width: 120, Height: 24);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 18, Height: 18, Top: 2);
          Background: (TexturePath: "../Textures/vexa.png");
        }

        Label #VexaBalance {
          Anchor: (Left: 4, Width: 90, Height: 22);
          Style: (FontSize: 16, TextColor: #22c55e, RenderBold: true, VerticalAlignment: Center);
          Text: "0";
        }
      }

      TextButton #CloseButton {
        Anchor: (Right: 14, Top: 10, Width: 72, Height: 32);
        Text: "Close";
        Style: TextButtonStyle(
          Default: (
            Background: #ffffff(0.06),
            LabelStyle: (FontSize: 14, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
          ),
          Hovered: (
            Background: #ffffff(0.1),
            LabelStyle: (FontSize: 14, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
          ),
          Pressed: (
            Background: #ffffff(0.04),
            LabelStyle: (FontSize: 14, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
          ),
          Sounds: $C.@ButtonSounds,
        );
      }
    }

    // === CONTENT ===
    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: TopScrolling;
      Padding: (Left: 14, Right: 14, Top: 12, Bottom: 12);
      ScrollbarStyle: $C.@DefaultScrollbarStyle;

      // Subtitle (weapon name when viewing skins)
      Label #Subtitle {
        Anchor: (Left: 0, Right: 0, Height: 24);
        Style: (FontSize: 16, TextColor: #d5e6ff, RenderBold: true);
        Text: "Select a weapon";
        Visible: false;
      }

      // Weapon grid (shown in weapon selection mode)
      Group #WeaponGrid {
        Anchor: (Left: 0, Right: 0, Top: 8);
        LayoutMode: LeftCenterWrap;
      }

      // Skin list (shown when a weapon is selected)
      Group #SkinList {
        Anchor: (Left: 0, Right: 0, Top: 4);
        LayoutMode: Top;
      }

      // Default skin option (shown at top of skin list)
      Group #DefaultSkinEntry {
        Anchor: (Left: 0, Right: 0, Height: 48, Top: 6);
        LayoutMode: Full;
        Background: #ffffff(0.03);
        OutlineColor: #ffffff(0.04);
        OutlineSize: 1;
        Visible: false;

        Label #DefaultSkinName {
          Anchor: (Left: 16, Top: 0, Bottom: 0, Width: 160);
          Style: (FontSize: 14, TextColor: #9fb0ba, VerticalAlignment: Center, RenderBold: true);
          Text: "Default";
        }

        // Selected indicator for default
        Group #DefaultSelectedGroup {
          Anchor: (Right: 12, Top: 10, Width: 96, Height: 28);
          Visible: false;

          TextButton #DefaultSelectedButton {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "SELECTED";
            Style: TextButtonStyle(
              Default: (
                Background: #f59e0b(0.2),
                LabelStyle: (FontSize: 12, TextColor: #fbbf24, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
              ),
              Hovered: (
                Background: #f59e0b(0.2),
                LabelStyle: (FontSize: 12, TextColor: #fbbf24, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
              ),
              Pressed: (
                Background: #f59e0b(0.2),
                LabelStyle: (FontSize: 12, TextColor: #fbbf24, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
              ),
              Sounds: $C.@ButtonSounds,
            );
          }
        }

        // Select button for default
        Group #DefaultSelectGroup {
          Anchor: (Right: 12, Top: 10, Width: 96, Height: 28);
          Visible: false;

          TextButton #DefaultSelectButton {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            Text: "Select";
            Style: TextButtonStyle(
              Default: (
                Background: #6366f1(0.2),
                LabelStyle: (FontSize: 12, TextColor: #a5b4fc, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
              ),
              Hovered: (
                Background: #6366f1(0.35),
                LabelStyle: (FontSize: 12, TextColor: #c7d2fe, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
              ),
              Pressed: (
                Background: #6366f1(0.15),
                LabelStyle: (FontSize: 12, TextColor: #a5b4fc, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true)
              ),
              Sounds: $C.@ButtonSounds,
            );
          }
        }
      }
    }

    // === BACK BUTTON (shown when viewing skins for a weapon) ===
    Group #BackBar {
      Anchor: (Left: 0, Right: 0, Height: 44);
      LayoutMode: Full;
      Background: #0f1f33;
      Visible: false;

      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 1);
        Background: #ffffff(0.08);
      }

      TextButton #BackButton {
        Anchor: (Left: 14, Top: 8, Width: 80, Height: 30);
        Text: "< Back";
        Style: TextButtonStyle(
          Default: (
            Background: #ffffff(0.06),
            LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
          ),
          Hovered: (
            Background: #ffffff(0.1),
            LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)
          ),
          Pressed: (
            Background: #ffffff(0.04),
            LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)
          ),
          Sounds: $C.@ButtonSounds,
        );
      }
    }
  }
}
