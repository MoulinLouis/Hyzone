$C = "../Common.ui";

Group {
  LayoutMode: Top;
  Anchor: (Left: 2, Right: 2, Bottom: 6, Width: 668);
  Background: $C.@InputBoxBackground;
  Padding: (Left: 10, Right: 8, Top: 8, Bottom: 8);

  Group {
    LayoutMode: Left;
    Anchor: (Left: 0, Right: 0, Height: 28);

    Label #WaveLabel {
      Anchor: (Width: 84);
      Style: (FontSize: 14, RenderBold: true, TextColor: #93844c, VerticalAlignment: Center);
      Text: "Wave 1";
    }

    Label #TotalLabel {
      Anchor: (Width: 70);
      Style: (FontSize: 13, TextColor: #cfd7dc, VerticalAlignment: Center);
      Text: "Total: 0";
    }

    Group {
      FlexWeight: 1;
    }

    TextButton #DeleteButton {
      Anchor: (Width: 32, Height: 28);
      Text: "X";
      Style: TextButtonStyle(
        Default: (Background: #3b1219, LabelStyle: (FontSize: 14, TextColor: #ef4444, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
        Hovered: (Background: #5c1d28, LabelStyle: (FontSize: 14, TextColor: #f87171, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
        Pressed: (Background: #2d0f14, LabelStyle: (FontSize: 14, TextColor: #ef4444, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
        Sounds: $C.@ButtonSounds,
      );
    }
  }

  // Dynamic variant rows container
  Group #VariantRows {
    LayoutMode: Top;
    Anchor: (Left: 0, Right: 0, Top: 2);
    Padding: (Left: 154);
  }

  // Spawn pacing row
  Group {
    LayoutMode: Left;
    Anchor: (Left: 0, Right: 0, Height: 36, Top: 4);
    Padding: (Left: 154);

    Group {
      Anchor: (Width: 200);
      LayoutMode: Left;

      Label {
        Anchor: (Width: 48);
        Style: (FontSize: 13, TextColor: #fbbf24, VerticalAlignment: Center);
        Text: "Delay";
      }

      TextButton #DelayMinusButton {
        Anchor: (Width: 26, Height: 26);
        Text: "-";
        Style: TextButtonStyle(
          Default: (Background: #2a1f0a, LabelStyle: (FontSize: 15, RenderBold: true, TextColor: #fbbf24, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Hovered: (Background: #3d2e0f, LabelStyle: (FontSize: 15, RenderBold: true, TextColor: #fcd34d, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Pressed: (Background: #1f1707, LabelStyle: (FontSize: 15, RenderBold: true, TextColor: #fbbf24, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Sounds: $C.@ButtonSounds,
        );
      }

      Label #DelayValue {
        Anchor: (Width: 56);
        Style: (FontSize: 13, RenderBold: true, TextColor: #fef3c7, HorizontalAlignment: Center, VerticalAlignment: Center);
        Text: "500ms";
      }

      TextButton #DelayPlusButton {
        Anchor: (Width: 26, Height: 26);
        Text: "+";
        Style: TextButtonStyle(
          Default: (Background: #2a1f0a, LabelStyle: (FontSize: 15, RenderBold: true, TextColor: #fbbf24, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Hovered: (Background: #3d2e0f, LabelStyle: (FontSize: 15, RenderBold: true, TextColor: #fcd34d, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Pressed: (Background: #1f1707, LabelStyle: (FontSize: 15, RenderBold: true, TextColor: #fbbf24, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Sounds: $C.@ButtonSounds,
        );
      }
    }

    Group {
      Anchor: (Width: 186);
      LayoutMode: Left;

      Label {
        Anchor: (Width: 48);
        Style: (FontSize: 13, TextColor: #c4b5fd, VerticalAlignment: Center);
        Text: "Batch";
      }

      TextButton #BatchMinusButton {
        Anchor: (Width: 26, Height: 26);
        Text: "-";
        Style: TextButtonStyle(
          Default: (Background: #1e1541, LabelStyle: (FontSize: 15, RenderBold: true, TextColor: #c4b5fd, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Hovered: (Background: #2e2060, LabelStyle: (FontSize: 15, RenderBold: true, TextColor: #ddd6fe, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Pressed: (Background: #160f30, LabelStyle: (FontSize: 15, RenderBold: true, TextColor: #c4b5fd, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Sounds: $C.@ButtonSounds,
        );
      }

      Label #BatchValue {
        Anchor: (Width: 32);
        Style: (FontSize: 13, RenderBold: true, TextColor: #ede9fe, HorizontalAlignment: Center, VerticalAlignment: Center);
        Text: "5";
      }

      TextButton #BatchPlusButton {
        Anchor: (Width: 26, Height: 26);
        Text: "+";
        Style: TextButtonStyle(
          Default: (Background: #1e1541, LabelStyle: (FontSize: 15, RenderBold: true, TextColor: #c4b5fd, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Hovered: (Background: #2e2060, LabelStyle: (FontSize: 15, RenderBold: true, TextColor: #ddd6fe, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Pressed: (Background: #160f30, LabelStyle: (FontSize: 15, RenderBold: true, TextColor: #c4b5fd, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Sounds: $C.@ButtonSounds,
        );
      }
    }
  }
}
