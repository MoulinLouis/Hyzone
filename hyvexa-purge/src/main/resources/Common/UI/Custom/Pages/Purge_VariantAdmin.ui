$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #VariantAdminWindow {
    Anchor: (Width: 700, Height: 560);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 52);
      LayoutMode: Full;
      Background: #0a1018;

      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #10b981;
      }

      Label {
        Anchor: (Left: 20, Top: 16, Width: 320, Height: 24);
        Style: (FontSize: 18, TextColor: #f0f4f8, RenderBold: true);
        Text: "Zombie Variants";
      }

      Group {
        Anchor: (Right: 16, Top: 10, Width: 72, Height: 32);
        TextButton #BackButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "< Back";
          Style: TextButtonStyle(
            Default: (Background: #ffffff(0.06), LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Hovered: (Background: #ffffff(0.1), LabelStyle: (FontSize: 13, TextColor: #f0f4f8, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Pressed: (Background: #ffffff(0.04), LabelStyle: (FontSize: 13, TextColor: #cfd7dc, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }

    Group #Content {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 8, Bottom: 12);

      Group {
        Anchor: (Left: 0, Right: 0, Height: 24);
        LayoutMode: Left;

        Label #VariantCount {
          Anchor: (Width: 260);
          Style: (FontSize: 14, TextColor: #9fb0ba);
          Text: "0 variants";
        }
      }

      Label #EmptyText {
        Anchor: (Top: 6, Height: 20);
        Style: (FontSize: 14, TextColor: #9fb0ba);
        Text: "";
      }

      Group #VariantList {
        Anchor: (Top: 8, Width: 676);
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        Padding: (Left: 4, Right: 4, Top: 2, Bottom: 2);
        ScrollbarStyle: $C.@DefaultScrollbarStyle;

        Group #VariantCards {
          LayoutMode: Top;
        }
      }

      Group {
        Anchor: (Top: 8, Left: 0, Right: 0, Height: 64);
        LayoutMode: Top;
        Padding: (Left: 4, Right: 4, Top: 4, Bottom: 4);
        Background: #0a1018(0.8);
        OutlineColor: #ffffff(0.04);
        OutlineSize: 1;

        Label #EditingVariantText {
          Anchor: (Height: 18);
          Style: (FontSize: 12, TextColor: #9fb0ba);
          Text: "Select a variant below, then edit and save its name.";
        }

        Group {
          Anchor: (Top: 4, Left: 0, Right: 0, Height: 28);
          LayoutMode: Left;

          $C.@TextField #VariantNameField {
            Anchor: (Height: 26);
            FlexWeight: 1;
            Style: (FontSize: 14, TextColor: #ffffff(0.85));
          }

          Group {
            Anchor: (Width: 8);
          }

          TextButton #SaveVariantNameButton {
            Anchor: (Width: 130, Height: 26);
            Text: "Save Name";
            Style: TextButtonStyle(
              Default: (Background: #143042, LabelStyle: (FontSize: 12, TextColor: #7dd3fc, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
              Hovered: (Background: #1d4359, LabelStyle: (FontSize: 12, TextColor: #bae6fd, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
              Pressed: (Background: #102734, LabelStyle: (FontSize: 12, TextColor: #7dd3fc, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
              Sounds: $C.@ButtonSounds,
            );
          }
        }
      }

      Group {
        Anchor: (Top: 8, Height: 38, Left: 0, Right: 0);
        LayoutMode: Left;
        Padding: (Left: 2, Right: 2);

        TextButton #AddVariantButton {
          Anchor: (Width: 210, Height: 36);
          Text: "+ Add Variant";
          Style: TextButtonStyle(
            Default: (Background: #14532d, LabelStyle: (FontSize: 14, TextColor: #4ade80, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Hovered: (Background: #166534, LabelStyle: (FontSize: 14, TextColor: #86efac, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Pressed: (Background: #0f3d22, LabelStyle: (FontSize: 14, TextColor: #4ade80, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }
  }
}

$C.@BackButton {}
