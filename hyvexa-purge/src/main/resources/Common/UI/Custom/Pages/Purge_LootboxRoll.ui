$C = "../Common.ui";

$C.@PageOverlay {
  SceneBlur {}

  Group #LootboxWindow {
    Anchor: (Width: 420, Height: 300);
    LayoutMode: Top;
    Background: #0d1620(0.95);
    OutlineColor: #ffffff(0.06);
    OutlineSize: 1;

    // === HEADER ===
    Group #Header {
      Anchor: (Left: 0, Right: 0, Height: 44);
      LayoutMode: Full;
      Background: #0a1018;

      // Top accent line (amber)
      Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Height: 2);
        Background: #fbbf24;
      }

      Label {
        Anchor: (Left: 20, Top: 12, Width: 250, Height: 22);
        Style: (FontSize: 16, TextColor: #fbbf24, RenderBold: true);
        Text: "WEAPON LOOTBOX";
      }

      Label #TimerLabel {
        Anchor: (Right: 20, Top: 12, Width: 150, Height: 22);
        Style: (FontSize: 13, TextColor: #9fb0ba, HorizontalAlignment: End);
        Text: "10s remaining";
      }
    }

    // === WEAPON DISPLAY ===
    Group #WeaponDisplay {
      Anchor: (Left: 0, Right: 0);
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Left: 30, Right: 30, Top: 12, Bottom: 10);

      // Weapon icon (animated during spin)
      Group #IconContainer {
        Anchor: (Width: 100, Height: 100);
        LayoutMode: Full;
        Group #IconAK47 { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/AK47_icon.png"); Visible: false; }
        Group #IconBarret50 { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/Barret50_icon.png"); Visible: false; }
        Group #IconColtRevolver { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/ColtRevolver_icon.png"); Visible: false; }
        Group #IconDesertEagle { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/DesertEagle_icon.png"); Visible: false; }
        Group #IconDoubleBarrel { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/DoubleBarrel_icon.png"); Visible: false; }
        Group #IconFlamethrower { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/Flamethrower_icon.png"); Visible: false; }
        Group #IconGlock18 { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/Glock18_icon.png"); Visible: false; }
        Group #IconM4A1s { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/M4A1s_icon.png"); Visible: false; }
        Group #IconMP9 { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/MP9_icon.png"); Visible: false; }
        Group #IconMac10 { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/Mac10_icon.png"); Visible: false; }
        Group #IconThompson { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/Thompson_icon.png"); Visible: false; }
      }

      // Weapon name (rolls with icon, turns amber on final result)
      Label #WeaponName {
        Anchor: (Left: 0, Right: 0, Height: 24, Top: 6);
        Style: (FontSize: 16, TextColor: #9fb0ba, RenderBold: true, HorizontalAlignment: Center);
        Text: "";
      }

      // Star display row
      Group #StarRow {
        Anchor: (Width: 122, Height: 22, Top: 8);
        LayoutMode: Left;

        Group {
          Anchor: (Width: 22, Height: 22);
          LayoutMode: Full;
          Group #S0F { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/star.png"); Visible: false; }
          Group #S0H { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/half_star.png"); Visible: false; }
          Group #S0E { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/empty_star.png"); }
        }

        Group {
          Anchor: (Left: 3, Width: 22, Height: 22);
          LayoutMode: Full;
          Group #S1F { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/star.png"); Visible: false; }
          Group #S1H { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/half_star.png"); Visible: false; }
          Group #S1E { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/empty_star.png"); }
        }

        Group {
          Anchor: (Left: 3, Width: 22, Height: 22);
          LayoutMode: Full;
          Group #S2F { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/star.png"); Visible: false; }
          Group #S2H { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/half_star.png"); Visible: false; }
          Group #S2E { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/empty_star.png"); }
        }

        Group {
          Anchor: (Left: 3, Width: 22, Height: 22);
          LayoutMode: Full;
          Group #S3F { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/star.png"); Visible: false; }
          Group #S3H { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/half_star.png"); Visible: false; }
          Group #S3E { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/empty_star.png"); }
        }

        Group {
          Anchor: (Left: 3, Width: 22, Height: 22);
          LayoutMode: Full;
          Group #S4F { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/star.png"); Visible: false; }
          Group #S4H { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/half_star.png"); Visible: false; }
          Group #S4E { Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0); Background: (TexturePath: "../Textures/empty_star.png"); }
        }
      }

      // Damage display
      Label #DamageLabel {
        Anchor: (Left: 0, Right: 0, Height: 22, Top: 8);
        Style: (FontSize: 14, TextColor: #9fb0ba, HorizontalAlignment: Center);
        Text: "";
      }
    }

    // === BUTTON ROW ===
    Group #ButtonRow {
      Anchor: (Left: 0, Right: 0, Height: 56);
      LayoutMode: Left;
      Padding: (Left: 20, Right: 20, Top: 8, Bottom: 14);

      // Accept button (hidden until spin completes)
      Group #AcceptButtonWrap {
        FlexWeight: 1;
        Anchor: (Top: 0, Bottom: 0, Right: 8);

        TextButton #AcceptButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "ACCEPT";
          Visible: false;
          Style: TextButtonStyle(
            Default: (
              Background: #166534,
              LabelStyle: (FontSize: 14, TextColor: #bbf7d0, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #15803d,
              LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #14532d,
              LabelStyle: (FontSize: 14, TextColor: #bbf7d0, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }

      // Decline button
      Group #DeclineButtonWrap {
        FlexWeight: 1;
        Anchor: (Top: 0, Bottom: 0);

        TextButton #DeclineButton {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          Text: "DECLINE";
          Style: TextButtonStyle(
            Default: (
              Background: #ffffff(0.06),
              LabelStyle: (FontSize: 14, TextColor: #9fb0ba, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Hovered: (
              Background: #ffffff(0.1),
              LabelStyle: (FontSize: 14, TextColor: #f0f4f8, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Pressed: (
              Background: #ffffff(0.04),
              LabelStyle: (FontSize: 14, TextColor: #9fb0ba, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
            ),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
    }
  }
}
